<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.KhachHoiVien.ucKhachHoiVien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:hethong="clr-namespace:QuanLiSanCauLong.LopTrinhBay.ManHinh.HeThong"
             d:DataContext="{d:DesignInstance Type=hethong:ucCauHinhHeThong}"
             mc:Ignorable="d"
             d:DesignHeight="760" d:DesignWidth="1080"
             Background="#F6FDF9">

    <!-- ===== Resources ===== -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColCard" Color="White"/>
        <SolidColorBrush x:Key="ColText" Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"  Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder" Color="#E1F0E9"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Check pill -->
        <Style x:Key="CheckPill" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#21382D"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="wrap" CornerRadius="16" Background="#EAF3EF" Padding="12,6">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border x:Name="dot" Width="16" Height="16" CornerRadius="8" Background="White" Margin="0,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="wrap" Property="Background" Value="#0FBF84"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="dot" Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="wrap" Property="Opacity" Value="0.95"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Badge -->
        <Style x:Key="TypeBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding LoaiKhach}" Value="Hội viên">
                    <Setter Property="Background" Value="#EAF3EF"/>
                    <Setter Property="BorderBrush" Value="#8BD9C0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Avatar -->
        <DataTemplate x:Key="AvatarTemplate">
            <Border Width="36" Height="36" CornerRadius="18" Background="#E6F9F2">
                <TextBlock Text="{Binding Initials}" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#0FBF84" FontWeight="Bold"/>
            </Border>
        </DataTemplate>

        <!-- Nút hành động trên header -->
        <!-- Nút hành động trên header (hover đậm hơn) -->
        <Style x:Key="HeaderBtn" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0FBF84"/>
            <!-- bình thường -->
            <Setter Property="BorderBrush" Value="#0D7049"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover: đậm hơn -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <!-- đậm hơn -->
                                <Setter TargetName="bd" Property="BorderBrush" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.3" Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Pressed: mờ nhẹ -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ===== ScrollViewer bao toàn bộ nội dung ===== -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  CanContentScroll="True">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- KPI -->
                <RowDefinition Height="Auto"/>
                <!-- Search -->
                <RowDefinition/>
                <!-- List -->
            </Grid.RowDefinitions>

            <!-- Header + nút Thêm hội viên cùng hàng -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
                <!-- Tiêu đề bên trái -->
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock Text="Quản lý khách hàng &amp; Hội viên"
                               Foreground="{StaticResource ColText}" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="Quản lý thông tin khách hàng, điểm thưởng và chương trình CRM"
                               Foreground="{StaticResource ColSub}"/>
                </StackPanel>

                <!-- Nút hành động bên phải -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button Style="{StaticResource HeaderBtn}"
                            
                            ToolTip="Thêm hội viên mới" Click="Button_Click_1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets"  Margin="0,0,0,0"/>
                            <TextBlock Text="Thêm hội viên" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>

            <!-- KPI cards -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,8">
                <Border Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Tổng khách hàng" Style="{StaticResource KpiTitle}"/>
                            <TextBlock Text="{Binding KpiTongKhach}" Style="{StaticResource KpiValue}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                            <TextBlock Text="👥" FontSize="20"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Hội viên" Style="{StaticResource KpiTitle}"/>
                            <TextBlock Text="{Binding KpiHoiVien}" Style="{StaticResource KpiValue}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                            <TextBlock Text="💚" FontSize="20"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Tổng điểm tích lũy" Style="{StaticResource KpiTitle}"/>
                            <TextBlock Text="{Binding KpiTongDiem}" Style="{StaticResource KpiValue}" Foreground="#F59E0B"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#FFF3E6" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                            <TextBlock Text="⭐" FontSize="20"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Khách hàng mới (tháng)" Style="{StaticResource KpiTitle}"/>
                            <TextBlock Text="{Binding KpiKhachMoiThang}" Style="{StaticResource KpiValue}" Foreground="#7C3AED"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#F5ECFF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                            <TextBlock Text="🆕" FontSize="20"/>
                        </Border>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- Search -->
            <Border Grid.Row="2" Style="{StaticResource Card}" Padding="12" Margin="8,0,8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Tìm kiếm khách hàng" Foreground="{StaticResource ColSub}" Margin="0,0,0,6"/>
                        <Border Background="#FFFFFF" CornerRadius="10"
                                BorderBrush="{StaticResource ColBorder}" BorderThickness="1" Padding="10">
                            <Grid>
                                <TextBox x:Name="txtSearch" BorderThickness="0" Height="32"
                                         VerticalContentAlignment="Center"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="Tìm theo tên, SĐT hoặc Email"/>
                                <!-- watermark + icon -->
                                <Grid IsHitTestVisible="False">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="&#xE721;" FontFamily="Segoe MDL2 Assets"
                                               Foreground="#9AA7A0" VerticalAlignment="Center" Margin="2,0,6,0"/>
                                    <TextBlock Grid.Column="1" Text="Tìm theo tên, SĐT hoặc Email..."
                                               Foreground="#9AA7A0" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <CheckBox Grid.Column="1" Content="Chỉ Hội viên" Margin="12,26,0,0"
                              VerticalAlignment="Top"
                              IsChecked="{Binding OnlyMembers}" Style="{StaticResource CheckPill}"/>
                </Grid>
            </Border>

            <!-- Danh sách khách hàng -->
            <Border Grid.Row="3" Style="{StaticResource Card}" Padding="0" Margin="8,4,8,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="16,16,16,8" Background="Transparent">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="28" Height="28" CornerRadius="14" Background="#E6F9F2" Margin="0,0,8,0">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Foreground="#0FBF84"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Danh sách khách hàng" FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Members}"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              RowHeight="56" GridLinesVisibility="None"
                              BorderThickness="0"
                              ScrollViewer.VerticalScrollBarVisibility="Disabled"
                              ScrollViewer.CanContentScroll="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Khách hàng" MinWidth="220">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <ContentControl ContentTemplate="{StaticResource AvatarTemplate}" Content="{Binding}" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Ten}" Foreground="{StaticResource ColText}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}" MinWidth="120"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" MinWidth="200"/>

                            <DataGridTemplateColumn Header="Loại KH" MinWidth="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TypeBadge}">
                                            <TextBlock Text="{Binding LoaiKhach}" VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Điểm TL" Binding="{Binding DiemTichLuy}" MinWidth="90"/>
                            <DataGridTextColumn Header="Lượt chơi" Binding="{Binding LuotChoi}" MinWidth="90"/>
                            <DataGridTextColumn Header="Tổng chi tiêu"
                                                Binding="{Binding TongChiTieu, StringFormat={}{0:#;0} đ}"
                                                MinWidth="130"/>
                            <DataGridTextColumn Header="Từ ngày"
                                                Binding="{Binding TuNgay, StringFormat={}{0:dd/MM/yyyy}}"
                                                MinWidth="110"/>

                            <DataGridTemplateColumn Header="Thao tác" MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Command="{Binding DataContext.CmdEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" ToolTip="Sửa"
                                                    Padding="8,4" Margin="0,0,6,0">
                                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                                            </Button>
                                            <Button Command="{Binding DataContext.CmdDelete, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" ToolTip="Xóa" Padding="8,4">
                                                <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
