<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.KhachHoiVien.ucKhachHoiVien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="760" d:DesignWidth="1080"
             Background="#F6FDF9">

    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColCard" Color="White"/>
        <SolidColorBrush x:Key="ColText" Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"  Color="#6B7E74"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tabs segmented container -->
        <Style x:Key="TabsContainer" TargetType="Border">
            <Setter Property="Background" Value="#EEF8F3"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <!-- Toggle Tab pill -->
        <Style x:Key="TabPill" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="16" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#0FBF84"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox pill “Chỉ Hội viên” -->
        <Style x:Key="CheckPill" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#21382D"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="wrap" CornerRadius="16" Background="#EAF3EF" Padding="12,6" SnapsToDevicePixels="True">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border x:Name="dot" Width="16" Height="16" CornerRadius="8" Background="White" Margin="0,0,8,0" />
                                <ContentPresenter VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="wrap" Property="Background" Value="#0FBF84"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="dot" Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="wrap" Property="Opacity" Value="0.95"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI icon badge -->
        <Style x:Key="IconPill" TargetType="Border">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,-6,-6,0"/>
        </Style>

        <!-- Badge Loại khách -->
        <Style x:Key="TypeBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding LoaiKhach}" Value="Hội viên">
                    <Setter Property="Background" Value="#EAF3EF"/>
                    <Setter Property="BorderBrush" Value="#8BD9C0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Avatar -->
        <DataTemplate x:Key="AvatarTemplate">
            <Border Width="36" Height="36" CornerRadius="18" Background="#E6F9F2">
                <TextBlock Text="{Binding Initials}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#0FBF84" FontWeight="Bold"/>
            </Border>
        </DataTemplate>

        <!-- Row card cho từng khách -->
        <Style x:Key="RowCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="BorderBrush" Value="#DDEEE7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Nút tròn hành động bên phải -->
        <Style x:Key="IconRoundBtn" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="18" Background="#0FBF84">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- View list -->
        <CollectionViewSource x:Key="cvsMembers" Source="{Binding Members}"/>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- KPI -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="Auto"/>
            <!-- DS + Tabs -->
            <RowDefinition/>
            <!-- Table -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Quản lý khách hàng &amp; Hội viên"
                           Foreground="{StaticResource ColText}" FontSize="22" FontWeight="Bold"/>
                <TextBlock Text="Quản lý thông tin khách hàng, điểm thưởng và chương trình CRM"
                           Foreground="{StaticResource ColSub}"/>
            </StackPanel>
        </DockPanel>

        <!-- KPI cards có icon -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,8">
            <!-- Tổng khách hàng -->
            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng khách hàng" Foreground="{StaticResource ColSub}" FontSize="14"/>
                        <TextBlock Text="{Binding KpiTongKhach}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColText}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="8" Margin="8,0,0,28">
                        <TextBlock Text="👥" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Hội viên -->
            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Hội viên" Foreground="{StaticResource ColSub}" FontSize="14"/>
                        <TextBlock Text="{Binding KpiHoiVien}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColText}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="8" Margin="8,0,0,28">
                        <TextBlock Text="💚" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Tổng điểm tích lũy -->
            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng điểm tích lũy" Foreground="{StaticResource ColSub}" FontSize="14"/>
                        <TextBlock Text="{Binding KpiTongDiem}" FontSize="24" FontWeight="Bold" Foreground="#F59E0B"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#FFF3E6" CornerRadius="12" Padding="8" Margin="8,0,0,28">
                        <TextBlock Text="⭐" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Khách hàng mới (tháng) -->
            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Khách hàng mới (tháng)" Foreground="{StaticResource ColSub}" FontSize="14"/>
                        <TextBlock Text="{Binding KpiKhachMoiThang}" FontSize="24" FontWeight="Bold" Foreground="#7C3AED"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#F5ECFF" CornerRadius="12" Padding="8" Margin="8,0,0,28">
                        <TextBlock Text="🆕" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Search -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBox x:Name="txtSearch" Height="38"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Tìm theo tên hoặc SĐT"/>
                    <!-- watermark -->
                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#9AA5A1"
                               IsHitTestVisible="False" Text="Tìm theo tên hoặc SĐT...">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <CheckBox Grid.Column="1" Content="Chỉ Hội viên" Margin="10,0,0,0"
                          IsChecked="{Binding OnlyMembers}" Style="{StaticResource CheckPill}"/>
            </Grid>
        </Border>

        <!-- Section: Danh sách khách hàng + Tabs (segmented) -->
        <Border Grid.Row="3" Style="{StaticResource Card}" Padding="16" Margin="8,8,8,4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header dòng 1 -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                    <Border Width="28" Height="28" CornerRadius="14" Background="#E6F9F2" Margin="0,0,8,0">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Foreground="#0FBF84"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Danh sách khách hàng" FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>
                </StackPanel>

                <!-- Tabs segment -->
                <Border Grid.Row="1" Style="{StaticResource TabsContainer}" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ToggleButton Content="{Binding TabAllTitle}"     IsChecked="{Binding TabAllChecked}"     Style="{StaticResource TabPill}"/>
                        <ToggleButton Content="{Binding TabMembersTitle}" IsChecked="{Binding TabMembersChecked}" Style="{StaticResource TabPill}"/>
                        <ToggleButton Content="{Binding TabWalkinTitle}"  IsChecked="{Binding TabWalkinChecked}"  Style="{StaticResource TabPill}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Danh sách khách hàng -->
        <Border Grid.Row="4" Style="{StaticResource Card}" Padding="0">
            <DataGrid ItemsSource="{Binding Source={StaticResource cvsMembers}}"
                      IsReadOnly="True"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      RowHeight="56" GridLinesVisibility="None"
                      BorderThickness="0">
                <DataGrid.Columns>
                    <!-- Khách hàng -->
                    <DataGridTemplateColumn Header="Khách hàng" MinWidth="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- sửa: đảm bảo ContentControl render đúng với DataContext -->
                                    <ContentControl ContentTemplate="{StaticResource AvatarTemplate}"
                                                    Content="{Binding}" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Ten}" Foreground="{StaticResource ColText}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- SĐT (cột riêng) -->
                    <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}" MinWidth="140"/>

                    <!-- Loại KH -->
                    <DataGridTemplateColumn Header="Loại KH" MinWidth="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TypeBadge}">
                                    <TextBlock Text="{Binding LoaiKhach}" VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Điểm tích lũy -->
                    <DataGridTextColumn Header="Điểm TL" Binding="{Binding DiemTichLuy}" MinWidth="90"/>

                    <!-- Lượt chơi -->
                    <DataGridTextColumn Header="Lượt chơi" Binding="{Binding LuotChoi}" MinWidth="90"/>

                    <!-- Tổng chi tiêu -->
                    <DataGridTextColumn Header="Tổng chi tiêu"
                                        Binding="{Binding TongChiTieu, StringFormat={}{0:#;0} đ}"
                                        MinWidth="130"/>

                    <!-- Ngày tham gia -->
                    <DataGridTextColumn Header="Từ ngày"
                                        Binding="{Binding TuNgay, StringFormat={}{0:dd/MM/yyyy}}"
                                        MinWidth="110"/>

                    <!-- Thao tác -->
                    <DataGridTemplateColumn Header="Thao tác" MinWidth="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Command="{Binding DataContext.CmdEdit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" ToolTip="Sửa"
                                            Padding="8,4" Margin="0,0,6,0">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                                    </Button>
                                    <Button Command="{Binding DataContext.CmdDelete, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" ToolTip="Xóa" Padding="8,4">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
