<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.KhachHoiVien.ucKhachHoiVien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="760" d:DesignWidth="1080"
             Background="#F6FDF9">

    <!-- ===== Resources ===== -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColCard"   Color="White"/>
        <SolidColorBrush x:Key="ColText"   Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"    Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder" Color="#E1F0E9"/>

        <!-- Accents -->
        <SolidColorBrush x:Key="ColAccent"       Color="#0FBF84"/>
        <SolidColorBrush x:Key="ColAccentDeep"   Color="#0DAA78"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Check pill -->
        <Style x:Key="CheckPill" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#21382D"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="wrap" CornerRadius="16" Background="#EAF3EF" Padding="12,6">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border x:Name="dot" Width="16" Height="16" CornerRadius="8" Background="White" Margin="0,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="wrap" Property="Background" Value="#0FBF84"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="dot" Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="wrap" Property="Opacity" Value="0.95"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Badge Loại KH -->
        <Style x:Key="TypeBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="6,1"/>
            <Setter Property="Background" Value="#EEF2F6"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="MinWidth" Value="70"/>
            <Style.Triggers>
                <!-- Hội viên -->
                <DataTrigger Binding="{Binding LoaiKhach}" Value="Hội viên">
                    <Setter Property="Background" Value="#0ea271"/>
                    <Setter Property="BorderBrush" Value="#10B981"/>
                </DataTrigger>
                <!-- Vãng lai -->
                <DataTrigger Binding="{Binding LoaiKhach}" Value="Vãng lai">
                    <Setter Property="Background" Value="#f6dd23"/>
                    <Setter Property="BorderBrush" Value="#F59E0B"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Avatar -->
        <DataTemplate x:Key="AvatarTemplate">
            <Border Width="36" Height="36" CornerRadius="18" Background="#E6F9F2" BorderBrush="#0FBF84" BorderThickness="1">
                <TextBlock Text="{Binding Initials}" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#0FBF84" FontWeight="Bold"/>
            </Border>
        </DataTemplate>

        <!-- Nút Header -->
        <Style x:Key="HeaderBtn" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource ColAccent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColAccentDeep}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource ColAccentDeep}"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource ColAccentDeep}"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.3" Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid styles -->
        <Style x:Key="DGHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E8FBF2"/>
            <Setter Property="BorderBrush" Value="#CDEFE3"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0D7049"/>
        </Style>

        <Style x:Key="DGRow" TargetType="DataGridRow">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Accent" Grid.Column="0" Background="Transparent"/>
                            <Border x:Name="Bg" Grid.Column="1" Background="{TemplateBinding Background}"/>
                            <DataGridCellsPresenter Grid.Column="1"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#F0FFF8"/>
                                <Setter TargetName="Accent" Property="Background" Value="#0FBF84"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#D7F6EA"/>
                                <Setter TargetName="Accent" Property="Background" Value="#0FBF84"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MoneyCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0D7049"/>
        </Style>
    </UserControl.Resources>

    <!-- ===== Body ===== -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" CanContentScroll="True">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock Text="Quản lý khách hàng &amp; Hội viên" Foreground="{StaticResource ColText}" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Quản lý thông tin khách hàng, điểm thưởng và chương trình CRM" FontWeight="SemiBold" Foreground="{StaticResource ColSub}"/>
                </StackPanel>
            </DockPanel>

            <!-- KPI -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,8">
                <Border Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Tổng khách hàng" Style="{StaticResource KpiTitle}"/>
                            <TextBlock x:Name="txtTongKhachHang" Text="{Binding KpiTongKhach}" Style="{StaticResource KpiValue}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                            <TextBlock Text="👥" FontSize="20"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Hội viên" Style="{StaticResource KpiTitle}"/>
                            <TextBlock x:Name="txtTongHoiVien" Text="{Binding KpiHoiVien}" Style="{StaticResource KpiValue}" Foreground="#0D7049"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                            <TextBlock Text="💚" FontSize="20"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Tổng điểm tích lũy" Style="{StaticResource KpiTitle}"/>
                            <TextBlock x:Name="txtTongDiem" Text="{Binding KpiTongDiem}" Style="{StaticResource KpiValue}" Foreground="#F59E0B"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#FFF3E6" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                            <TextBlock Text="⭐" FontSize="20"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Khách hàng mới (tháng)" Style="{StaticResource KpiTitle}"/>
                            <TextBlock Text="{Binding KpiKhachMoiThang}" Style="{StaticResource KpiValue}" Foreground="#7C3AED"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#F5ECFF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                            <TextBlock x:Name="txtTongKhachHangMoi" Text="🆕" FontSize="20"/>
                        </Border>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- Search -->
            <Border Grid.Row="2" Style="{StaticResource Card}" Padding="12" Margin="8,0,8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- BÊN TRÁI: label + kính lúp + textbox -->
                    <StackPanel Grid.Column="0">
                        <!-- Label + icon kính lúp -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">

                            <TextBlock Text="&#xE721;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="13"
                                       Foreground="{StaticResource ColSub}"
                                       VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Tìm kiếm khách hàng"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource ColSub}"
                                       Margin="6,0,0,0"/>


                        </StackPanel>

                        <!-- Ô tìm kiếm không còn icon bên trong -->
                        <Border Background="#FFFFFF"
                                CornerRadius="10"
                                BorderBrush="{StaticResource ColBorder}"
                                BorderThickness="1"
                                Padding="6">
                            <TextBox x:Name="txtSearch"
                                     BorderThickness="0"
                                     Height="26"
                                     VerticalContentAlignment="Center"
                                     TextChanged="txtSearch_TextChanged"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Tìm theo tên, SĐT hoặc Email"/>
                        </Border>
                    </StackPanel>

                    <!-- BÊN PHẢI: check Chỉ Hội viên -->
                    <CheckBox x:Name="chkOnlyMembers"
                              Grid.Column="1"
                              Content="Chỉ Hội viên"
                              Margin="12,26,0,0"
                              VerticalAlignment="Top"
                              Checked="chkOnlyMembers_Checked"
                              Unchecked="chkOnlyMembers_Unchecked"
                              Style="{StaticResource CheckPill}"/>
                </Grid>
            </Border>

            <!-- Danh sách khách hàng -->
            <Border Grid.Row="3" Style="{StaticResource Card}" Padding="0" Margin="8,4,8,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="16,16,16,8" Background="Transparent">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="28" Height="28" CornerRadius="14" Background="#E6F9F2" Margin="0,0,8,0" BorderBrush="#0FBF84" BorderThickness="1">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Foreground="#0FBF84"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Danh sách khách hàng" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="dgKhachHang"
                              Grid.Row="1"
                              ItemsSource="{Binding Members}"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              RowHeight="30"
                              GridLinesVisibility="None"
                              BorderThickness="0"
                              AlternatingRowBackground="#FAFEFD"
                              ColumnHeaderStyle="{StaticResource DGHeader}"
                              ColumnHeaderHeight="36"
                              ColumnWidth="SizeToHeader"
                              RowStyle="{StaticResource DGRow}"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              ScrollViewer.VerticalScrollBarVisibility="Disabled"
                              ScrollViewer.CanContentScroll="False">

                        <DataGrid.Columns>
                            <!-- Tên khách hàng -->
                            <DataGridTemplateColumn Header="Khách hàng" Width="1*" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Ten}"
                                                   Foreground="{StaticResource ColText}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Các cột auto theo nội dung -->
                            <DataGridTextColumn Header="SĐT" Width="SizeToCells" MinWidth="90"
                                                Binding="{Binding SDT}"/>

                            <DataGridTextColumn Header="SĐT phụ" Width="SizeToCells" MinWidth="90"
                                                Binding="{Binding SDTPhu}"/>

                            <DataGridTextColumn Header="Email" Width="1*" MinWidth="100"
                                                Binding="{Binding Email}"/>

                            <!-- Loại KH -->
                            <DataGridTemplateColumn Header="Loại KH" Width="SizeToCells" MinWidth="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TypeBadge}">
                                            <TextBlock Text="{Binding LoaiKhach}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#0F172A"
                                                       TextAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Số liệu căn phải gọn gàng -->
                            <DataGridTextColumn Header="Điểm TL" Width="SizeToCells" MinWidth="65"
                                                Binding="{Binding DiemTichLuy}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Lượt chơi" Width="SizeToCells" MinWidth="75"
                                                Binding="{Binding LuotChoi}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Tổng chi tiêu" Width="SizeToCells" MinWidth="100"
                                                Binding="{Binding TongChiTieu, StringFormat={}{0:N0} đ}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="#0D7049"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Từ ngày" Width="SizeToCells" MinWidth="100"
                                                Binding="{Binding TuNgay, StringFormat={}{0:dd/MM/yyyy}}"/>

                            <!-- Thao tác -->
                            <DataGridTemplateColumn Header="Thao tác" Width="SizeToCells" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button ToolTip="Sửa" Padding="8,4" Margin="0,0,6,0" Cursor="Hand"
                                                Click="btnSuaKhachHang"
                                                Tag="{Binding}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text=""/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
