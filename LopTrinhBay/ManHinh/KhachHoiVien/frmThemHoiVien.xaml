<Window x:Class="QuanLiSanCauLong.LopTrinhBay.KhachHoiVien.frmThemHoiVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm hội viên mới"
        Width="560" Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- ===== Palette ===== -->
        <SolidColorBrush x:Key="ColPrimary" Color="#2BB673"/>
        <SolidColorBrush x:Key="ColPrimaryHover" Color="#25A367"/>
        <SolidColorBrush x:Key="ColText" Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub" Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColStroke" Color="#DDE5E1"/>
        <SolidColorBrush x:Key="ColInputBg" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="ColDanger" Color="#C62828"/>

        <!-- ===== Label ===== -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="2,0,0,6"/>
        </Style>

        <!-- ===== TextBox rounded ===== -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="{StaticResource ColInputBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Buttons ===== -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnPrimary" BasedOn="{StaticResource BtnBase}" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource ColPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColPrimary}"/>
        </Style>

        <Style x:Key="BtnSecondary" BasedOn="{StaticResource BtnBase}" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColStroke}"/>
        </Style>

        <!-- Close button style -->
        <Style x:Key="BtnIcon" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <!-- ===== Dialog container (rounded + shadow) ===== -->
    <Border CornerRadius="14" Background="White" SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect Opacity="0.22" ShadowDepth="0" BlurRadius="24"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- header -->
                <RowDefinition Height="Auto"/>
                <!-- Tên -->
                <RowDefinition Height="Auto"/>
                <!-- SĐT -->
                <RowDefinition Height="*"/>
                <!-- lỗi -->
                <RowDefinition Height="Auto"/>
                <!-- buttons -->
            </Grid.RowDefinitions>

            <!-- ===== Header ===== -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Thêm hội viên mới"
                           FontSize="18"
                           FontWeight="Semibold"
                           Foreground="{StaticResource ColText}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1" Style="{StaticResource BtnIcon}" Click="OnClose">
                    <TextBlock Text="✕" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>

            <!-- ===== Tên hội viên ===== -->
            <StackPanel Grid.Row="1" Margin="0,16,0,10">
                <TextBlock Text="Tên hội viên" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtTen" Style="{StaticResource RoundedTextBox}" />
            </StackPanel>

            <!-- ===== Số điện thoại ===== -->
            <StackPanel Grid.Row="2" Margin="0,0,0,8">
                <TextBlock Text="Số điện thoại" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtSdt" Style="{StaticResource RoundedTextBox}" />
            </StackPanel>

            <!-- ===== Lỗi ===== -->
            <TextBlock x:Name="lblError"
                       Grid.Row="3"
                       Foreground="{StaticResource ColDanger}"
                       TextWrapping="Wrap"
                       Margin="2,6,2,0"/>

            <!-- ===== Buttons ===== -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                <Button Content="Hủy" Style="{StaticResource BtnSecondary}" Margin="0,0,12,0" Click="OnClose" IsCancel="True" Width="80"/>
                <Button Content="Thêm mới" Style="{StaticResource BtnPrimary}" Click="OnAddClick" IsDefault="True" Width="80"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
