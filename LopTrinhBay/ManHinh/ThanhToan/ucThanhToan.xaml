<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.ThanhToan.ucThanhToan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1080" d:DesignHeight="800"
             Background="#F6FDF9">

    <!-- ========= RESOURCES ========= -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColText"  Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"   Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColCard"  Color="White"/>
        <SolidColorBrush x:Key="ColLine"  Color="#E1F0E9"/>

        <!-- Card trắng + bóng nhẹ -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="12,0,12,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card KPI nổi bật -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Typography cho KPI -->
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Input bo góc -->
        <Style x:Key="RoundedInput" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button ghost -->
        <Style x:Key="GrayGhostButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FAFEFC"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#B9E6D1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button xanh -->
        <Style x:Key="BtnSolidGreenRounded" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2BB673"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.3" Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ========= LAYOUT ========= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="12,14,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Thanh toán &amp; Hóa đơn" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Xử lý tất toán và quản lý hóa đơn" Foreground="{StaticResource ColSub}"/>
            </StackPanel>
            <Button Grid.Column="1"
                    Style="{StaticResource GrayGhostButton}"
                    Click ="btnLichSuThanhToan_Click"
                    HorizontalAlignment="Right"
                    Padding="14,8"
                    Width="170">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                    <TextBlock Text="Lịch sử hóa đơn" FontSize="14"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- KPI -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="12,10,12,0">
            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng đơn tháng" Style="{StaticResource KpiTitle}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Tongdonthang}" Style="{StaticResource KpiValue}" Margin="0,0,6,0"/>
                            <TextBlock Foreground="{StaticResource ColSub}"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#FFF8E1" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🕒" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Doanh thu tháng" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding DoanhThuThangStr}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="💰" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Doanh thu hôm nay (Paid)" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding DoanhThuHomNayStr}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="💵" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Hóa đơn đã thanh toán hôm nay" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding SoHoaDonPaidHomNay}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#F5ECFF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🧾" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- ===== Main (1 cột) ===== -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="12,0,12,0">
            <StackPanel>

                <!-- Tạo hóa đơn mới (ĐÃ SỬA THEO ẢNH: nền xanh nhạt + 2 input) -->
                <Border Style="{StaticResource CardStyle}" Background="#EAF2FF" BorderBrush="#CFE1FF">
                    <StackPanel>
                        <TextBlock Text="Thông tin khách hàng" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="0,0,12,0">
                                <TextBlock Text="Tên khách hàng" Foreground="{StaticResource ColSub}"/>
                                <TextBox Text="{Binding TenKH}" Style="{StaticResource RoundedInput}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Số điện thoại" Foreground="{StaticResource ColSub}"/>
                                <TextBox Text="{Binding SDT}" Style="{StaticResource RoundedInput}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Chi tiết đặt sân (giữ nguyên) -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <DockPanel>
                            <TextBlock Text="Chi tiết đặt sân (đang chơi / đã hoàn tất)" FontWeight="SemiBold"/>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Width="331">
                                <CheckBox Content="Chọn tất cả"
                                          IsChecked="{Binding ChonTatCaChiTiet}"
                                          Command="{Binding ToggleChonTatCaCommand}"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <RadioButton Content="Thanh toán toàn bộ"
                                                 GroupName="PayMode" Margin="0,0,12,0"
                                                 IsChecked="{Binding IsThanhToanToanBo}"/>
                                    <RadioButton Content="Chỉ các dòng đã chọn"
                                                 GroupName="PayMode"
                                                 IsChecked="{Binding IsThanhToanChon}"/>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>

                        <DataGrid ItemsSource="{Binding ChiTietDatSanList}"
                                  AutoGenerateColumns="False" HeadersVisibility="Column"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  Margin="0,8,0,0" RowHeight="34"
                                  GridLinesVisibility="Horizontal"
                                  BorderBrush="{StaticResource ColLine}" BorderThickness="1">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="42">
                                    <DataGridTemplateColumn.Header>
                                        <TextBlock Text="#" HorizontalAlignment="Center"/>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Sân" Binding="{Binding San}" Width="*"/>
                                <DataGridTextColumn Header="Ngày" Binding="{Binding Ngay}" Width="120"/>
                                <DataGridTextColumn Header="Bắt đầu" Binding="{Binding GioBatDau}" Width="90"/>
                                <DataGridTextColumn Header="Kết thúc" Binding="{Binding GioKetThuc}" Width="90"/>
                                <DataGridTextColumn Header="Tiền" Binding="{Binding TienStr}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Thuê vợt (tối giản: SỐ LƯỢNG + ĐƠN GIÁ — GIỮ NGUYÊN) -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Thuê vợt" FontWeight="SemiBold" />
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Số lượng (Stepper) -->
                            <StackPanel>
                                <TextBlock Text="Số lượng vợt" Foreground="{StaticResource ColSub}"/>
                                <DockPanel Margin="0,6,0,0">
                                    <Button Style="{StaticResource GrayGhostButton}"
                                            Width="36" Height="36" Content="−"
                                            Command="{Binding GiamSoLuongVotCommand}"/>
                                    <TextBox Text="{Binding SoLuongVot, UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="True"
                                             HorizontalContentAlignment="Center"
                                             Width="70" Height="36" Margin="8,0,8,0"
                                             Style="{StaticResource RoundedInput}"/>
                                    <Button Style="{StaticResource GrayGhostButton}"
                                            Width="36" Height="36" Content="+"
                                            Command="{Binding TangSoLuongVotCommand}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- Đơn giá / cây -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Đơn giá / cây" Foreground="{StaticResource ColSub}"/>
                                <TextBox Text="{Binding DonGiaThueVot, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                                         Height="36" Style="{StaticResource RoundedInput}"
                                         ToolTip="VNĐ / cây"/>
                            </StackPanel>

                            <!-- Thành tiền -->
                            <Border Grid.Column="2" Background="#E8FFF4" CornerRadius="10" Padding="10"
                                    BorderBrush="{StaticResource ColLine}" BorderThickness="1" Margin="12,0,0,0" VerticalAlignment="Bottom">
                                <StackPanel>
                                    <TextBlock Text="Thành tiền" Foreground="{StaticResource ColSub}"/>
                                    <TextBlock Text="{Binding ThanhTienThueVotStr}" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <TextBlock Text="(*) Số lượng và đơn giá có thể đặt mặc định trong Cấu hình hệ thống."
                                   Foreground="{StaticResource ColSub}" FontSize="12" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Tổng cộng -->
                <Border Style="{StaticResource CardStyle}">
                    <DockPanel>
                        <TextBlock Text="Tổng cộng:" Foreground="{StaticResource ColSub}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TongThanhToanStr}" FontSize="22" FontWeight="Bold"
                                   DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="12,0,0,0"/>
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action buttons -->
        <Border Grid.Row="3" Margin="12" Style="{StaticResource CardStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource GrayGhostButton}"
                        Padding="20,12"
                        Command="{Binding CreateInvoiceCommand}"
                        Margin="0,0,12,0"
                        Width="120" Height="32">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                        <TextBlock Text="Tạo hóa đơn"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource BtnSolidGreenRounded}"
                        Command="{Binding PayNowCommand}"
                        Width="120" Height="32">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                        <TextBlock Text="Thanh toán"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="4" Margin="12" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Đã thanh toán gần đây" FontWeight="Bold" Margin="0,0,0,6"/>
                <ItemsControl ItemsSource="{Binding RecentPaid}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{StaticResource ColLine}" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,4,12,4">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding MaDisplay}" FontWeight="SemiBold" Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding TenKH}" Foreground="{StaticResource ColSub}" Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding TongStr}" FontWeight="Bold" Margin="0,0,12,0"/>
                                    <Border Background="#EAFBF2" Padding="6,2" CornerRadius="10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0" FontSize="12"/>
                                            <TextBlock Text="Đã thanh toán" FontSize="12"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
