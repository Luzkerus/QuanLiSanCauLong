<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.ThanhToan.ucThanhToan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1080" d:DesignHeight="800"
             Background="#F6FDF9">

    <!-- ========= RESOURCES ========= -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColText"  Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"   Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColCard"  Color="White"/>
        <SolidColorBrush x:Key="ColLine"  Color="#E1F0E9"/>

        <!-- Card trắng + bóng nhẹ -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="12,0,12,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card KPI nổi bật -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Typography cho KPI -->
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Input bo góc -->
        <Style x:Key="RoundedInput" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button ghost -->
        <Style x:Key="GrayGhostButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FAFEFC"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#B9E6D1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button xanh -->
        <Style x:Key="BtnSolidGreenRounded" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2BB673"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.3" Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ========= LAYOUT ========= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="12,14,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Thanh toán &amp; Hóa đơn" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Xử lý tất toán và quản lý hóa đơn" Foreground="{StaticResource ColSub}"/>
            </StackPanel>
            <Button Grid.Column="1"
                    Style="{StaticResource GrayGhostButton}"
                    Click ="btnLichSuThanhToan_Click"
                    HorizontalAlignment="Right"
                    Padding="14,8"
                    Width="170">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                    <TextBlock Text="Lịch sử hóa đơn" FontSize="14"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- KPI -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="12,10,12,0">
            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng đơn tháng" Style="{StaticResource KpiTitle}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Tongdonthang}" Style="{StaticResource KpiValue}" Margin="0,0,6,0"/>
                            <TextBlock Foreground="{StaticResource ColSub}"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#FFF8E1" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🕒" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Doanh thu tháng" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding DoanhThuThangStr}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="💰" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Doanh thu hôm nay (Paid)" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding DoanhThuHomNayStr}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="💵" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Hóa đơn đã thanh toán hôm nay" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding SoHoaDonPaidHomNay}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#F5ECFF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🧾" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- ===== Main (1 cột) ===== -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="12,23,12,-22" Grid.RowSpan="3">
            <StackPanel>

                <!-- Thông tin khách hàng (Tạo hóa đơn mới) -->
                <Border Style="{StaticResource CardStyle}" Background="#EAF2FF" BorderBrush="#CFE1FF">
                    <StackPanel>
                        <TextBlock Text="Thông tin khách hàng" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid Margin="0,4,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Số hóa đơn -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,6">
                                <TextBlock Text="Số hóa đơn" Foreground="{StaticResource ColSub}"/>
                                <TextBox x:Name="txtSoHoaDon"
                                         Style="{StaticResource RoundedInput}"
                                         IsReadOnly="True"
                                         Text="{Binding SoHoaDon}"/>
                            </StackPanel>

                            <!-- Tên khách hàng -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,6">
                                <TextBlock Text="Tên khách hàng" Foreground="{StaticResource ColSub}"/>
                                <TextBox x:Name="txtTenKH"
                                         Text="{Binding TenKH}"
                                         Style="{StaticResource RoundedInput}" />
                            </StackPanel>

                            <!-- Số điện thoại -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Số điện thoại" Foreground="{StaticResource ColSub}"/>
                                <TextBox x:Name="txtSDT"
                                         TextChanged="txtSDT_TextChanged"
                                         Text="{Binding SDT}"
                                         Style="{StaticResource RoundedInput}" />
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <TextBlock Text="Email" Foreground="{StaticResource ColSub}"/>
                                <TextBox x:Name="txtEmail"
                                         Text="{Binding Email}"
                                         Style="{StaticResource RoundedInput}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Chi tiết đặt sân -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <DockPanel>
                            <TextBlock Text="Chi tiết đặt sân (đang chơi / đã hoàn tất)" 
                                       FontWeight="SemiBold"
                                       DockPanel.Dock="Left"
                                       VerticalAlignment="Center"/>

                            <!-- Chọn tất cả đẩy sát lề phải -->
                            <CheckBox Content="Chọn tất cả"
                                      DockPanel.Dock="Right"
                                      HorizontalAlignment="Right"
                                      Margin="12,0,0,0"
                                      IsChecked="{Binding ChonTatCaChiTiet}"
                                      Command="{Binding ToggleChonTatCaCommand}"/>
                        </DockPanel>

                        <DataGrid ItemsSource="{Binding ChiTietDatSanList}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  RowEditEnding="DataGrid_RowEditEnding"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  Margin="0,8,0,0" RowHeight="34" x:Name="dataGridChuaThanhToan"
                                  GridLinesVisibility="Horizontal"
                                  BorderBrush="{StaticResource ColLine}" BorderThickness="1"
                                  HorizontalContentAlignment="Stretch">
                            <DataGrid.Columns>
                                <!-- Checkbox chọn dòng -->
                                <DataGridTemplateColumn Width="42">
                                    <DataGridTemplateColumn.Header>
                                        <CheckBox x:Name="chkSelectAll"
                                                  Content="#"
                                                  Checked="ChkSelectAll_Checked"
                                                  Unchecked="ChkSelectAll_Unchecked"/>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}"
                                                      Checked="Checkbox_Checked"
                                                      Unchecked="Checkbox_Unchecked"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Mã đặt sân (từ DatSan) -->
                                <DataGridTextColumn Header="Mã đặt"
                                                    Binding="{Binding MaDatSan}"
                                                    Width="80"/>

                                <DataGridTextColumn Header="Sân"
                                                    Binding="{Binding TenSanCached}"
                                                    Width="*"/>

                                <DataGridTextColumn Header="Ngày"
                                                    Binding="{Binding NgayDat, StringFormat={}{0:dd/MM/yyyy}}"
                                                    Width="110"/>

                                <DataGridTextColumn Header="Bắt đầu"
                                                    Binding="{Binding GioBatDau}"
                                                    Width="90"/>

                                <DataGridTextColumn Header="Kết thúc"
                                                    Binding="{Binding GioKetThuc}"
                                                    Width="90"/>
                                <!-- Đơn giá (ví dụ từ DatSan) -->
                                <DataGridTextColumn Header="Đơn giá"
                                    Binding="{Binding DonGiaHienThi}"
                                    Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <!-- Căn phải & canh đều với Thành tiền -->
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="TextAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>


                                <!-- Thành tiền định dạng đẹp -->
                                <DataGridTemplateColumn Header="Thành tiền" Width="130">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ThanhTien, StringFormat={}{0:N0} đ}"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Center"
                                                       FontWeight="SemiBold"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Tổng tiền sân -->
                        <Border Background="#E8FFF4"
                                CornerRadius="10"
                                Padding="10"
                                BorderBrush="{StaticResource ColLine}"
                                BorderThickness="1"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Tổng tiền sân:"
                                           Foreground="{StaticResource ColSub}"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtTongTienSan"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Margin="6,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Thuê vợt -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Thuê vợt" FontWeight="SemiBold" />
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Số lượng (Stepper) -->
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Số lượng vợt" Foreground="{StaticResource ColSub}"/>
                                <DockPanel Margin="0,6,0,0">
                                    <Button Style="{StaticResource GrayGhostButton}"
                                            Width="32" Height="32" Content="−"
                                            Command="{Binding GiamSoLuongVotCommand}"/>
                                    <TextBox Text="{Binding SoLuongVot, UpdateSourceTrigger=PropertyChanged, FallbackValue=0, TargetNullValue=0}"
                                             IsReadOnly="True"
                                             HorizontalContentAlignment="Center"
                                             Width="70" Height="32" Margin="8,0,8,0"
                                             Style="{StaticResource RoundedInput}"/>
                                    <Button Style="{StaticResource GrayGhostButton}"
                                            Width="32" Height="32" Content="+"
                                            Command="{Binding TangSoLuongVotCommand}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- Đơn giá / cây -->
                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="Đơn giá / cây" Foreground="{StaticResource ColSub}"/>
                                <TextBox Text="{Binding DonGiaThueVot, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}, FallbackValue=20000, TargetNullValue=20000}"
                                         Height="32" Style="{StaticResource RoundedInput}"
                                         ToolTip="VNĐ / cây (mặc định 20.000 đ)"/>
                            </StackPanel>

                            <!-- Thành tiền thuê vợt -->
                            <Border Grid.Column="2" Background="#E8FFF4" CornerRadius="10" Padding="10"
                                    BorderBrush="{StaticResource ColLine}" BorderThickness="1"
                                    VerticalAlignment="Center">
                                <StackPanel>
                                    <TextBlock Text="Thành tiền" Foreground="{StaticResource ColSub}"/>
                                    <TextBlock x:Name="txtTongTienThueVot"  FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <TextBlock Text="(*) Số lượng và đơn giá có thể đặt mặc định trong Cấu hình hệ thống."
                                   Foreground="{StaticResource ColSub}" FontSize="12" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Phương thức thanh toán + Tổng cộng (2 cột cùng hàng) -->
                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Phương thức thanh toán -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="0">
                        <StackPanel>
                            <TextBlock Text="Phương thức thanh toán" FontWeight="SemiBold"/>

                            <!-- ComboBox chọn phương thức -->
                            <ComboBox x:Name="cbPhuongThuc"
                                      SelectedIndex="0"
                                      Margin="0,8,0,0"
                                      Height="36">
                                <ComboBoxItem Content="Tiền mặt"/>
                                <ComboBoxItem Content="Momo"/>
                                <ComboBoxItem Content="Ngân hàng"/>
                            </ComboBox>

                            <!-- QR Payment / Thông tin ví dụ -->
                            <StackPanel x:Name="panelQR" Margin="0,12,0,0">
                                <TextBlock Text="Thông tin thanh toán" FontWeight="SemiBold" Margin="0,0,0,4"/>

                                <!-- Text thay đổi theo phương thức -->
                                <TextBlock Margin="0,0,0,4">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text"
                                                    Value="Vui lòng hướng dẫn khách thanh toán theo phương thức đã chọn."/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=cbPhuongThuc, Path=SelectedItem.Content}"
                                                             Value="Momo">
                                                    <Setter Property="Text"
                                                            Value="MoMo: 09xx xxx xxx (Tên chủ ví) — mã QR sẽ hiển thị trên màn hình và được in kèm hóa đơn."/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=cbPhuongThuc, Path=SelectedItem.Content}"
                                                             Value="Ngân hàng">
                                                    <Setter Property="Text"
                                                            Value="Chuyển khoản ngân hàng: STK / QR ngân hàng sẽ hiển thị và in trên hóa đơn."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Vùng preview QR -->
                                <Border Height="120"
                                        Margin="0,8,0,0"
                                        CornerRadius="10"
                                        BorderBrush="{StaticResource ColLine}"
                                        BorderThickness="1"
                                        Background="#FAFEFC"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="(Vùng preview QR thanh toán)"
                                               Margin="12"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource ColSub}"
                                               FontSize="12"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!-- Tổng cộng -->
                    <Border Style="{StaticResource CardStyle}" Grid.Column="1" Margin="12,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Tổng cộng" FontWeight="SemiBold"/>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Stretch">
                                <TextBlock Text="Tổng thanh toán:"
                                           Foreground="{StaticResource ColSub}"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtTongTien"
                                           Text=""
                                           FontSize="22"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Text="Đã bao gồm tiền sân, thuê vợt và nước uống (nếu có)."
                                       Foreground="{StaticResource ColSub}"
                                       FontSize="12"
                                       Margin="0,6,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Action buttons: Tạo hóa đơn + Thanh toán + Gửi cho khách -->
                <Border Margin="12" Style="{StaticResource CardStyle}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Tạo hóa đơn -->
                        <Button Style="{StaticResource GrayGhostButton}"
                                Padding="20,12"
                                Command="{Binding CreateInvoiceCommand}"
                                Margin="0,0,12,0"
                                Width="130" Height="32">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                                <TextBlock Text="Tạo hóa đơn"/>
                            </StackPanel>
                        </Button>

                        <!-- Thanh toán -->
                        <Button Style="{StaticResource BtnSolidGreenRounded}"
                                Command="{Binding PayNowCommand}"
                                Margin="0,0,12,0"
                                Width="130" Height="32">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                                <TextBlock Text="Thanh toán"/>
                            </StackPanel>
                        </Button>

                        <!-- Gửi cho khách hàng (Zalo / Email / SMS…) -->
                        <Button Style="{StaticResource GrayGhostButton}"
                                Padding="20,12"
                                Command="{Binding SendInvoiceToCustomerCommand}"
                                Width="150" Height="32">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                                <TextBlock Text="Gửi cho khách"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
