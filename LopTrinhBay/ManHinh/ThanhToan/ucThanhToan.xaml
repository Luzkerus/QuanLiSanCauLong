<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.ThanhToan.ucThanhToan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1080" d:DesignHeight="1000"
             Background="#F6FDF9">

    <!-- ========= RESOURCES ========= -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColText"  Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"   Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColCard"  Color="White"/>
        <SolidColorBrush x:Key="ColLine"  Color="#E1F0E9"/>

        <!-- Card trắng + bóng nhẹ -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="12,0,12,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card KPI nổi bật -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Typography cho KPI -->
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Input bo góc -->
        <Style x:Key="RoundedInput" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button ghost -->
        <Style x:Key="GrayGhostButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FAFEFC"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#B9E6D1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button xanh -->
        <Style x:Key="BtnSolidGreenRounded" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2BB673"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.3" Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Reset-->
        <Style x:Key="BtnReset" TargetType="Button">
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Tạo hóa đơn-->
        <Style x:Key="BtnInvoice" TargetType="Button">
            <Setter Property="Foreground" Value="#1E3A8A"/>
            <Setter Property="Background" Value="#DBEAFE"/>
            <Setter Property="BorderBrush" Value="#93C5FD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#BFDBFE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    </UserControl.Resources>

    <!-- ========= LAYOUT ========= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="12,14,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Thanh toán &amp; Hóa đơn" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Xử lý tất toán và quản lý hóa đơn" Foreground="{StaticResource ColSub}"/>
            </StackPanel>
            <Button Grid.Column="1"
                    Style="{StaticResource GrayGhostButton}"
                    Click ="btnLichSuThanhToan_Click"
                    HorizontalAlignment="Right"
                    Padding="14,8"
                    Width="170">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,8,0"/>
                    <TextBlock Text="Lịch sử hóa đơn" FontSize="14"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- KPI -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="12,10,12,0">
            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng đơn tháng" Style="{StaticResource KpiTitle}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtTongDonThang"  Style="{StaticResource KpiValue}" Margin="0,0,6,0"/>
                            <TextBlock Foreground="{StaticResource ColSub}"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#FFF8E1" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🕒" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Doanh thu tháng" Style="{StaticResource KpiTitle}"/>
                        <TextBlock x:Name="txtDoanhThuThang" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="💰" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Doanh thu hôm nay" Style="{StaticResource KpiTitle}"/>
                        <TextBlock x:Name="txtDoanhThuHomNay" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="💵" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Hóa đơn hôm nay" Style="{StaticResource KpiTitle}"/>
                        <TextBlock x:Name="txtSoHoaDonHomNay" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#F5ECFF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🧾" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- ===== Main (1 cột) ===== -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="12,0,12,0">
            <StackPanel>

                <!-- HÀNG ĐẦU: 3 CỘT = THÔNG TIN KH + TỔNG CỘNG + 3 NÚT -->
                <Grid Margin="0,16,12,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.1*" />
                        <ColumnDefinition Width="1.4*" />
                        <ColumnDefinition Width="1.2*" />
                    </Grid.ColumnDefinitions>

                    <!-- Cột 1: Thông tin khách hàng (card nhỏ lại) -->
                    <Border Grid.Column="0"
                            Style="{StaticResource CardStyle}"
                            Background="#EAF2FF"
                            BorderBrush="#CFE1FF"
                            CornerRadius="24"
                            Padding="16"
                            Margin="0,0,8,0">

                        <StackPanel>
                            <TextBlock Text="Thông tin khách hàng"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,8"
                                       Foreground="{StaticResource ColText}"/>

                            <!-- Số điện thoại -->
                            <TextBlock Text="Số điện thoại"
                                       Foreground="{StaticResource ColSub}"
                                       FontSize="12"/>
                            <TextBox x:Name="txtSDT"
                                     Style="{StaticResource RoundedInput}"
                                     Text="{Binding SDT}"
                                     TextChanged="txtSDT_TextChanged"
                                     Margin="0,2,0,8"/>

                            <!-- Tên khách hàng -->
                            <TextBlock Text="Tên khách hàng"
                                       Foreground="{StaticResource ColSub}"
                                       FontSize="12"/>
                            <TextBox x:Name="txtTenKH"
                                     Style="{StaticResource RoundedInput}"
                                     Text="{Binding TenKH}"
                                     Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Cột 2: Tổng cộng -->
                    <Border Grid.Column="1"
                            Style="{StaticResource CardStyle}"
                            CornerRadius="20"
                            Background="#F6FFFA"
                            Margin="12,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Tổng cộng"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Số tiền cần thanh toán"
                                       Foreground="{StaticResource ColSub}"
                                       FontSize="11"/>

                            <!-- Tổng tiền lớn -->
                            <TextBlock x:Name="txtTongTien"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="#0D7049"
                                       Margin="0,10,0,0"/>

                            <!-- Ghi chú nhỏ -->
                            <TextBlock Text="(Đã bao gồm tiền sân &amp; thuê vợt)"
                                       Foreground="{StaticResource ColSub}"
                                       FontSize="11"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Cột 3: 3 nút hành động -->
                    <Border Grid.Column="2"
                            Style="{StaticResource CardStyle}"
                            CornerRadius="20" Margin="27,0,0,0">
                        <StackPanel VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch">

                            <!-- Nút Reset -->
                            <Button Style="{StaticResource BtnReset}"
                                    Padding="14,8"
                                    Click="btnReset_Click"
                                    Margin="0,8,0,8"
                                    Height="36">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text=""
                                               Margin="0,0,6,0"/>
                                    <TextBlock Text="Reset"/>
                                </StackPanel>
                            </Button>

                            <!-- Nút Tạo hóa đơn -->
                            <Button Style="{StaticResource BtnInvoice}"
                                    Padding="14,8"
                                    Click="btnTaoHD_Click"
                                    x:Name="btnTaoHD"
                                    Margin="0,0,0,8"
                                    Height="36">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text=""
                                               Margin="0,0,6,0"/>
                                    <TextBlock Text="Tạo hóa đơn"/>
                                </StackPanel>
                            </Button>

                            <!-- Nút Thanh toán – giữ nguyên màu xanh -->
                            <Button Style="{StaticResource BtnSolidGreenRounded}"
                                    Click="btnThanhToan_Click"
                                    Height="38">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" Margin="0,0,6,0"/>
                                    <TextBlock Text="Thanh toán"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>
                    </Border>
                </Grid>

                <!-- KHỐI 2 CỘT: CHI TIẾT ĐẶT SÂN + (THUÊ VỢT, PHƯƠNG THỨC TT) -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- CHI TIẾT ĐẶT SÂN – card lớn bên trái -->
                    <Border Grid.Column="0"
                            Style="{StaticResource CardStyle}"
                            CornerRadius="24"
                            Margin="0,0,12,0">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="Chi tiết đặt sân"
                                           FontWeight="SemiBold"
                                           FontSize="15"/>
                                <TextBlock Text=" (đang chơi / đã hoàn tất)"
                                           Foreground="{StaticResource ColSub}"
                                           Margin="4,0,0,0"/>
                            </DockPanel>

                            <!-- ================= CHI TIẾT ĐẶT SÂN - UI ĐẸP & CĂN GỌN ================= -->
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- DATAGRID -->
                                <DataGrid x:Name="dataGridChuaThanhToan"
                                          Grid.Column="0"
                                          ItemsSource="{Binding ChiTietDatSanList}"
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          RowHeight="40"
                                          GridLinesVisibility="None"
                                          BorderThickness="1"
                                          BorderBrush="{StaticResource ColLine}"
                                          AlternatingRowBackground="#FAFEFD"
                                          ColumnHeaderHeight="38"
                                          Margin="0,0,12,0"
                                          HorizontalGridLinesBrush="#E8F2EF">

                                    <!-- Header style -->
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#E8FBF2"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#0D7049"/>
                                            <Setter Property="Padding" Value="10,4"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                            <Setter Property="BorderBrush" Value="#C3EEDC"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <!-- Row style -->
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F2FFFA"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.Columns>

                                        <!-- Checkbox chọn / chọn tất cả -->
                                        <DataGridTemplateColumn Width="45">
                                            <DataGridTemplateColumn.Header>
                                                <CheckBox x:Name="chkSelectAll"
                                                          VerticalAlignment="Center"
                                                          Checked="ChkSelectAll_Checked"
                                                          Unchecked="ChkSelectAll_Unchecked"/>
                                            </DataGridTemplateColumn.Header>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}"
                                                              VerticalAlignment="Center"
                                                              Checked="Checkbox_Checked"
                                                              Unchecked="Checkbox_Unchecked"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <!-- Sân -->
                                        <DataGridTextColumn Header="Sân"
                                                            Width="80"
                                                            Binding="{Binding TenSanCached}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Ngày -->
                                        <DataGridTextColumn Header="Ngày"
                                                            Width="110"
                                                            Binding="{Binding NgayDat, StringFormat={}{0:dd/MM/yyyy}}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Bắt đầu -->
                                        <DataGridTextColumn Header="Bắt đầu"
                                                            Width="90"
                                                            Binding="{Binding GioBatDau}"/>

                                        <!-- Kết thúc -->
                                        <DataGridTextColumn Header="Kết thúc"
                                                            Width="90"
                                                            Binding="{Binding GioKetThuc}"/>

                                        <!-- Thành tiền -->
                                        <DataGridTextColumn Header="Tiền"
                                                            Width="130"
                                                            Binding="{Binding ThanhTien, StringFormat={}{0:N0} đ}">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="Foreground" Value="#0D7049"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- TỔNG TIỀN – Fixed UI -->
                                <Border Grid.Column="1"
                                        Background="#E8FFF4"
                                        CornerRadius="14"
                                        Padding="12"
                                        BorderBrush="{StaticResource ColLine}"
                                        BorderThickness="1"
                                        VerticalAlignment="Bottom"
                                        MinWidth="140">
                                    <StackPanel>
                                        <TextBlock Text="Tổng tiền"
                                                   Foreground="{StaticResource ColSub}"
                                                   FontSize="13"/>
                                        <TextBlock x:Name="txtTongTienSan"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#0D7049"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- CỘT PHẢI: THUÊ VỢT + PHƯƠNG THỨC THANH TOÁN -->
                    <StackPanel Grid.Column="1" Margin="0,0,0,0">

                        <!-- THUÊ VỢT – Layout gọn, Thành tiền to rõ -->
                        <Border
                            Style="{StaticResource CardStyle}"
                            CornerRadius="20"
                            Margin="0,0,0,12"
                            HorizontalAlignment="Stretch">

                            <StackPanel>

                                <TextBlock Text="Thuê vợt"
                                           FontWeight="SemiBold"/>

                                <Grid Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.6*" />
                                        <!-- Số lượng -->
                                        <ColumnDefinition Width="1.2*" />
                                        <!-- Đơn giá -->
                                        <ColumnDefinition Width="1.2*" />
                                        <!-- Thành tiền -->
                                    </Grid.ColumnDefinitions>

                                    <!-- SỐ LƯỢNG VỢT -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Số lượng vợt"
                                                   Foreground="{StaticResource ColSub}" />

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,6,0,0"
                                                    VerticalAlignment="Center">

                                            <Button Style="{StaticResource GrayGhostButton}"
                                                    Width="32" Height="32"
                                                    Content="−"
                                                    Click="BtnGiamVot_Click"/>

                                            <TextBox x:Name="txtSoLuongVot"
                                                     Text="{Binding SoLuongVot, UpdateSourceTrigger=PropertyChanged}"
                                                     IsReadOnly="True"
                                                     Width="42" Height="32"
                                                     Margin="8,0,8,0"
                                                     HorizontalContentAlignment="Center"
                                                     BorderBrush="{StaticResource ColLine}"
                                                     BorderThickness="1"
                                                     Background="White"/>

                                            <Button Style="{StaticResource GrayGhostButton}"
                                                    Width="32" Height="32"
                                                    Content="+"
                                                    Click="BtnTangVot_Click"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- ĐƠN GIÁ -->
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <TextBlock Text="Đơn giá / cây"
                                                   Foreground="{StaticResource ColSub}" />
                                        <TextBox x:Name="txtDonGiaThueVot"
                                                 Height="34"
                                                 Margin="0,6,0,0"
                                                 Width="84"
                                                 HorizontalContentAlignment="Right"
                                                 Style="{StaticResource RoundedInput}"
                                                 TextChanged="txtDonGiaThueVot_TextChanged"
                                                 ToolTip="VNĐ / cây"/>
                                    </StackPanel>

                                    <!-- THÀNH TIỀN -->
                                    <Border Grid.Column="2"
                                            Background="#D6FFEA"
                                            CornerRadius="10"
                                            Padding="6"
                                            Margin="6,18,0,0"
                                            BorderBrush="#91D6B5"
                                            BorderThickness="1"
                                            VerticalAlignment="Top">
                                        <StackPanel>
                                            <TextBlock Text="Thành tiền"
                                                       Foreground="{StaticResource ColSub}" />

                                            <TextBlock x:Name="txtTongTienThueVot"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#0DAA78"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                </Grid>

                                <!-- Ghi chú -->
                                <TextBlock Text="(*) Số lượng và đơn giá có thể đặt mặc định trong Cấu hình hệ thống."
                                           Foreground="{StaticResource ColSub}"
                                           FontSize="12"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap"/>

                            </StackPanel>
                        </Border>

                        <!-- PHƯƠNG THỨC THANH TOÁN -->
                        <Border Grid.Row="1"
                                Style="{StaticResource CardStyle}"
                                CornerRadius="20"
                                Margin="0,0,0,12"
                                HorizontalAlignment="Stretch">
                            <StackPanel>
                                <TextBlock Text="Phương thức thanh toán"
                                           FontWeight="SemiBold"/>

                                <ComboBox x:Name="cbPhuongThuc"
                                          SelectedIndex="0"
                                          Margin="0,8,0,0"
                                          Height="36">
                                    <ComboBoxItem Content="Tiền mặt" FontSize="13" FontWeight="Bold"/>
                                    <ComboBoxItem Content="Momo" FontSize="13" FontWeight="Bold"/>
                                    <ComboBoxItem Content="Ngân hàng" FontSize="13" FontWeight="Bold"/>
                                </ComboBox>

                                <StackPanel x:Name="panelQR" Margin="0,12,0,0">
                                    <TextBlock Text="Quét mã để thanh toán"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,6"/>
                                    <!-- chỗ hiển thị mã QR -->
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>



            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
