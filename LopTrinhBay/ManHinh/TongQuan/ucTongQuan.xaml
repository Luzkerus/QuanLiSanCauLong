<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.TongQuan.ucTongQuan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1080"
             Background="#F6FDF9">

    <!-- =================== RESOURCES =================== -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColText"     Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"      Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder"   Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColCard"     Color="White"/>
        <SolidColorBrush x:Key="ColAccent"   Color="#2BB673"/>
        <SolidColorBrush x:Key="ColAccentDark" Color="#0D7049"/>

        <!-- Card thường (giữ để dùng chỗ khác) -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI CARD: giống ucThanhToan (shadow + scale on hover) -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorder}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Typography KPI -->
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Badge nhỏ -->
        <Style x:Key="Badge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Nút solid -->
        <Style x:Key="BtnSolid" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource ColAccent}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ColAccentDark}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Nút viền -->
        <Style x:Key="BtnOutline" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColAccent}"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAF6EF"/>
                    <Setter Property="BorderBrush" Value="#0D7049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Trạng thái sân -->
        <Style x:Key="TrangThaiBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>

            <Style.Triggers>
                <!-- Đang hoạt động / Đang chơi: xanh lá -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang hoạt động">
                    <Setter Property="Background" Value="#DFF7EA"/>
                    <Setter Property="BorderBrush" Value="#1E7F4C"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang chơi">
                    <Setter Property="Background" Value="#DFF7EA"/>
                    <Setter Property="BorderBrush" Value="#1E7F4C"/>
                </DataTrigger>

                <!-- Trống: xanh dương nhạt -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Trống">
                    <Setter Property="Background" Value="#EDF3FF"/>
                    <Setter Property="BorderBrush" Value="#3C5AA8"/>
                </DataTrigger>

                <!-- Đã đặt: cam -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Đã đặt">
                    <Setter Property="Background" Value="#FFF4E3"/>
                    <Setter Property="BorderBrush" Value="#B76B00"/>
                </DataTrigger>

                <!-- Bảo trì: đỏ, chữ nhật bo góc -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Bảo trì">
                    <Setter Property="Background" Value="#FFE5E5"/>
                    <Setter Property="BorderBrush" Value="#CC0000"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- PILL trạng thái đặt sân  -->
        <Style x:Key="TrangThaiPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="4,1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Background" Value="#E5F9F0"/>
            <!-- mặc định xanh nhạt -->
            <Setter Property="BorderBrush" Value="#86EFAC"/>
            <Setter Property="BorderThickness" Value="1"/>

            <Style.Triggers>

                <!-- ĐANG CHƠI – màu XANH -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang chơi">
                    <Setter Property="Background" Value="#D1F5D9"/>
                    <!-- xanh lá nhạt -->
                    <Setter Property="BorderBrush" Value="#27AE60"/>
                    <!-- viền xanh lá -->
                </DataTrigger>

                <!-- HOÀN THÀNH – xanh đậm -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Hoàn thành">
                    <Setter Property="Background" Value="#D7F6EA"/>
                    <Setter Property="BorderBrush" Value="#1E7F52"/>
                </DataTrigger>

                <!-- CHƯA BẮT ĐẦU – xanh dương nhạt -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Chưa bắt đầu">
                    <Setter Property="Background" Value="#E8ECFF"/>
                    <Setter Property="BorderBrush" Value="#4C67FF"/>
                </DataTrigger>

                <!-- ĐÃ HỦY – đỏ -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Đã hủy">
                    <Setter Property="Background" Value="#FF4D45"/>
                    <Setter Property="BorderBrush" Value="#FF4D4D"/>
                </DataTrigger>

            </Style.Triggers>
        </Style>



        <!-- DataGrid phẳng dùng cho 'Lịch đặt sân' -->
        <Style x:Key="FlatDataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="ColumnHeaderHeight" Value="32"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>

            <!-- Header -->
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F6F8F7"/>
                        <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                        <Setter Property="Padding" Value="8,0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Cell -->
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,0"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Row -->
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0FFFA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ==== STYLE DATAGRID GIỐNG UC DAT SAN ==== -->
        <Style x:Key="DGHeaderCenter" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E8FBF2"/>
            <Setter Property="BorderBrush" Value="#CDEFE3"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0D7049"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Cell padding rộng hơn một chút -->
        <Style x:Key="DGCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>


        <!-- Row DatSan: cao hơn 1 xíu, có viền accent bên trái -->
        <Style x:Key="DGRowDatSan" TargetType="DataGridRow">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- thanh màu bên trái -->
                            <Border x:Name="Accent" Grid.Column="0" Background="Transparent"/>

                            <!-- nền dòng -->
                            <Border x:Name="Bg" Grid.Column="1" Background="{TemplateBinding Background}"/>
                            <DataGridCellsPresenter Grid.Column="1"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#F0FFF8"/>
                                <Setter TargetName="Accent" Property="Background" Value="#0FBF84"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#D7F6EA"/>
                                <Setter TargetName="Accent" Property="Background" Value="#0FBF84"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card hover cho Top hội viên (nổi lên giống KPI) -->
        <Style x:Key="MemberCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#F6F8F7"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.10"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>



    </UserControl.Resources>

    <!-- =================== LAYOUT =================== -->
    <Grid Margin="16,10,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title + Buttons -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,12,0">
                <TextBlock Text="Tổng quan hệ thống" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColText}"/>
                <TextBlock Text="Chào mừng trở lại! Đây là tổng quan hoạt động hôm nay." FontWeight="SemiBold"
                           Foreground="{StaticResource ColSub}" FontSize="12"/>
            </StackPanel>

            <!-- Xuất báo cáo -->
            <Border Margin="0,0,10,0" CornerRadius="6"
                    Background="#E0E0E0" Cursor="Hand" Grid.Column="1">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#E0E0E0"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="0" Opacity="0"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EFECE3"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="6" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <!-- Đặt sân mới -->
            <Border Grid.Column="2"
                    x:Name="btnMoDatSan"
                    Cursor="Hand"
                    CornerRadius="8"
                    Background="#2BB673"
                    MouseLeftButtonUp="btnMoDatSan_MouseLeftButtonUp">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#2BB673"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Padding" Value="14,8"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0D7049"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="Đặt sân mới"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

        </Grid>

        <!-- Body -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- KPI 4 thẻ: áp dụng KpiCardStyle như ucThanhToan -->
                <UniformGrid Columns="3" Margin="0,0,0,0">
                    <!-- Doanh thu hôm nay -->
                    <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Doanh thu hôm nay" Style="{StaticResource KpiTitle}"/>
                                <TextBlock x:Name="txtDanhThuHomNay" Text="{Binding DoanhThuHomNay, StringFormat={}{0:N0}đ}" Style="{StaticResource KpiValue}"/>
                                <TextBlock x:Name="txtBienDongDoanhThu" Text="{Binding BienDongDoanhThu}" Foreground="#16A34A" Margin="0,6,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                                <TextBlock Text="💵" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Số lượt đặt sân -->
                    <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Số lượt đặt sân" Style="{StaticResource KpiTitle}"/>
                                <TextBlock x:Name="txtSoLuot" Style="{StaticResource KpiValue}"/>
                                <TextBlock x:Name="txtBienDongSoLuot" Text="{Binding BienDongLuotDat}" Foreground="#16A34A" Margin="0,6,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="1" Background="#FFF3E6" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                                <TextBlock Text="🗓️" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Hội viên mới -->
                    <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Hội viên mới" Style="{StaticResource KpiTitle}"/>
                                <TextBlock x:Name="txtHoiVienMoi" Style="{StaticResource KpiValue}"/>
                                <TextBlock x:Name="txtBienDongHoiVien" Foreground="#16A34A" Margin="0,6,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                                <TextBlock Text="👥" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Tỉ lệ lấp đầy -->
                </UniformGrid>

                <!-- Tình trạng sân + Lịch đặt sân (cột trái)  +  Top hội viên (cột phải) -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- ========== CỘT TRÁI: Tình trạng sân + Lịch đặt sân ========== -->
                    <StackPanel Grid.Column="0">

                        <!-- Tình trạng sân: card giống bên Quản lý sân -->
                        <Border Style="{StaticResource CardBorder}" Margin="8,0,8,8">
                            <StackPanel>
                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock Text="Tình trạng sân"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               DockPanel.Dock="Left"/>

                                </DockPanel>

                                <ItemsControl x:Name="dgTinhTrangSan">
                                    <!-- Card sân xếp theo WrapPanel -->
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource KpiCardStyle}"
                                                    Width="260"
                                                    Margin="6">
                                                <Border.Resources>
                                                    <!-- pill trạng thái tái dùng từ TrangThaiBorderStyle -->
                                                    <Style x:Key="TrangThaiPill"
                                                           TargetType="Border"
                                                           BasedOn="{StaticResource TrangThaiBorderStyle}">
                                                        <Setter Property="CornerRadius" Value="6"/>
                                                        <Setter Property="Padding" Value="6,2"/>
                                                    </Style>
                                                </Border.Resources>

                                                <StackPanel>
                                                    <!-- Icon + tên sân -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                        <Grid Width="28" Height="28" Margin="0,0,8,0">
                                                            <Ellipse>
                                                                <Ellipse.Fill>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                        <GradientStop Color="#F2C94C" Offset="0"/>
                                                                        <GradientStop Color="#E6A500" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Ellipse.Fill>
                                                            </Ellipse>
                                                            <TextBlock Text="🏸"
                                                                       FontSize="14"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>

                                                        <StackPanel>
                                                            <TextBlock Text="{Binding TenSan}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource ColText}"/>
                                                            <!-- Nếu không có mã sân thì sẽ để trống, không lỗi -->
                                                            <TextBlock Text="{Binding MaSan}"
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource ColSub}"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!-- trạng thái -->
                                                    <Border Style="{StaticResource TrangThaiPill}"
                                                            Margin="0,0,0,6">
                                                        <TextBlock Text="{Binding TrangThai}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>

                                                    <!-- Lịch bảo trì (nếu có) -->
                                                    <TextBlock Text="{Binding NgayBaoTri, StringFormat='Lịch bảo trì: {0:dd/MM/yyyy}'}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource ColSub}"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Lịch đặt sân gần đây: DataGrid phẳng -->
                        <Border Style="{StaticResource CardBorder}" Margin="8,0,8,0">
                            <StackPanel>
                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock Text="📅"
                                               DockPanel.Dock="Left"
                                               Margin="0,0,6,0"/>
                                    <TextBlock Text="Lịch đặt sân gần đây"
                                               FontWeight="SemiBold"/>
                                </DockPanel>

                                <DataGrid x:Name="dgLichDatGanDay"
                                          ItemsSource="{Binding}"
                                          IsReadOnly="True"
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="None"
                                          BorderThickness="0"
                                          AlternatingRowBackground="#FAFEFD"
                                          ColumnHeaderHeight="38"
                                          RowHeight="42"
                                          RowStyle="{StaticResource DGRowDatSan}"
                                          CellStyle="{StaticResource DGCell}"
                                          SelectionMode="Single"
                                          SelectionUnit="FullRow">

                                    <!-- Header giống ucDatSan, canh giữa -->
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader" 
                                               BasedOn="{StaticResource DGHeaderCenter}">
                                            <Setter Property="Padding" Value="10,8"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Sân"
                                                            Binding="{Binding TenSanCached}"
                                                            Width="60">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Khách hàng"
                                                            Binding="{Binding TenKH}"
                                                            Width="0.9*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ColText}"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Ngày đặt"
                                                            Binding="{Binding NgayDat, StringFormat={}{0:dd/MM/yyyy}}"
                                                            Width="0.7*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Bắt đầu"
                                                            Binding="{Binding GioBatDau}"
                                                            Width="0.6*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Kết thúc"
                                                            Binding="{Binding GioKetThuc}"
                                                            Width="0.6*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Trạng thái: dùng pill giống trạng thái sân -->
                                        <DataGridTemplateColumn Header="Trạng thái"
                                                                Width="0.9*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource TrangThaiPill}"
                                                            HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding TrangThai}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- ========== CỘT PHẢI: Top hội viên (một cột dài) ========== -->
                    <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="8,0,10,0">
                        <StackPanel>
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Text="⭐"
                                           DockPanel.Dock="Left"
                                           Margin="0,0,6,0"/>
                                <TextBlock Text="Top hội viên"
                                           FontWeight="SemiBold"/>
                            </DockPanel>

                            <ItemsControl x:Name="dgTopHoiVien">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Card hội viên: áp dụng hover scale & shadow -->
                                        <Border Style="{StaticResource MemberCardStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Avatar tròn dùng Ellipse + ImageBrush -->
                                                <Grid Grid.Column="0"
                                                      Width="40" Height="40"
                                                      VerticalAlignment="Center">
                                                    <Ellipse Stroke="#E1F0E9"
                                                             StrokeThickness="1">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="/LopTrinhBay/TaiNguyen/Logo/Khachhangg.png"
                                                                        Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                </Grid>



                                                <!-- Tên + lượt chơi -->
                                                <StackPanel Grid.Column="1"
                                                            Margin="10,0,8,0"
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Ten}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource ColText}"/>
                                                    <TextBlock Text="{Binding LuotChoi, StringFormat=' {0} lượt chơi'}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource ColSub}"/>
                                                </StackPanel>

                                                <!-- Điểm tích lũy -->
                                                <StackPanel Grid.Column="2"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DiemTichLuy, StringFormat=' {0} điểm'}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource ColAccent}"
                                                               FontSize="12"
                                                               HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>

                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                </Grid>




            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
