                            </Border>
                        </Popup>
                    </Grid>
                </StackPanel>

                <!-- Tổng tiền -->
                <Border Grid.Row="3" Grid.ColumnSpan="2" Margin="6,4,6,2" CornerRadius="12" Padding="12"
                        BorderBrush="{StaticResource ColBorder}" BorderThickness="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#F0FFF6" Offset="0"/>
                            <GradientStop Color="#FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tổng tiền dự kiến:" Foreground="{StaticResource ColSub}" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="120.000đ" Foreground="#15A06D" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer -->
            <Grid Grid.Row="2" Margin="6,12,6,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="8" Height="38" Background="#F3F5F4"
                        BorderBrush="#E7ECEA" BorderThickness="1" Cursor="Hand" Margin="0,0,8,0">
                    <TextBlock Text="Hủy" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4A5A55"/>
                </Border>

                <Border Grid.Column="1" CornerRadius="8" Height="38" Background="{StaticResource ColAccent}"
                        Cursor="Hand" Margin="8,0,0,0">
                    <TextBlock Text="Tạo đơn đặt" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontWeight="SemiBold"/>
