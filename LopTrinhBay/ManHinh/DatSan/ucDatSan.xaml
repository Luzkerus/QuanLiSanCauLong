<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.DatSan.ucDatSan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#F6FDF9" 
             MinWidth="1000" MinHeight="700" Loaded="UserControl_Loaded">

    <!-- ====== RESOURCES (giữ nguyên style của frmQuanLySan) ====== -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="ColText"     Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"      Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder"   Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColCard"     Color="White"/>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Badge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BtnSolid" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="#15A06D"/>
            <Setter Property="Padding" Value="14,8"/>
        </Style>

        <!-- Icon tròn nhỏ -->
        <Style x:Key="IconRound" TargetType="Border">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <!-- Watermark cho ô tìm kiếm -->
        <Style x:Key="WatermarkTextStyle" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text.Length, ElementName=txtSearch}" Value="0">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text.Length, ElementName=txtSearch}" Value="1">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- ====== CONTENT (không sidebar) ====== -->
    <Grid Margin="16,10,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header: Search + Bell + Date -->
            <RowDefinition Height="Auto"/>
            <!-- Title + Add -->
            <RowDefinition Height="Auto"/>
            <!-- Mô tả + Counters -->
            <RowDefinition Height="*"/>
            <!-- List -->
        </Grid.RowDefinitions>

        <!-- Title + Add -->
        <Grid Grid.Row="1" Margin="0,12,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Column="1" Style="{StaticResource BtnSolid}" Cursor="Hand">
                <TextBlock Text="+ Đặt sân mới" FontSize ="14" Foreground="White" Margin="0,2,0,-2"/>
            </Border>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Quản lý Sân bãi" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>
                <TextBlock Text="Theo dõi và vận hành trạng thái sân realtime" Foreground="#7A8A83"/>
            </StackPanel>
        </Grid>

        <!-- Mô tả + Counters -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <UniformGrid Columns="4" Rows="1">
                <Border Style="{StaticResource CardBorder}" Padding="14,8" Margin="8">
                    <StackPanel>
                        <TextBlock Text="Tổng đơn hôm nay" Foreground="#678"/>
                        <TextBlock Text="{Binding TongDonHomNay}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardBorder}" Padding="14,8" Margin="8">
                    <StackPanel>
                        <TextBlock Text="Đang chơi" Foreground="#678"/>
                        <TextBlock Text="{Binding SoDangChoi}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardBorder}" Padding="14,8" Margin="8">
                    <StackPanel>
                        <TextBlock Text="Đã đặt" Foreground="#678"/>
                        <TextBlock Text="{Binding SoDaDat}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardBorder}" Padding="14,8" Margin="8">
                    <StackPanel>
                        <TextBlock Text="Hoàn thành" Foreground="#678"/>
                        <TextBlock Text="{Binding SoHoanThanh}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>

        <!-- Danh sách đặt sân -->
        <Border Grid.Row="3" Style="{StaticResource CardBorder}" Padding="8" Margin="0,0,0,8">
            <StackPanel>
                <TextBlock Text="Danh sách đặt sân" Margin="8,4,8,8"
                           FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>

                <!-- Thanh tìm kiếm + lọc trạng thái trong card -->
                <Grid Margin="8,0,8,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="240"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#FFFFFF" CornerRadius="10"
                            BorderBrush="{StaticResource ColBorder}" BorderThickness="1" Padding="8">
                        <TextBox BorderThickness="0" ToolTip="Tìm theo tên, SĐT, sân..."/>
                    </Border>
                    <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="10" Margin="12,0,0,0"
                            BorderBrush="{StaticResource ColBorder}" BorderThickness="1" Padding="4">
                        <ComboBox Height="30" Margin="2,2,0,2" HorizontalAlignment="Left" Width="214">
                            <ComboBoxItem>Tất cả trạng thái</ComboBoxItem>
                            <ComboBoxItem>Đã đặt</ComboBoxItem>
                            <ComboBoxItem>Đang chơi</ComboBoxItem>
                            <ComboBoxItem>Hoàn tất</ComboBoxItem>
                            <ComboBoxItem>Đã hủy</ComboBoxItem>
                        </ComboBox>
                    </Border>
                </Grid>

                <!-- List -->
                <ListView ItemsSource="{Binding DanhSachDatSan}">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Sân" Width="auto" DisplayMemberBinding="{Binding TenSan}"/>
                            <GridViewColumn Header="Khách hàng" Width="auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TenKH}" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="{Binding SDT}" Foreground="{StaticResource ColSub}" FontSize="12"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Thời gian" Width="auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding KhungGio}" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="{Binding NgayDat, StringFormat='  dd/MM/yyyy'}"
                                                       Foreground="{StaticResource ColSub}" Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Giá tiền" Width="auto"
                                            DisplayMemberBinding="{Binding TienThue, StringFormat={}{0:N0}đ}"/>
                            <GridViewColumn Header="Trạng thái" Width="auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="8,2" Background="#DFF7EA">
                                            <TextBlock Text="{Binding TrangThai}" FontSize="12" Foreground="#1E7F4C"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Thao tác" Width="auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="Bắt đầu" Margin="0,0,6,0" Padding="10,4"/>
                                            <Button Content="Kết thúc" Margin="0,0,6,0" Padding="10,4"/>
                                            <Button Content="Hủy" Padding="10,4"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
