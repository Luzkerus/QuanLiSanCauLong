<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.DatSan.ucDatSan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1080"
             Background="#F6FDF9">

    <!-- ================= RESOURCES ================= -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="ColText"     Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"      Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder"   Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColCard"     Color="White"/>

        <!-- Card -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI CARD: giống ucThanhToan (shadow + scale on hover) -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorder}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Typography KPI -->
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Nút bo góc -->
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#15A06D"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox trạng thái (ĐÃ FIX: thêm ToggleButton để mở dropdown) -->
        <Style x:Key="ComboStatusStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,0,28,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Khung -->
                            <Border x:Name="Bd" CornerRadius="10"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>

                            <!-- Icon phễu bên trái -->
                            <TextBlock Text="&#xE71C;" FontFamily="Segoe MDL2 Assets"
                                       Foreground="#6B7E74" Margin="8,0,0,0"
                                       VerticalAlignment="Center" HorizontalAlignment="Left"/>

                            <!-- Nội dung hiển thị -->
                            <ContentPresenter Margin="28,0,28,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Content="{TemplateBinding SelectionBoxItem}"/>

                            <!-- Chevron bên phải -->
                            <TextBlock Text="&#xE70D;" FontFamily="Segoe MDL2 Assets"
                                       Foreground="#6B7E74" Margin="0,0,8,0"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"/>

                            <!-- NÚT BẬT/TẮT DROPDOWN (thành phần bắt buộc) -->
                            <ToggleButton x:Name="DropDownToggle"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          ClickMode="Press"/>

                            <!-- Popup danh sách -->
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border CornerRadius="10" Background="White"
                                        BorderBrush="{StaticResource ColBorder}" BorderThickness="1"
                                        Padding="4" SnapsToDevicePixels="True">
                                    <ScrollViewer MaxHeight="240">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <!-- Triggers -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#B9E6D1"/>
                                <Setter TargetName="Bd" Property="Background" Value="#FAFEFC"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2BB673"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <!-- Khi Toggle bật thì mở dropdown -->
                            <Trigger SourceName="DropDownToggle" Property="IsChecked" Value="True">
                                <Setter Property="ComboBox.IsDropDownOpen" Value="True"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Item style -->
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="itemBd" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="itemBd" Property="Background" Value="#F2FBF7"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="itemBd" Property="Background" Value="#E8FBF2"/>
                                            <Setter Property="Foreground" Value="#2BB673"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ==== STYLE DATAGRID GIỐNG UC KHÁCH HỘI VIÊN ==== -->
        <Style x:Key="DGHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E8FBF2"/>
            <Setter Property="BorderBrush" Value="#CDEFE3"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0D7049"/>
        </Style>

        <Style x:Key="MoneyCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0D7049"/>
        </Style>

        <!-- Row cao hơn một xíu -->
        <Style x:Key="DGRow" TargetType="DataGridRow">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="38"/>
            <!-- tăng nhẹ chiều cao hàng -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Thanh màu bên trái -->
                            <Border x:Name="Accent" Grid.Column="0" Background="Transparent"/>

                            <!-- Nền hàng -->
                            <Border x:Name="Bg" Grid.Column="1" Background="{TemplateBinding Background}"/>
                            <DataGridCellsPresenter Grid.Column="1"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#F0FFF8"/>
                                <Setter TargetName="Accent" Property="Background" Value="#0FBF84"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#D7F6EA"/>
                                <Setter TargetName="Accent" Property="Background" Value="#0FBF84"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cell padding rộng hơn một chút -->
        <Style x:Key="DGCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Badge trạng thái đặt sân -->
        <Style x:Key="StatusBadgeBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <!-- mặc định: xanh nhạt -->
            <Setter Property="Background" Value="#DFF7EA"/>
            <Setter Property="BorderBrush" Value="#A7F3D0"/>

            <Style.Triggers>
                <!-- Đã hủy: đỏ -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Đã hủy">
                    <Setter Property="Background" Value="#FEE2E2"/>
                    <Setter Property="BorderBrush" Value="#FCA5A5"/>
                </DataTrigger>

                <!-- Đang chơi: xanh dương nhạt -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang chơi">
                    <Setter Property="Background" Value="#DBEAFE"/>
                    <Setter Property="BorderBrush" Value="#93C5FD"/>
                </DataTrigger>

                <!-- Chưa bắt đầu: xám nhạt -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Chưa bắt đầu">
                    <Setter Property="Background" Value="#E5E7EB"/>
                    <Setter Property="BorderBrush" Value="#D1D5DB"/>
                </DataTrigger>

                <!-- Hoàn thành: xanh (giữ mặc định) -->
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusBadgeText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#166534"/>
            <!-- xanh mặc định -->

            <Style.Triggers>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đã hủy">
                    <Setter Property="Foreground" Value="#B91C1C"/>
                    <!-- đỏ -->
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang chơi">
                    <Setter Property="Foreground" Value="#1D4ED8"/>
                    <!-- xanh dương -->
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Chưa bắt đầu">
                    <Setter Property="Foreground" Value="#374151"/>
                    <!-- xám đậm -->
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Badge trạng thái thanh toán -->
        <Style x:Key="PayStatusBadgeBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <!-- mặc định: xanh đã thanh toán -->
            <Setter Property="Background" Value="#DCFCE7"/>
            <Setter Property="BorderBrush" Value="#86EFAC"/>

            <Style.Triggers>
                <!-- Chưa thanh toán: cam -->
                <DataTrigger Binding="{Binding TrangThaiThanhToan}" Value="Chưa thanh toán">
                    <Setter Property="Background" Value="#FEF3C7"/>
                    <Setter Property="BorderBrush" Value="#FACC15"/>
                </DataTrigger>

                <!-- Đã thanh toán: giữ mặc định -->
            </Style.Triggers>
        </Style>

        <Style x:Key="PayStatusBadgeText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#166534"/>
            <!-- xanh -->

            <Style.Triggers>
                <DataTrigger Binding="{Binding TrangThaiThanhToan}" Value="Chưa thanh toán">
                    <Setter Property="Foreground" Value="#B45309"/>
                    <!-- cam -->
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Row DatSan: cao hơn 1 xíu, có viền accent bên trái -->
        <Style x:Key="DGRowDatSan" TargetType="DataGridRow">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- thanh màu bên trái -->
                            <Border x:Name="Accent" Grid.Column="0" Background="Transparent"/>

                            <!-- nền dòng -->
                            <Border x:Name="Bg" Grid.Column="1" Background="{TemplateBinding Background}"/>
                            <DataGridCellsPresenter Grid.Column="1"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#F0FFF8"/>
                                <Setter TargetName="Accent" Property="Background" Value="#0FBF84"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#D7F6EA"/>
                                <Setter TargetName="Accent" Property="Background" Value="#0FBF84"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Badge trạng thái ĐẶT SÂN -->
        <Style x:Key="BookingStatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="7,2"/>
            <Setter Property="Background" Value="#E5F9F0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="MinWidth" Value="90"/>

            <!-- Mặc định: xanh lá nhẹ -->
            <Style.Triggers>
                <!-- Đang chơi / Hoàn thành: xanh -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang chơi">
                    <Setter Property="Background" Value="#BAF7C8"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Hoàn thành">
                    <Setter Property="Background" Value="#166534"/>
                </DataTrigger>

                <!-- Chưa bắt đầu: xanh dương nhạt -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Chưa bắt đầu">
                    <Setter Property="Background" Value="#DBEAFE
"/>
                </DataTrigger>

                <!-- Đã hủy: đỏ -->
                <DataTrigger Binding="{Binding TrangThai}" Value="Đã hủy">
                    <Setter Property="Background" Value="#EF4444
"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Badge trạng thái THANH TOÁN -->
        <Style x:Key="PaymentStatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="7,2"/>
            <Setter Property="Background" Value="#E5F9F0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="MinWidth" Value="120"/>

            <Style.Triggers>
                <!-- Chưa thanh toán: cam -->
                <DataTrigger Binding="{Binding TrangThaiThanhToan}" Value="Chưa thanh toán">
                    <Setter Property="Background" Value="#FF8C00"/>
                </DataTrigger>

                <!-- Đã thanh toán: xanh -->
                <DataTrigger Binding="{Binding TrangThaiThanhToan}" Value="Đã thanh toán">
                    <Setter Property="Background" Value="#166534"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Badge trạng thái Đặt sân -->
        <DataTemplate x:Key="TrangThaiBadgeTemplate">
            <Border x:Name="bd"
            CornerRadius="6"
            Padding="8,1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
                <TextBlock x:Name="txt"
                   Text="{Binding}"
                   FontSize="13"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            </Border>

            <DataTemplate.Triggers>

                <!-- ĐANG CHƠI -->
                <DataTrigger Binding="{Binding}" Value="Đang chơi">
                    <Setter TargetName="bd" Property="Background" Value="#D1F5D9"/>
                    <Setter TargetName="bd" Property="BorderBrush" Value="#27AE60"/>
                    <Setter TargetName="bd" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="txt" Property="Foreground" Value="#1E8449"/>
                </DataTrigger>

                <!-- ĐÃ HỦY -->
                <DataTrigger Binding="{Binding}" Value="Đã hủy">
                    <Setter TargetName="bd" Property="Background" Value="#FFDDDD"/>
                    <Setter TargetName="bd" Property="BorderBrush" Value="#FF4D4D"/>
                    <Setter TargetName="bd" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="txt" Property="Foreground" Value="#C0392B"/>
                </DataTrigger>

                <!-- CHƯA BẮT ĐẦU -->
                <DataTrigger Binding="{Binding}" Value="Chưa bắt đầu">
                    <Setter TargetName="bd" Property="Background" Value="#E8ECFF"/>
                    <Setter TargetName="bd" Property="BorderBrush" Value="#4C67FF"/>
                    <Setter TargetName="bd" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="txt" Property="Foreground" Value="#2C3E95"/>
                </DataTrigger>

                <!-- HOÀN THÀNH -->
                <DataTrigger Binding="{Binding}" Value="Hoàn thành">
                    <Setter TargetName="bd" Property="Background" Value="#D7F6EA"/>
                    <Setter TargetName="bd" Property="BorderBrush" Value="#2ECC71"/>
                    <Setter TargetName="bd" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="txt" Property="Foreground" Value="#1E7F52"/>
                </DataTrigger>

            </DataTemplate.Triggers>
        </DataTemplate>





    </UserControl.Resources>

    <!-- ================= CONTENT ================= -->
    <Grid Margin="16,10,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title + Đặt sân mới -->
        <Grid Grid.Row="1" Margin="0,12,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Nút Đặt sân mới -->
            <!-- Nút Đặt sân mới -->
            <Button Grid.Column="1"
            x:Name="btnDatSanMoi"
            Height="38"
            MinWidth="100"
            Padding="14,8"
            Margin="0,0,10,0"
            Cursor="Hand"
            FontWeight="SemiBold"
            Foreground="White"
            Background="#0FBF84"
            BorderBrush="#0FBF84"
            BorderThickness="1"
            Click ="btnDatSanMoi_Click" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                    CornerRadius="10"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Margin="0,0,0,0"/>
                                <TextBlock Text="Đặt sân mới" FontSize="14" />
                            </StackPanel>
                        </Border>

                        <!-- Hiệu ứng hover và click -->
                        <ControlTemplate.Triggers>
                            <!-- Hover: đậm hơn -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.3" Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Khi nhấn -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>

                            <!-- Khi disable -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Đặt Sân" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColText}"/>
                <TextBlock Text="Quản lý, tạo, sửa và hủy các lượt đặt sân" FontWeight="SemiBold" Foreground="#7A8A83"/>
            </StackPanel>
        </Grid>

        <!-- KPI counters -->
        <UniformGrid Grid.Row="2" Columns="4" Margin="0,4,0,10">
            <!-- Tổng đơn hôm nay -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng đơn hôm nay" Style="{StaticResource KpiTitle}"/>
                        <TextBlock x:Name="txtTongDonHomNay" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🧾" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Đang chơi -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Đang chơi" Style="{StaticResource KpiTitle}"/>
                        <TextBlock x:Name="txtSoDangChoi" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#FFF3E6" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🏃‍♂️" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Đã đặt -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Đã đặt" Style="{StaticResource KpiTitle}"/>
                        <TextBlock x:Name="txtSoDaDat" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="📅" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Hoàn thành -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Hoàn thành" Style="{StaticResource KpiTitle}"/>
                        <TextBlock x:Name="txtSoHoanThanh" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#F5ECFF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="✅" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Danh sách đặt sân -->
        <Border Grid.Row="3" Style="{StaticResource CardBorder}" Padding="8" Margin="0,0,0,8">
            <StackPanel>
                <TextBlock Text="🗍 Danh sách đặt sân" FontSize="14" Margin="8,4,8,8"
                           FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>

                <!-- Search + Trạng thái -->
                <Grid Margin="8,0,8,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search -->
                    <Grid Grid.Column="0">
                        <Border Background="#FFFFFF" CornerRadius="10"
                            BorderBrush="{StaticResource ColBorder}" BorderThickness="1" Padding="10">
                            <Grid>
                                <!-- TextBox thật -->
                                <TextBox x:Name="txtSearch"
                                     BorderThickness="0" TextChanged="txtSearch_TextChanged"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Tìm theo tên, SĐT, sân..."/>      

                                <!-- watermark: icon + text (ẩn khi có chữ) -->
                                <Grid IsHitTestVisible="False">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="37*"/>
                                        <ColumnDefinition Width="339*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <!-- Mặc định: ẩn -->
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <!-- Chỉ hiện khi Text rỗng hoặc null -->
                                                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <!-- Icon kính lúp -->
                                    <TextBlock Grid.Column="0" Text="&#xE721;" FontFamily="Segoe MDL2 Assets"
                                            Foreground="#9AA7A0" VerticalAlignment="Center" Margin="2,0,6,0"/>

                                    <!-- Placeholder text -->
                                    <TextBlock Grid.Column="1" Grid.ColumnSpan="2"
                                            Text="Tìm kiếm theo tên, SĐT, sân..."
                                            Foreground="#9AA7A0" VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>


                    <!-- Trạng thái -->
                    <ComboBox Grid.Column="1" Margin="12,0,0,0"
                              x:Name="cboTrangThai"
                              Style="{StaticResource ComboStatusStyle}" SelectionChanged="cboTrangThai_SelectionChanged" 
                              SelectedIndex="0">
                        <ComboBoxItem>Tất cả trạng thái</ComboBoxItem>
                        <ComboBoxItem>Chưa bắt đầu</ComboBoxItem>
                        <ComboBoxItem>Đang chơi</ComboBoxItem>
                        <ComboBoxItem>Hoàn thành</ComboBoxItem>
                        <ComboBoxItem>Đã hủy</ComboBoxItem>
                    </ComboBox>
                    <StackPanel Margin="12,0,0,0" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <DatePicker x:Name="dpNgayDat"
                Width="130"
                SelectedDateChanged="dpNgayDat_SelectedDateChanged"
                SelectedDate="{x:Null}"/>

                        <Button Content="X" Width="25" Height="25" Margin="16,0,0,0" HorizontalAlignment="Right"
            ToolTip="Xóa ngày lọc"
            Click="BtnClearDate_Click"/>
                    </StackPanel>

                </Grid>

                <DataGrid x:Name="lvDanhSachDatSan"
                          Grid.Row="1"
                          ItemsSource="{Binding DanhSachDatSan}"
                          IsReadOnly="True"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          AlternatingRowBackground="#FAFEFD"
                          ColumnHeaderHeight="36"
                          RowHeight="34"
                          RowStyle="{StaticResource DGRowDatSan}"
                          SelectionMode="Single"
                          SelectionUnit="FullRow">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{x:Null}">
                            <Setter Property="Background" Value="#E8FBF2"/>
                            <Setter Property="BorderBrush" Value="#CDEFE3"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#0D7049"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <!-- Khách hàng -->
                        <DataGridTemplateColumn Header="Khách hàng" Width="0.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding TenKH}"
                                   Foreground="{StaticResource ColText}"
                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SDT}"
                                   Foreground="{StaticResource ColSub}"
                                   FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Sân -->
                        <DataGridTextColumn Header="Sân" Width="0.3*" Binding="{Binding TenSanCached}"/>

                        <!-- Ngày / giờ -->
                        <DataGridTextColumn Header="Ngày" Width="0.3*"
                            Binding="{Binding NgayDat, StringFormat={}{0:dd/MM/yyyy}}"/>
                        <DataGridTextColumn Header="Bắt đầu" Width="0.4*"
                            Binding="{Binding GioBatDau}"/>
                        <DataGridTextColumn Header="Kết thúc" Width="0.4*"
                            Binding="{Binding GioKetThuc}"/>

                        <!-- Giá gốc / phụ thu / thành tiền -->
                        <DataGridTextColumn Header="Giá gốc" Width="0.4*"
                            Binding="{Binding DonGia, StringFormat={}{0:N0} đ}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Phụ thu" Width="0.45*"
                            Binding="{Binding PhuThuLe, StringFormat={}{0:N0} đ}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Thành tiền" Width="0.5*"
                            Binding="{Binding ThanhTien, StringFormat={}{0:N0} đ}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#0D7049"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Trạng thái ĐẶT SÂN -->
                        <DataGridTemplateColumn Header="Trạng thái" Width="0.6*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource BookingStatusBadge}">
                                        <TextBlock Text="{Binding TrangThai}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Trạng thái THANH TOÁN -->
                        <DataGridTemplateColumn Header="Trạng thái thanh toán" Width="1.2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PaymentStatusBadge}">
                                        <TextBlock Text="{Binding TrangThaiThanhToan}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Thao tác -->
                        <DataGridTemplateColumn Header="Thao tác" Width="1.2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Bắt đầu" Margin="0,0,6,0" Padding="10,4"
                                                Click="BatDau_Click"
                                                DataContext="{Binding}"/>
                                        <Button Content="Kết thúc" Margin="0,0,6,0" Padding="10,4"
                                                Click="KetThuc_Click"
                                                DataContext="{Binding}"/>
                                        <Button Content="Hủy" Padding="10,4"
                                                Click="Huy_Click"
                                                DataContext="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>


            </StackPanel>
        </Border>

        <!-- ===== Popup tạo nhanh khách (Tên + SĐT) ===== -->
        <Popup IsOpen="{Binding IsQuickCustomerOpen}" Placement="Center" StaysOpen="False">
            <Border Background="White" CornerRadius="12" Padding="16"
                    BorderBrush="{StaticResource ColBorder}" BorderThickness="1" Width="360">
                <StackPanel>
                    <TextBlock Text="Tạo nhanh khách hàng" FontWeight="SemiBold" Foreground="{StaticResource ColText}" Margin="0,0,0,8"/>
                    <StackPanel Margin="0,6,0,6">
                        <TextBlock Text="Số điện thoại" Foreground="{StaticResource ColSub}"/>
                        <TextBox Text="{Binding NewKhachSDT, UpdateSourceTrigger=PropertyChanged}" Height="32"/>
                    </StackPanel>
                    <StackPanel Margin="0,6,0,12">
                        <TextBlock Text="Tên khách hàng" Foreground="{StaticResource ColSub}"/>
                        <TextBox Text="{Binding NewKhachTen, UpdateSourceTrigger=PropertyChanged}" Height="32"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Margin="0,0,8,0" Padding="12,6"
                                Command="{Binding CmdQuickCancel}"/>
                        <Button Content="Tạo khách" Style="{StaticResource BtnPrimary}" Padding="12,6"
                                Command="{Binding CmdQuickCreate}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
