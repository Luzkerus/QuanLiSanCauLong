<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.DatSan.ucDatSan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1080"
             Background="#F6FDF9"
             MinWidth="1000" MinHeight="700" Loaded="UserControl_Loaded">

    <!-- ================= RESOURCES ================= -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="ColText"     Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"      Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder"   Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColCard"     Color="White"/>

        <!-- Card -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI CARD: giống ucThanhToan (shadow + scale on hover) -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorder}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Typography KPI -->
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Nút bo góc -->
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#15A06D"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox trạng thái (ĐÃ FIX: thêm ToggleButton để mở dropdown) -->
        <Style x:Key="ComboStatusStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,0,28,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Khung -->
                            <Border x:Name="Bd" CornerRadius="10"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>

                            <!-- Icon phễu bên trái -->
                            <TextBlock Text="&#xE71C;" FontFamily="Segoe MDL2 Assets"
                                       Foreground="#6B7E74" Margin="8,0,0,0"
                                       VerticalAlignment="Center" HorizontalAlignment="Left"/>

                            <!-- Nội dung hiển thị -->
                            <ContentPresenter Margin="28,0,28,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Content="{TemplateBinding SelectionBoxItem}"/>

                            <!-- Chevron bên phải -->
                            <TextBlock Text="&#xE70D;" FontFamily="Segoe MDL2 Assets"
                                       Foreground="#6B7E74" Margin="0,0,8,0"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"/>

                            <!-- NÚT BẬT/TẮT DROPDOWN (thành phần bắt buộc) -->
                            <ToggleButton x:Name="DropDownToggle"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          ClickMode="Press"/>

                            <!-- Popup danh sách -->
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border CornerRadius="10" Background="White"
                                        BorderBrush="{StaticResource ColBorder}" BorderThickness="1"
                                        Padding="4" SnapsToDevicePixels="True">
                                    <ScrollViewer MaxHeight="240">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <!-- Triggers -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#B9E6D1"/>
                                <Setter TargetName="Bd" Property="Background" Value="#FAFEFC"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2BB673"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <!-- Khi Toggle bật thì mở dropdown -->
                            <Trigger SourceName="DropDownToggle" Property="IsChecked" Value="True">
                                <Setter Property="ComboBox.IsDropDownOpen" Value="True"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Item style -->
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="itemBd" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="itemBd" Property="Background" Value="#F2FBF7"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="itemBd" Property="Background" Value="#E8FBF2"/>
                                            <Setter Property="Foreground" Value="#2BB673"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ================= CONTENT ================= -->
    <Grid Margin="16,10,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title + Đặt sân mới -->
        <Grid Grid.Row="1" Margin="0,12,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Nút Đặt sân mới -->
            <Border Grid.Column="1"
                    x:Name="btnDatSanMoi"
                    Cursor="Hand"
                    CornerRadius="8"
                    Margin="0,0,10,0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#2BB673"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Padding" Value="14,8"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0D7049"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <TextBlock Text="Đặt sân mới"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Đặt Sân" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>
                <TextBlock Text="Quản lý, tạo, sửa và hủy các lượt đặt sân" Foreground="#7A8A83"/>
            </StackPanel>
        </Grid>

        <!-- KPI counters -->
        <UniformGrid Grid.Row="2" Columns="4" Margin="0,4,0,10">
            <!-- Tổng đơn hôm nay -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng đơn hôm nay" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding TongDonHomNay}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🧾" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Đang chơi -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Đang chơi" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding SoDangChoi}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#FFF3E6" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🏃‍♂️" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Đã đặt -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Đã đặt" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding SoDaDat}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="📅" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Hoàn thành -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Hoàn thành" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding SoHoanThanh}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#F5ECFF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="✅" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Danh sách đặt sân -->
        <Border Grid.Row="3" Style="{StaticResource CardBorder}" Padding="8" Margin="0,0,0,8">
            <StackPanel>
                <TextBlock Text="🗍 Danh sách đặt sân" Margin="8,4,8,8"
                           FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>

                <!-- Search + Trạng thái -->
                <Grid Margin="8,0,8,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search -->
                    <Grid Grid.Column="0">
                        <Border Background="#FFFFFF" CornerRadius="10"
                                BorderBrush="{StaticResource ColBorder}" BorderThickness="1" Padding="10">
                            <Grid>
                                <TextBox x:Name="txtSearch" BorderThickness="0"
                                         VerticalContentAlignment="Center"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="Tìm theo tên, SĐT, sân..."/>
                                <!-- watermark -->
                                <Grid IsHitTestVisible="False">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="&#xE721;" FontFamily="Segoe MDL2 Assets"
                                               Foreground="#9AA7A0" VerticalAlignment="Center" Margin="2,0,6,0"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Tìm kiếm theo tên, SĐT, sân..."
                                               Foreground="#9AA7A0" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Trạng thái -->
                    <ComboBox Grid.Column="1" Margin="12,0,0,0"
                              x:Name="cboTrangThai"
                              Style="{StaticResource ComboStatusStyle}"
                              SelectedItem="{Binding SelectedTrangThai, Mode=TwoWay}">
                        <ComboBoxItem>Tất cả trạng thái</ComboBoxItem>
                        <ComboBoxItem>Đã đặt</ComboBoxItem>
                        <ComboBoxItem>Đang chơi</ComboBoxItem>
                        <ComboBoxItem>Hoàn thành</ComboBoxItem>
                        <ComboBoxItem>Đã hủy</ComboBoxItem>
                    </ComboBox>
                </Grid>

                <!-- List -->
                <ListView ItemsSource="{Binding DanhSachDatSan}">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Sân" DisplayMemberBinding="{Binding TenSan}" />
                            <GridViewColumn Header="Khách hàng">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding TenKH}" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="{Binding SDT}" Foreground="{StaticResource ColSub}" FontSize="12"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Thời gian">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding KhungGio}" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="{Binding NgayDat, StringFormat={}{0:  dd/MM/yyyy}}"
                                                       Foreground="{StaticResource ColSub}" Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Giá tiền">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TienThue, StringFormat={}{0:#;0} đ}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Trạng thái">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="8,2" Background="#DFF7EA">
                                            <TextBlock Text="{Binding TrangThai}" FontSize="12" Foreground="#1E7F4C"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Thao tác">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="Bắt đầu" Margin="0,0,6,0" Padding="10,4"
                                                    Command="{Binding DataContext.CmdStart, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="Kết thúc" Margin="0,0,6,0" Padding="10,4"
                                                    Command="{Binding DataContext.CmdFinish, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="Hủy" Padding="10,4"
                                                    Command="{Binding DataContext.CmdCancel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

            </StackPanel>
        </Border>

        <!-- ===== Popup tạo nhanh khách (Tên + SĐT) ===== -->
        <Popup IsOpen="{Binding IsQuickCustomerOpen}" Placement="Center" StaysOpen="False">
            <Border Background="White" CornerRadius="12" Padding="16"
                    BorderBrush="{StaticResource ColBorder}" BorderThickness="1" Width="360">
                <StackPanel>
                    <TextBlock Text="Tạo nhanh khách hàng" FontWeight="SemiBold" Foreground="{StaticResource ColText}" Margin="0,0,0,8"/>
                    <StackPanel Margin="0,6,0,6">
                        <TextBlock Text="Số điện thoại" Foreground="{StaticResource ColSub}"/>
                        <TextBox Text="{Binding NewKhachSDT, UpdateSourceTrigger=PropertyChanged}" Height="32"/>
                    </StackPanel>
                    <StackPanel Margin="0,6,0,12">
                        <TextBlock Text="Tên khách hàng" Foreground="{StaticResource ColSub}"/>
                        <TextBox Text="{Binding NewKhachTen, UpdateSourceTrigger=PropertyChanged}" Height="32"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Margin="0,0,8,0" Padding="12,6"
                                Command="{Binding CmdQuickCancel}"/>
                        <Button Content="Tạo khách" Style="{StaticResource BtnPrimary}" Padding="12,6"
                                Command="{Binding CmdQuickCreate}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
