<Window x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.DatSan.LichDatSan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Đặt sân"
        MinWidth="1200" MinHeight="700"
        WindowState="Maximized"
        Background="#F6FDF9"
        WindowStartupLocation="CenterScreen">

    <!-- ====== RESOURCES (giữ nguyên style của frmQuanLySan) ====== -->
    <Window.Resources>
        <SolidColorBrush x:Key="ColText"     Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"      Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder"   Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColCard"     Color="White"/>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Badge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BtnSolid" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="#15A06D"/>
            <Setter Property="Padding" Value="14,8"/>
        </Style>

        <Style x:Key="IconRound" TargetType="Border">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <!-- Watermark search -->
        <Style x:Key="WatermarkTextStyle" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text.Length, ElementName=txtSearch}" Value="0">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text.Length, ElementName=txtSearch}" Value="1">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Menu -->
        <Style x:Key="MenuItemNormal" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Margin" Value="10,6,10,0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style x:Key="MenuItemActive" BasedOn="{StaticResource MenuItemNormal}" TargetType="Border">
            <Setter Property="Background" Value="#15A06D"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ====== LAYOUT ====== -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== Sidebar (copy chuẩn) ===== -->
        <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource ColBorder}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16" VerticalAlignment="Top">
                    <Ellipse Width="28" Height="28" Fill="#2BB673"/>
                    <StackPanel Margin="8,0,0,0">
                        <TextBlock Text="Sân Cầu Lông" FontWeight="SemiBold"/>
                        <TextBlock Text="Củ Chi" Foreground="#888" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Row="1" Margin="4,0,4,0">
                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏠" Margin="4,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Tổng quan" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏆" Margin="4,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Quản lý sân" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <!-- Đặt sân đang active -->
                    <Border Style="{StaticResource MenuItemActive}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅" Margin="4,0,8,0" VerticalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="Đặt sân" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" Margin="4,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Khách hàng" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <!-- Thanh toán -->
                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💳" Margin="4,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Thanh toán" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🧾" Margin="4,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Kho &amp; POS" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" Margin="4,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Báo cáo" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙" Margin="4,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Cài đặt" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Footer / Admin -->
                <Border Grid.Row="2" Margin="10,8,10,12" Padding="12"
                        BorderBrush="{StaticResource ColBorder}" BorderThickness="1" CornerRadius="12">
                    <DockPanel>
                        <Ellipse Width="32" Height="32" Fill="#2BB673" DockPanel.Dock="Left"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Admin User" FontWeight="SemiBold" />
                            <TextBlock Text="Quản lý" Foreground="#889" FontSize="12"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                CornerRadius="12" BorderThickness="1" BorderBrush="{StaticResource ColBorder}"
                                Padding="6,4" Margin="8,0,0,0">
                            <TextBlock Text="↦" />
                        </Border>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ===== Content Area (header giống frmQuanLySan) ===== -->
        <Grid Grid.Column="1" Margin="16,10,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Search + Bell + Date -->
                <RowDefinition Height="Auto"/>
                <!-- Title + Add -->
                <RowDefinition Height="Auto"/>
                <!-- Mô tả + Counters -->
                <RowDefinition Height="*"/>
                <!-- List -->
            </Grid.RowDefinitions>

            <!-- Header: Search + Bell + Date -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Background="White" CornerRadius="10" BorderBrush="{StaticResource ColBorder}"
                        BorderThickness="1" Padding="10" Width="360" HorizontalAlignment="Left">
                    <Grid>
                        <DockPanel>
                            <TextBlock Text="🔎" Margin="0,0,6,0"/>
                            <TextBox x:Name="txtSearch" BorderThickness="0" Background="Transparent"
                                     FontSize="13" VerticalContentAlignment="Center"/>
                        </DockPanel>
                        <TextBlock Text="Tìm kiếm..." Foreground="#9AA7A0"
                                   Margin="22,0,0,0" VerticalAlignment="Center"
                                   IsHitTestVisible="False" Style="{StaticResource WatermarkTextStyle}"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <Border Width="36" Height="36" CornerRadius="18" Background="White"
                            BorderBrush="{StaticResource ColBorder}" BorderThickness="1"
                            HorizontalAlignment="Right" Margin="0,0,10,0">
                        <TextBlock Text="🔔" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Foreground="#7A8A83" VerticalAlignment="Center">
                        <TextBlock.Text>
                            <Binding Source="{x:Static sys:DateTime.Now}" StringFormat="{}{0:dddd, dd/MM/yyyy}"/>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Title + Add -->
            <Grid Grid.Row="1" Margin="0,12,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Đặt sân" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource ColText}" VerticalAlignment="Center"/>
                <Border Grid.Column="1" Style="{StaticResource BtnSolid}">
                    <TextBlock Text="+  Đặt sân mới" Foreground="White"/>
                </Border>
            </Grid>

            <!-- Mô tả + Counters -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Quản lý &amp; theo dõi các lượt đặt sân" Foreground="#789" Margin="0,0,0,8"/>
                <UniformGrid Columns="4" Rows="1">
                    <Border Style="{StaticResource CardBorder}" Padding="14,8" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Tổng đơn hôm nay" Foreground="#678"/>
                            <TextBlock Text="{Binding TongDonHomNay}" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardBorder}" Padding="14,8" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Đang chơi" Foreground="#678"/>
                            <TextBlock Text="{Binding SoDangChoi}" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardBorder}" Padding="14,8" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Đã đặt" Foreground="#678"/>
                            <TextBlock Text="{Binding SoDaDat}" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardBorder}" Padding="14,8" Margin="8">
                        <StackPanel>
                            <TextBlock Text="Hoàn thành" Foreground="#678"/>
                            <TextBlock Text="{Binding SoHoanThanh}" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>

            <!-- Danh sách đặt sân -->
            <Border Grid.Row="3" Style="{StaticResource CardBorder}" Padding="8" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Danh sách đặt sân" Margin="8,4,8,8"
                               FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>

                    <!-- Thanh tìm kiếm + lọc trạng thái trong card -->
                    <Grid Margin="8,0,8,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="240"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FFFFFF" CornerRadius="10"
                                BorderBrush="{StaticResource ColBorder}" BorderThickness="1" Padding="8">
                            <TextBox BorderThickness="0" ToolTip="Tìm theo tên, SĐT, sân..."/>
                        </Border>
                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="10" Margin="12,0,0,0"
                                BorderBrush="{StaticResource ColBorder}" BorderThickness="1" Padding="4">
                            <ComboBox Height="30" Margin="2">
                                <ComboBoxItem>Tất cả trạng thái</ComboBoxItem>
                                <ComboBoxItem>Đã đặt</ComboBoxItem>
                                <ComboBoxItem>Đang chơi</ComboBoxItem>
                                <ComboBoxItem>Hoàn tất</ComboBoxItem>
                                <ComboBoxItem>Đã hủy</ComboBoxItem>
                            </ComboBox>
                        </Border>
                    </Grid>

                    <!-- List -->
                    <ListView>
                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Sân" Width="160" DisplayMemberBinding="{Binding TenSan}"/>
                                <GridViewColumn Header="Khách hàng" Width="260">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding TenKH}" Foreground="{StaticResource ColText}"/>
                                                <TextBlock Text="{Binding SDT}" Foreground="{StaticResource ColSub}" FontSize="12"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Thời gian" Width="240">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding KhungGio}" Foreground="{StaticResource ColText}"/>
                                                <TextBlock Text="{Binding NgayDat, StringFormat='  dd/MM/yyyy'}"
                                                           Foreground="{StaticResource ColSub}" Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Giá tiền" Width="140"
                                                DisplayMemberBinding="{Binding TienThue, StringFormat={}{0:N0}đ}"/>
                                <GridViewColumn Header="Trạng thái" Width="140">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" Padding="8,2" Background="#DFF7EA">
                                                <TextBlock Text="{Binding TrangThai}" FontSize="12" Foreground="#1E7F4C"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Thao tác" Width="220">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Bắt đầu" Margin="0,0,6,0" Padding="10,4"/>
                                                <Button Content="Kết thúc" Margin="0,0,6,0" Padding="10,4"/>
                                                <Button Content="Hủy" Padding="10,4"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
