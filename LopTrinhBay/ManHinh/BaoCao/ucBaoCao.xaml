<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.BaoCao.ucBaoCao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1080" d:DesignHeight="700"
             Background="#F6FDF9">

    <!-- ============ RESOURCES (bắt buộc) ============ -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E7ECEB"/>

        <!-- Màu dùng chung -->
        <SolidColorBrush x:Key="ColText"   Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"    Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColAccent" Color="#0FBF84"/>

        <!-- Card style chung -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.05"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card KPI: nổi + scale khi hover -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Text styles KPI -->
        <Style x:Key="KpiLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#6B7E74"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#21382D"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="22"/>
        </Style>

        <!-- Nút Xuất Excel (header primary button) -->
        <Style x:Key="HeaderPrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource ColAccent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColAccent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12"
                                                          ShadowDepth="0"
                                                          Opacity="0.28"
                                                          Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <!-- Bên trái: tiêu đề -->
            <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                <TextBlock Text="Báo cáo &amp; Thống kê"
                           FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource ColText}"/>
                <TextBlock Text="Phân tích doanh thu và hiệu suất kinh doanh"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource ColSub}"
                           FontSize="12"/>
            </StackPanel>

            <!-- Bên phải: Từ ngày - Đến ngày + Xuất Excel -->
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">

                <!-- Từ ngày -->
                <StackPanel Orientation="Vertical" Margin="0,0,8,0">
                    <TextBlock Text="Từ ngày"
                               FontSize="11"
                               Foreground="{StaticResource ColSub}"
                               Margin="0,0,0,2"/>
                    <DatePicker SelectedDate="{Binding FromDate}"
                                Width="150"
                                Height="25"/>
                </StackPanel>

                <!-- Đến ngày -->
                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Đến ngày"
                               FontSize="11"
                               Foreground="{StaticResource ColSub}"
                               Margin="0,0,0,2"/>
                    <DatePicker SelectedDate="{Binding ToDate}"
                                Width="150"
                                Height="25"/>
                </StackPanel>

                <!-- Nút Xuất Excel -->
                <Button Style="{StaticResource HeaderPrimaryButton}"
                        Command="{Binding ExportExcelCommand}">
                    <TextBlock Text="Xuất Excel"/>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- KPI cards -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tổng doanh thu -->
            <Border Style="{StaticResource KpiCardStyle}" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng doanh thu" Style="{StaticResource KpiLabel}"/>
                        <TextBlock Text="{Binding TotalRevenueDisplay}"
                                   Style="{StaticResource KpiValue}" Margin="0,2,0,4"/>
                        <TextBlock Text="{Binding TotalRevenueDelta}" Foreground="#6B7E74" FontSize="11"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12"
                            Padding="10" Margin="8,0,0,0" VerticalAlignment="Top">
                        <TextBlock Text="💵" FontSize="16"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Doanh thu sân -->
            <Border Style="{StaticResource KpiCardStyle}" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Doanh thu sân" Style="{StaticResource KpiLabel}"/>
                        <TextBlock Text="{Binding CourtRevenueDisplay}"
                                   Style="{StaticResource KpiValue}" Margin="0,2,0,4"/>
                        <TextBlock Text="{Binding CourtRevenuePercent}" Foreground="#6B7E74" FontSize="11"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12"
                            Padding="10" Margin="8,0,0,0" VerticalAlignment="Top">
                        <TextBlock Text="📈" FontSize="16"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Doanh thu POS -->
            <Border Style="{StaticResource KpiCardStyle}" Grid.Column="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Doanh thu POS" Style="{StaticResource KpiLabel}"/>
                        <TextBlock Text="{Binding POSRevenueDisplay}"
                                   Style="{StaticResource KpiValue}" Margin="0,2,0,4"/>
                        <TextBlock Text="{Binding POSPercentOfTotal}" Foreground="#6B7E74" FontSize="11"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#FFF3E6" CornerRadius="12"
                            Padding="10" Margin="8,0,0,0" VerticalAlignment="Top">
                        <TextBlock Text="🧃" FontSize="16"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Lượt khách -->
            <Border Style="{StaticResource KpiCardStyle}" Grid.Column="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Lượt khách" Style="{StaticResource KpiLabel}"/>
                        <TextBlock Text="{Binding CustomerCountDisplay}"
                                   Style="{StaticResource KpiValue}" Margin="0,2,0,4"/>
                        <TextBlock Text="{Binding CustomerAvgPerDay}" Foreground="#6B7E74" FontSize="11"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#F5ECFF" CornerRadius="12"
                            Padding="10" Margin="8,0,0,0" VerticalAlignment="Top">
                        <TextBlock Text="👥" FontSize="16"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Chart -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,0,0,12" Padding="0">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" Grid.Row="0">
                    <TextBlock Text="Biểu đồ doanh thu" FontWeight="Bold" Foreground="#21382D"/>
                    <TextBlock Text="Doanh thu theo ngày (trong khoảng đã chọn)"
                               Foreground="#6B7E74" FontSize="11"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,8,0,8">
                    <Canvas x:Name="ChartCanvas" Background="Transparent"/>
                </Grid>

                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                        <Ellipse Width="10" Height="10" Fill="#FFB74D" Margin="0,0,6,0"/>
                        <TextBlock Text="Doanh thu POS" FontSize="11" Foreground="#6B7E74"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                        <Ellipse Width="10" Height="10" Fill="#4CAF50" Margin="0,0,6,0"/>
                        <TextBlock Text="Doanh thu sân" FontSize="11" Foreground="#6B7E74"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="#2196F3" Margin="0,0,6,0"/>
                        <TextBlock Text="Tổng doanh thu" FontSize="11" Foreground="#6B7E74"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Bottom content -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- TRÁI: Top ca đông / vắng khách -->
            <Border Style="{StaticResource Card}" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Top ca đông / vắng khách"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource ColText}"
                   Margin="0,0,0,8"/>

                    <ItemsControl ItemsSource="{Binding TopTimeSlots}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F9FAFB"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,4,0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Thông tin ca -->
                                        <StackPanel Grid.Column="0">
                                            <!-- Ví dụ: "Ca 18:00 - 20:00" -->
                                            <TextBlock Text="{Binding TimeRange}"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource ColText}"/>
                                            <!-- Ví dụ: "Lượt đặt: 23" -->
                                            <TextBlock Text="{Binding BookingsDisplay}"
                                           FontSize="11"
                                           Foreground="{StaticResource ColSub}"
                                           Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- % công suất + chip Đông / Vắng -->
                                        <StackPanel Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                            <TextBlock x:Name="PercentText"
                                           Text="{Binding UtilPercent, StringFormat={}{0}%}"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           Foreground="#16A34A"/>

                                            <Border x:Name="StatusChip"
                                        Background="#DCFCE7"
                                        CornerRadius="999"
                                        Padding="6,1"
                                        Margin="0,4,0,0"
                                        HorizontalAlignment="Right">
                                                <!-- Ví dụ: "Ca đông" / "Ca vắng" -->
                                                <TextBlock Text="{Binding StatusText}"
                                               FontSize="10"
                                               Foreground="#166534"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- ĐỔI MÀU NẾU KHÔNG PHẢI CA ĐÔNG -->
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsPeak}" Value="False">
                                        <Setter TargetName="PercentText"
                                    Property="Foreground"
                                    Value="#4B5563"/>
                                        <Setter TargetName="StatusChip"
                                    Property="Background"
                                    Value="#E5E7EB"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>


            <!-- Phải: Tổng hợp chi tiết (3 block như hình, có scroll) -->
            <Border Style="{StaticResource Card}" Grid.Column="1" Margin="12,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- tiêu đề -->
                        <RowDefinition Height="*"/>
                        <!-- nội dung cuộn -->
                    </Grid.RowDefinitions>

                    <!-- Tiêu đề -->
                    <TextBlock Grid.Row="0"
                           Text="Tổng hợp chi tiết"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource ColText}"
                           Margin="0,0,0,8"/>

                    <!-- Nội dung có scroll -->
                    <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto" Margin="0,10,0,-10">
                        <StackPanel>

                            <!-- Block 1: Đặt sân -->
                            <Border Background="#E8FFF5"
                                BorderBrush="#C3F7DE"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="12"
                                Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Tổng số đơn đặt sân"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="{Binding TongSoDonDatSan}"
                                           Foreground="#15803D"
                                           FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Tổng giờ chơi"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding TongGioChoiDisplay}"
                                           Foreground="#15803D"
                                           FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Giá trung bình/giờ"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1"
                                           Text="{Binding GiaTrungBinhGioDisplay}"
                                           Foreground="#15803D"
                                           FontWeight="SemiBold"/>
                                </Grid>
                            </Border>

                            <!-- Block 2: POS -->
                            <Border Background="#FFF8E7"
                                BorderBrush="#FFE0B2"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="12"
                                Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Số lượng POS"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="{Binding SoLuongPOS}"
                                           Foreground="#B45309"
                                           FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Giá trị trung bình"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding GiaTriPOSTrungBinhDisplay}"
                                           Foreground="#B45309"
                                           FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Mặt hàng bán chạy"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1"
                                           Text="{Binding MatHangBanChay}"
                                           Foreground="#2563EB"
                                           FontWeight="SemiBold"/>
                                </Grid>
                            </Border>

                            <!-- Block 3: Hội viên -->
                            <Border Background="#EEF4FF"
                                BorderBrush="#D1E0FF"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Hội viên mới"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="{Binding HoiVienMoi}"
                                           Foreground="#1D4ED8"
                                           FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Tỉ lệ quay lại"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding TiLeQuayLaiDisplay}"
                                           Foreground="#1D4ED8"
                                           FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Điểm tích lũy phát hành"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1"
                                           Text="{Binding DiemTichLuyPhatHanh}"
                                           Foreground="#1D4ED8"
                                           FontWeight="SemiBold"/>
                                </Grid>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
