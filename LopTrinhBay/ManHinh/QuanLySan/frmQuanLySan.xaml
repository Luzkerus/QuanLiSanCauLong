<Window x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.QuanLySan.frmQuanLySan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quản lý sân" Width="1280" Height="760" Background="#F6FDF9"
        WindowStartupLocation="CenterScreen">

    <!-- ====== RESOURCES (màu & styles) ====== -->
    <Window.Resources>
        <SolidColorBrush x:Key="ColText"     Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"      Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder"   Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColCard"     Color="White"/>

        <SolidColorBrush x:Key="PillTrong"   Color="#E5F8EE"/>
        <SolidColorBrush x:Key="PillDat"     Color="#FFF3E5"/>
        <SolidColorBrush x:Key="PillChoi"    Color="#E5F4FF"/>

        <!-- Card chung -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Badge pill -->
        <Style x:Key="Badge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Nút icon phẳng (chỉ để minh họa) -->
        <Style x:Key="BtnIcon" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Padding" Value="14,8"/>
        </Style>

        <!-- Icon ly vàng -->
        <DataTemplate x:Key="TrophyIcon">
            <Grid Width="36" Height="36">
                <Ellipse Fill="#F2C94C"/>
                <TextBlock Text="🏆" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </DataTemplate>

        <!-- Watermark cho ô tìm kiếm -->
        <Style x:Key="WatermarkTextStyle" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text.Length, ElementName=txtSearch}" Value="0">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text.Length, ElementName=txtSearch}" Value="1">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Menu item style -->
        <Style x:Key="MenuItemNormal" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Margin" Value="10,6,10,0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style x:Key="MenuItemActive" BasedOn="{StaticResource MenuItemNormal}" TargetType="Border">
            <Setter Property="Background" Value="#15A06D"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ====== LAYOUT ====== -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- content -->
        </Grid.ColumnDefinitions>

        <!-- ===== Sidebar ===== -->
        <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource ColBorder}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- logo -->
                    <RowDefinition Height="*"/>
                    <!-- menu -->
                    <RowDefinition Height="Auto"/>
                    <!-- admin -->
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16" VerticalAlignment="Top">
                    <Ellipse Width="28" Height="28" Fill="#2BB673"/>
                    <StackPanel Margin="8,0,0,0">
                        <TextBlock Text="Sân Cầu Lông" FontWeight="SemiBold"/>
                        <TextBlock Text="Củ Chi" Foreground="#888" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Row="1" Margin="4,0,4,0">
                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="🏠" VerticalAlignment="Center" Margin="4,0,8,0"/>
                            <TextBlock Text="Tổng quan" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemActive}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏆" VerticalAlignment="Center" Margin="4,0,8,0" Foreground="White"/>
                            <TextBlock Text="Quản lý sân" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅" VerticalAlignment="Center" Margin="4,0,8,0"/>
                            <TextBlock Text="Đặt sân" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" VerticalAlignment="Center" Margin="4,0,8,0"/>
                            <TextBlock Text="Khách hàng" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🧾" VerticalAlignment="Center" Margin="4,0,8,0"/>
                            <TextBlock Text="Kho &amp; POS" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" VerticalAlignment="Center" Margin="4,0,8,0"/>
                            <TextBlock Text="Báo cáo" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource MenuItemNormal}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙" VerticalAlignment="Center" Margin="4,0,8,0"/>
                            <TextBlock Text="Cài đặt" VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Admin dưới cùng -->
                <Border Grid.Row="2" Margin="10,8,10,12" Padding="12" BorderBrush="{StaticResource ColBorder}" BorderThickness="1" CornerRadius="12">
                    <DockPanel>
                        <Ellipse Width="32" Height="32" Fill="#2BB673" DockPanel.Dock="Left"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Admin User" FontWeight="SemiBold" />
                            <TextBlock Text="Quản lý" Foreground="#889" FontSize="12"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Center" CornerRadius="12" BorderThickness="1" BorderBrush="{StaticResource ColBorder}"
                                Padding="6,4" Margin="8,0,0,0">
                            <TextBlock Text="↦" />
                        </Border>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ===== Content ===== -->
        <Grid Grid.Column="1" Margin="16,10,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- header -->
                <RowDefinition Height="Auto"/>
                <!-- intro + stats -->
                <RowDefinition Height="*"/>
                <!-- list cards -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0">
                <Border Background="White" CornerRadius="10" BorderBrush="{StaticResource ColBorder}"
                        BorderThickness="1" Padding="10" Width="360" DockPanel.Dock="Left">
                    <Grid>
                        <DockPanel>
                            <TextBlock Text="🔎" Margin="0,0,6,0"/>
                            <TextBox x:Name="txtSearch" BorderThickness="0" Background="Transparent"
                                     FontSize="13" VerticalContentAlignment="Center"/>
                        </DockPanel>
                        <TextBlock Text="Tìm kiếm..." Foreground="#9AA7A0"
                                   Margin="22,0,0,0" VerticalAlignment="Center"
                                   IsHitTestVisible="False" Style="{StaticResource WatermarkTextStyle}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource BtnIcon}" Margin="8,0,0,0" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <TextBlock Text="+  Thêm sân mới" Foreground="White" />
                </Border>
            </DockPanel>

            <!-- Intro + stats -->
            <StackPanel Grid.Row="1" Margin="0,12,0,10">
                <TextBlock Text="Quản lý sân" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>
                <TextBlock Text="Quản lý thông tin và trạng thái các sân cầu lông" Foreground="#789" Margin="0,2,0,10"/>

                <UniformGrid Columns="4" Rows="1" Margin="0,4,0,0">
                    <Border Style="{StaticResource CardBorder}" Padding="14,8">
                        <StackPanel>
                            <TextBlock Text="Tổng số sân" Foreground="#678"/>
                            <TextBlock Text="6" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardBorder}" Padding="14,8">
                        <StackPanel>
                            <TextBlock Text="Đang hoạt động" Foreground="#678"/>
                            <TextBlock Text="6" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardBorder}" Padding="14,8">
                        <StackPanel>
                            <TextBlock Text="Đang được đặt" Foreground="#678"/>
                            <TextBlock Text="4" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardBorder}" Padding="14,8">
                        <StackPanel>
                            <TextBlock Text="Đang bảo trì" Foreground="#678"/>
                            <TextBlock Text="0" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>

            <!-- Danh sách thẻ sân: 2 cột, mỗi cột 3 thẻ -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cột trái -->
                    <StackPanel Grid.Column="0">
                        <!-- Sân 1 – Đang chơi -->
                        <Border Style="{StaticResource CardBorder}" Margin="10" Height="160">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter ContentTemplate="{StaticResource TrophyIcon}" Margin="2"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sân 1" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource ColText}"/>
                                        <Border Style="{StaticResource Badge}" Background="{StaticResource PillChoi}" Margin="10,0,0,0">
                                            <TextBlock Text="Đang chơi" />
                                        </Border>
                                    </StackPanel>
                                    <Grid Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Ngày thường:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="80.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Cuối tuần:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="100.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Lễ tết:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="120.000đ/giờ"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <TextBlock Text="🔧" Margin="0,0,6,0"/>
                                        <TextBlock Text="Bảo trì: 15/11/2025" Foreground="#777"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Sân 4 – Đang chơi -->
                        <Border Style="{StaticResource CardBorder}" Margin="10" Height="160">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter ContentTemplate="{StaticResource TrophyIcon}" Margin="2"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sân 4" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource ColText}"/>
                                        <Border Style="{StaticResource Badge}" Background="{StaticResource PillChoi}" Margin="10,0,0,0">
                                            <TextBlock Text="Đang chơi" />
                                        </Border>
                                    </StackPanel>
                                    <Grid Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Ngày thường:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="80.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Cuối tuần:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="100.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Lễ tết:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="120.000đ/giờ"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <TextBlock Text="🔧" Margin="0,0,6,0"/>
                                        <TextBlock Text="Bảo trì: 25/11/2025" Foreground="#777"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Sân 5 – Đang chơi -->
                        <Border Style="{StaticResource CardBorder}" Margin="10" Height="160">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter ContentTemplate="{StaticResource TrophyIcon}" Margin="2"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sân 5" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource ColText}"/>
                                        <Border Style="{StaticResource Badge}" Background="{StaticResource PillChoi}" Margin="10,0,0,0">
                                            <TextBlock Text="Đang chơi" />
                                        </Border>
                                    </StackPanel>
                                    <Grid Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Ngày thường:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="80.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Cuối tuần:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="100.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Lễ tết:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="120.000đ/giờ"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <TextBlock Text="🔧" Margin="0,0,6,0"/>
                                        <TextBlock Text="Bảo trì: 22/11/2025" Foreground="#777"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Cột phải -->
                    <StackPanel Grid.Column="1">
                        <!-- Sân 2 – Trống -->
                        <Border Style="{StaticResource CardBorder}" Margin="10" Height="160">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter ContentTemplate="{StaticResource TrophyIcon}" Margin="2"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sân 2" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource ColText}"/>
                                        <Border Style="{StaticResource Badge}" Background="{StaticResource PillTrong}" Margin="10,0,0,0">
                                            <TextBlock Text="Trống" />
                                        </Border>
                                    </StackPanel>
                                    <Grid Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Ngày thường:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="80.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Cuối tuần:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="100.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Lễ tết:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="120.000đ/giờ"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <TextBlock Text="🔧" Margin="0,0,6,0"/>
                                        <TextBlock Text="Bảo trì: 20/11/2025" Foreground="#777"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Sân 3 – Đặt -->
                        <Border Style="{StaticResource CardBorder}" Margin="10" Height="160">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter ContentTemplate="{StaticResource TrophyIcon}" Margin="2"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sân 3" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource ColText}"/>
                                        <Border Style="{StaticResource Badge}" Background="{StaticResource PillDat}" Margin="10,0,0,0">
                                            <TextBlock Text="Đặt" />
                                        </Border>
                                    </StackPanel>
                                    <Grid Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Ngày thường:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="80.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Cuối tuần:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="100.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Lễ tết:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="120.000đ/giờ"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <TextBlock Text="🔧" Margin="0,0,6,0"/>
                                        <TextBlock Text="Bảo trì: 18/11/2025" Foreground="#777"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Sân 6 – Trống -->
                        <Border Style="{StaticResource CardBorder}" Margin="10" Height="160">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter ContentTemplate="{StaticResource TrophyIcon}" Margin="2"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sân 6" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource ColText}"/>
                                        <Border Style="{StaticResource Badge}" Background="{StaticResource PillTrong}" Margin="10,0,0,0">
                                            <TextBlock Text="Trống" />
                                        </Border>
                                    </StackPanel>
                                    <Grid Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Ngày thường:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="80.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Cuối tuần:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="100.000đ/giờ"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Lễ tết:" Foreground="{StaticResource ColText}"/>
                                            <TextBlock Text="120.000đ/giờ"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <TextBlock Text="🔧" Margin="0,0,6,0"/>
                                        <TextBlock Text="Bảo trì: 01/12/2025" Foreground="#777"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
