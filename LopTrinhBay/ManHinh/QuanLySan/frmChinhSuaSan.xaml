<Window x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.QuanLySan.frmChinhSuaSan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chỉnh sửa sân"
        MinWidth="620" MinHeight="420"
        Width="720" Height="460"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" WindowStyle="None" AllowsTransparency="True">

    <!-- ====== RESOURCES ====== -->
    <Window.Resources>
        <!-- màu cơ bản -->
        <SolidColorBrush x:Key="ColText"     Color="#23352C"/>
        <SolidColorBrush x:Key="ColSub"      Color="#80918A"/>
        <SolidColorBrush x:Key="ColBorder"   Color="#E6EFEA"/>
        <SolidColorBrush x:Key="ColField"    Color="#F6F8F7"/>
        <SolidColorBrush x:Key="ColPrimary"  Color="#19B774"/>
        <SolidColorBrush x:Key="ColDanger"   Color="#F3F5F4"/>
        <SolidColorBrush x:Key="ColDamPrimary"  Color="#0D7049	"/>

        <!-- bóng đổ -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="14" ShadowDepth="2" Opacity="0.25"/>

        <!-- Nhãn trên field -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,6,0,6"/>
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Ô nhập dạng pill -->
        <Style x:Key="PillField" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource ColField}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Nút chính / phụ -->
        <Style x:Key="BtnPrimary" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource ColPrimary}"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>
        <Style x:Key="BtnGhost" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource ColDanger}"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>

        <!-- Watermark cho TextBox (dùng Tag) -->
        <Style TargetType="TextBox" x:Key="WatermarkTextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#9AA7A0"
                                       IsHitTestVisible="False"
                                       Margin="2,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox phẳng -->
        <Style x:Key="FlatCombo" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <!-- ====== OVERLAY + DIALOG ====== -->
    <Grid Background="#66000000">
        <!-- Dialog card -->
        <Border Width="700" Height="440" MinWidth="600" MinHeight="400"
                CornerRadius="14" Background="White"
                BorderBrush="{StaticResource ColBorder}" BorderThickness="1"
                Padding="20" Effect="{StaticResource CardShadow}"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- header -->
                    <RowDefinition Height="*"/>
                    <!-- body -->
                    <RowDefinition Height="Auto"/>
                    <!-- footer -->
                </Grid.RowDefinitions>

                <!-- ===== Header ===== -->
                <DockPanel Grid.Row="0" LastChildFill="False">
                    <TextBlock Text="Chỉnh sửa sân"
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource ColText}"
                               DockPanel.Dock="Left" VerticalAlignment="Center"/>
                    <!-- nút đóng -->
                    <Border Width="28" Height="28" CornerRadius="14"  MouseLeftButtonDown="BtnDongForm"
        DockPanel.Dock="Right">
                        <Border.Style>
                            <Style TargetType="Border">
                                <!-- Màu mặc định -->
                                <Setter Property="Background" Value="{StaticResource ColField}" />

                                <!-- Khi rê chuột -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF6347"/>
                                        <!-- đỏ nhạt -->
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="✕" HorizontalAlignment="Center" VerticalAlignment="Center"
               Foreground="{StaticResource ColSub}" />
                    </Border>
                </DockPanel>

                <!-- ===== Body ===== -->
                <StackPanel Grid.Row="1" Margin="0,12,0,6">

                    <!-- Tên sân -->
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Tên sân"/>
                    <Border Style="{StaticResource PillField}">
                        <TextBox Style="{StaticResource WatermarkTextBox}" Tag="Sân 1"/>
                    </Border>

                    <!-- Trạng thái -->
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Trạng thái" Margin="0,14,0,6"/>
                    <Border Style="{StaticResource PillField}" Padding="10,4">
                        <ComboBox Style="{StaticResource FlatCombo}" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBoxItem Content="Trống"/>
                            <ComboBoxItem Content="Đặt"/>
                            <ComboBoxItem Content="Đang chơi"/>
                            <ComboBoxItem Content="Bảo trì"/>
                        </ComboBox>
                    </Border>

                    <!-- 3 cột giá -->
                    <UniformGrid Columns="3" Rows="1" Margin="0,16,0,0">
                        <!-- Giá ngày thường -->
                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Giá ngày thường"/>
                            <Border Style="{StaticResource PillField}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Style="{StaticResource WatermarkTextBox}" Tag="80000"/>
                                    <!-- spinner icon minh hoạ -->
                                    <Border Grid.Column="1" Width="26" Height="20" CornerRadius="6"
                                            Background="White" BorderBrush="{StaticResource ColBorder}"
                                            BorderThickness="1" Margin="6,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="▴▾" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Giá cuối tuần -->
                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Giá cuối tuần"/>
                            <Border Style="{StaticResource PillField}">
                                <TextBox Style="{StaticResource WatermarkTextBox}" Tag="100000" />
                            </Border>
                        </StackPanel>

                        <!-- Giá lễ tết -->
                        <StackPanel>
                            <TextBlock Style="{StaticResource FieldLabel}" Text="Giá lễ tết"/>
                            <Border Style="{StaticResource PillField}">
                                <TextBox Style="{StaticResource WatermarkTextBox}" Tag="120000" />
                            </Border>
                        </StackPanel>
                    </UniformGrid>

                    <!-- Lịch bảo trì -->
                    <TextBlock Style="{StaticResource FieldLabel}" Text="Lịch bảo trì tiếp theo" Margin="0,16,0,6"/>
                    <Border Style="{StaticResource PillField}">
                        <DatePicker BorderThickness="0" Background="Transparent" />
                    </Border>
                </StackPanel>

                <!-- ===== Footer ===== -->
                <Grid Grid.Row="2" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Margin="0,0,10,0" MouseLeftButtonDown="BtnDongForm">
                        <Border.Style>
                            <Style TargetType="Border" BasedOn="{StaticResource BtnGhost}" >
                                <!-- Màu mặc định -->
                                <Setter Property="Background" Value="{StaticResource ColField}" />

                                <!-- Khi rê chuột -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF6347"/>
                                        <!-- đỏ nhạt -->
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="Hủy" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="1" >
                        <Border.Style>
                            <Style TargetType="Border"  BasedOn="{StaticResource BtnPrimary}">
                                <!-- Màu mặc định -->
                                <Setter Property="Background" Value="{StaticResource ColPrimary}"/>
                                <!-- Xanh -->


                                <!-- Khi rê chuột -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ColDamPrimary}"/>
                                        <!-- Xanh đậm hơn -->
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="Thêm mới" Foreground="White"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
