<Window x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.NhanVien.frmThemNhanVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Thêm nhân viên" Height="590" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- ===== Palette / Styles ===== -->
    <Window.Resources>
        <SolidColorBrush x:Key="ColText"     Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"      Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColCard"     Color="White"/>
        <SolidColorBrush x:Key="ColLine"     Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColPrimary"  Color="#2BB673"/>
        <SolidColorBrush x:Key="ColDanger"   Color="#EF4444"/>
        <SolidColorBrush x:Key="ColHeaderBg" Color="#F6FDF9"/>

        <!-- Card trắng + bóng nhẹ -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Lbl" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="Txt" TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="Cbx" TargetType="ComboBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- ===== Buttons: bo góc + hover/pressed qua ControlTemplate ===== -->
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#25A868"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnGhost" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F0FFF8"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#2BB673"/>
                            </Trigger>
                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bd" Property="Background" Value="#E5F8F0"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#25A868"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút header (bo tròn, nhỏ) -->
        <Style x:Key="HeaderIconBtn" TargetType="Button">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#EEF5F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E5EEE9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ===== Root rounded card with drop shadow ===== -->
    <Border CornerRadius="18" Background="{StaticResource ColHeaderBg}" Padding="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="22" ShadowDepth="0" Opacity="0.25"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header bo góc -->
            <Border CornerRadius="12" Background="{StaticResource ColHeaderBg}" BorderBrush="{StaticResource ColLine}"
                    BorderThickness="1" Padding="12" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Thêm nhân viên" FontSize="18" FontWeight="Bold" Foreground="{StaticResource ColText}"/>
                        <TextBlock Text="Nhập thông tin nhân viên mới" Foreground="{StaticResource ColSub}" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource HeaderIconBtn}" Click="BtnMinimize_Click" ToolTip="Thu nhỏ">
                            <TextBlock Text="—" FontSize="14" Foreground="{StaticResource ColText}" Margin="0,-3,0,0"/>
                        </Button>
                        <Button Style="{StaticResource HeaderIconBtn}" Click="BtnClose_Click" ToolTip="Đóng">
                            <TextBlock Text="×" FontSize="16" Foreground="{StaticResource ColDanger}" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Nội dung -->
            <Border Grid.Row="1" CornerRadius="14" Background="White" BorderBrush="{StaticResource ColLine}" BorderThickness="1" Padding="16" Margin="0,10,0,0">
                <Grid Margin="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Khung avatar -->
                    <Border Grid.RowSpan="6" Grid.Column="2" Style="{StaticResource Card}" Margin="12,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Ảnh đại diện" Style="{StaticResource Lbl}"/>
                            <Border BorderBrush="{StaticResource ColLine}" BorderThickness="1" CornerRadius="10" Background="#FAFAFA"
                                    Padding="8" Height="220">
                                <Grid>
                                    <Image x:Name="imgAvatar" Stretch="Uniform" />
                                    <TextBlock x:Name="watermarkAvatar" Text="Chưa chọn ảnh" Foreground="{StaticResource ColSub}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Grid>
                            </Border>
                            <Button Margin="0,10,0,0" Content="Chọn ảnh..." Click="BtnChonAnh_Click" Style="{StaticResource BtnGhost}"/>
                            <TextBlock Text="{Binding AvatarPath, RelativeSource={RelativeSource AncestorType=Window}}"
                                       Foreground="{StaticResource ColSub}" FontSize="11" TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </Border>

                    <!-- Họ tên -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,12">
                        <TextBlock Text="Họ và tên *" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="tbHoTen" Style="{StaticResource Txt}" />
                    </StackPanel>

                    <!-- Số điện thoại -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,12,12">
                        <TextBlock Text="Số điện thoại *" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="tbSDT" Style="{StaticResource Txt}" />
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,12">
                        <TextBlock Text="Email" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="tbEmail" Style="{StaticResource Txt}" />
                    </StackPanel>

                    <!-- Loại nhân viên -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,12,12">
                        <TextBlock Text="Loại nhân viên" Style="{StaticResource Lbl}"/>
                        <ComboBox x:Name="cbLoaiNV" Style="{StaticResource Cbx}" SelectedIndex="0">
                            <ComboBoxItem>Nv Full-time</ComboBoxItem>
                            <ComboBoxItem>Nv Part-time</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <!-- Chức danh -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,12,12">
                        <TextBlock Text="Chức danh" Style="{StaticResource Lbl}"/>
                        <ComboBox x:Name="cbChucDanh" Style="{StaticResource Cbx}" SelectedIndex="0">
                            <ComboBoxItem>Quản lý</ComboBoxItem>
                            <ComboBoxItem>Thu ngân</ComboBoxItem>
                            <ComboBoxItem>Nhân viên sân</ComboBoxItem>
                            <ComboBoxItem>Khác</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <!-- Ngày vào làm -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,12,12">
                        <TextBlock Text="Ngày vào làm" Style="{StaticResource Lbl}"/>
                        <DatePicker x:Name="dpNgayVaoLam" SelectedDate="{x:Static System:DateTime.Today}"/>
                    </StackPanel>

                    <!-- Trạng thái -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,12,12">
                        <TextBlock Text="Trạng thái" Style="{StaticResource Lbl}"/>
                        <ComboBox x:Name="cbTrangThai" Style="{StaticResource Cbx}" SelectedIndex="0">
                            <ComboBoxItem>Đang làm việc</ComboBoxItem>
                            <ComboBoxItem>Nghỉ việc</ComboBoxItem>
                            <ComboBoxItem>Tạm khóa</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <!-- Lương cơ bản -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,12,12">
                        <TextBlock Text="Lương cơ bản (VND/tháng)" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="tbLuong" Style="{StaticResource Txt}" Text="0"/>
                    </StackPanel>

                    <!-- Ghi chú -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,12,12">
                        <TextBlock Text="Ghi chú" Style="{StaticResource Lbl}"/>
                        <TextBox x:Name="tbGhiChu" Height="90" Padding="10" TextWrapping="Wrap"
                                 BorderBrush="{StaticResource ColLine}" BorderThickness="1" Background="White"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button Content="Hủy" Style="{StaticResource BtnGhost}" Click="BtnHuy_Click" Margin="0,0,8,0"/>
                        <Button Content="Thêm" Style="{StaticResource BtnPrimary}" Click="BtnThem_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
