<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.NhanVien.ucNhanVien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1080" d:DesignHeight="700"
             Background="#F6FDF9">

    <!-- ===== Resources / Palette ===== -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="ColText"  Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"   Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColCard"  Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ColLine"  Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColPrimary" Color="#2BB673"/>
        <SolidColorBrush x:Key="ColPrimarySoft" Color="#E8F8F1"/>

        <!-- Card trắng + bóng nhẹ -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat card mặc định (kế thừa CardStyle) -->
        <Style x:Key="StatCard" TargetType="Border" BasedOn="{StaticResource CardStyle}"/>

        <!-- KPI card với hiệu ứng hover giống ucThanhToan -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Typography cho KPI -->
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Badge / Chips -->
        <Style x:Key="RoleBadge" TargetType="Border">
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#EFF6FF"/>
            <Setter Property="BorderBrush" Value="#D6E4FF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="StatusChip" TargetType="Border">
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Background" Value="#E8FFF2"/>
            <Setter Property="BorderBrush" Value="#CFF2DD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ShiftChip" TargetType="Border">
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Background" Value="#FFF7E6"/>
            <Setter Property="BorderBrush" Value="#FFE0B3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <DataTemplate x:Key="AvatarTemplate">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Border Width="28" Height="28" CornerRadius="14"
                        Background="#EDF2F7" Margin="0,0,8,0">
                    <TextBlock Text="{Binding Initials}"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               FontWeight="Bold" Foreground="#4A5568"/>
                </Border>
                <StackPanel>
                    <TextBlock Text="{Binding HoTen}" Foreground="{StaticResource ColText}" />
                    <TextBlock Text="{Binding Note}" Foreground="{StaticResource ColSub}" FontSize="11"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <!-- Button icon nhạt -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Nút header: xanh & xám (giống "Thêm khách hàng") ===== -->
        <Style x:Key="HeaderBtnGreen" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0FBF84"/>
            <Setter Property="BorderBrush" Value="#0D7049"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.30" Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderBtnGray" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Foreground" Value="#21382D"/>
            <Setter Property="Background" Value="#F2F4F7"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#D1D5DB"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#D1D5DB"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.22"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ===== Layout ===== -->
    <DockPanel Margin="24">
        <!-- Header -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Quản lý Nhân viên" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColText}"/>
                    <TextBlock Text="Hồ sơ nhân viên và phân ca làm việc" FontWeight="SemiBold" Foreground="{StaticResource ColSub}" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Cụm nút đã thay style -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <!-- Thêm nhân viên (xanh) -->
                    <Button Style="{StaticResource HeaderBtnGreen}"
                            Click="BtnThemNhanVien_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets"  Margin="0,0,0,0"/>
                            <TextBlock Text="Thêm nhân viên" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- ===== KPI: Full-time / Part-time + icon ===== -->
        <UniformGrid DockPanel.Dock="Top" Rows="1" Columns="3" Margin="0,0,0,16">
            <!-- Tổng nhân viên -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng nhân viên" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding TongNhanVien}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="👥" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Full-time -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Nhân viên Full-time" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding SoFullTime}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="💼" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Part-time -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Nhân viên Part-time" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding SoPartTime}" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#FFF3E6" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="⏱️" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

        </UniformGrid>

        <!-- Danh sách nhân viên -->
        <Border Style="{StaticResource StatCard}">
            <StackPanel>
                <!-- Header: tiêu đề trái + ô tìm kiếm phải -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="🗍 Danh sách nhân viên" FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <!-- Search box sát phải -->
                    <Border Grid.Column="1" Background="White" CornerRadius="10"
                            BorderBrush="{StaticResource ColLine}" BorderThickness="1"
                            Padding="10" Width="300">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- icon -->
                            <Path Grid.Column="0" Margin="0,0,8,0"
                                  Data="M15.5,14 L20,18.5 18.5,20 14,15.5 z M10,16 A6,6 0 1 1 10,4 A6,6 0 0 1 10,16 z"
                                  Width="16" Height="16" Fill="{StaticResource ColSub}"/>

                            <!-- TextBox + watermark -->
                            <Grid Grid.Column="1">
                                <TextBox x:Name="tbSearch"
                                         BorderThickness="0" Background="Transparent"
                                         Foreground="{StaticResource ColText}"
                                         Text="{Binding TuKhoa, UpdateSourceTrigger=PropertyChanged}"/>
                                <!-- watermark an/hiện -->
                                <TextBlock IsHitTestVisible="False" Margin="2,0,0,0"
                                           Foreground="{StaticResource ColSub}" Opacity="0.7"
                                           Text="Tìm nhân viên..."
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=tbSearch}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, ElementName=tbSearch}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Bảng -->
                <DataGrid ItemsSource="{Binding NhanViensView}"
                          AutoGenerateColumns="False" HeadersVisibility="Column"
                          GridLinesVisibility="None" RowHeight="50"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          BorderThickness="0" Background="Transparent" SelectionChanged="DataGrid_SelectionChanged">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F8F7"/>
                            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="12,10"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- 1) Nhân viên -->
                        <DataGridTemplateColumn Header="Tên nhân viên" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ContentPresenter ContentTemplate="{StaticResource AvatarTemplate}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- 2) Số điện thoại -->
                        <DataGridTextColumn Header="Số điện thoại"
                                            Binding="{Binding SoDienThoai}"
                                            Width="*"/>

                        <!-- 3) Email -->
                        <DataGridTextColumn Header="Email"
                                            Binding="{Binding Email}"
                                            Width="*"/>

                        <!-- 4) Vai trò (Quản lý/ Full-time/Part-time) -->
                        <DataGridTemplateColumn Header="Vai trò" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource RoleBadge}">
                                        <TextBlock Text="{Binding VaiTroText}" Foreground="#1E3A8A" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- 5) Ngày vào làm -->
                        <DataGridTextColumn Header="Ngày vào làm"
                                            Binding="{Binding NgayVaoLam, StringFormat={}{0:d}}"
                                            Width="*"/>

                        <!-- 6) Trạng thái -->
                        <DataGridTemplateColumn Header="Trạng thái" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource StatusChip}">
                                        <TextBlock Text="{Binding TrangThaiText}" Foreground="#137A4F" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Thao tác -->
                        <DataGridTemplateColumn Header="Thao tác" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Style="{StaticResource IconButton}"
                                                Command="{Binding DataContext.EditNhanVienCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}">
                                            <Path Width="16" Height="16" Fill="#334155"
                                                  Data="M3,17.25 L3,21 L6.75,21 L17.81,9.94 14.06,6.19 3,17.25 z M20.71,7.04 c.39-.39.39-1.02 0-1.41 l-2.34-2.34 a1,1 0 0 0 -1.41,0 l-1.83,1.83 3.75,3.75 1.83-1.83 z"/>
                                        </Button>
                                        <Button Style="{StaticResource IconButton}" Margin="4,0,0,0"
                                                Command="{Binding DataContext.LockNhanVienCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}">
                                            <Path Width="16" Height="16" Fill="#334155"
                                                  Data="M12,17 a2,2 0 1 0 0,-4 2,2 0 0 0 0,4 z M17,8 V7 a5,5 0 0 0 -10,0 v1 H5 v12 h14 V8 h-2 z M9,7 a3,3 0 0 1 6,0 v1 H9 V7 z"/>
                                        </Button>
                                        <Button Style="{StaticResource IconButton}" Margin="4,0,0,0"
                                                Command="{Binding DataContext.DeleteNhanVienCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}">
                                            <Path Width="16" Height="16" Fill="#DC2626"
                                                  Data="M6,19 a2,2 0 0 0 2,2 h8 a2,2 0 0 0 2,-2 V7 H6 v12 z M19,4 h-3.5 l-1,-1 h-5 l-1,1 H5 v2 h14 V4 z"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Ca làm việc hôm nay -->
        <Border Style="{StaticResource StatCard}" Margin="0,12,0,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Ca làm việc hôm nay" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <DataGrid ItemsSource="{Binding CaLamHomNay}" AutoGenerateColumns="False" GridLinesVisibility="None"
                          CanUserAddRows="False" CanUserDeleteRows="False" BorderThickness="0" Background="Transparent" RowHeight="44">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nhân viên" Binding="{Binding HoTen}" Width="*"/>
                        <DataGridTextColumn Header="Ngày" Binding="{Binding Ngay, StringFormat={}{0:yyyy-MM-dd}}" Width="140"/>
                        <DataGridTemplateColumn Header="Ca" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ShiftChip}">
                                        <TextBlock Text="{Binding Ca}" Foreground="#B35C00" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Check-in" Binding="{Binding CheckIn, StringFormat={}{0:HH\\:mm}}" Width="120"/>
                        <DataGridTextColumn Header="Check-out" Binding="{Binding CheckOut, StringFormat={}{0:HH\\:mm}}" Width="120"/>
                        <DataGridTemplateColumn Header="Trạng thái" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource StatusChip}">
                                        <TextBlock Text="{Binding TrangThai}" Foreground="#137A4F" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </DockPanel>
</UserControl>
