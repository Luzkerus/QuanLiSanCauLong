<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.NhanVien.ucNhanVien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1080" d:DesignHeight="700"
             Background="#F6FDF9">

    <!-- ===== Resources / Palette ===== -->
    <UserControl.Resources>
        <SolidColorBrush x:Key="ColText"  Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"   Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColCard"  Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ColLine"  Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColPrimary" Color="#2BB673"/>
        <SolidColorBrush x:Key="ColPrimarySoft" Color="#E8F8F1"/>

        <!-- Card trắng + bóng nhẹ -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat card mặc định (kế thừa CardStyle) -->
        <Style x:Key="StatCard" TargetType="Border" BasedOn="{StaticResource CardStyle}"/>

        <!-- KPI card -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Typography cho KPI -->
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Badge / Chips cũ (cho phần Ca làm việc) -->
        <Style x:Key="RoleBadge" TargetType="Border">
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#EFF6FF"/>
            <Setter Property="BorderBrush" Value="#D6E4FF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="StatusChip" TargetType="Border">
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Background" Value="#E8FFF2"/>
            <Setter Property="BorderBrush" Value="#CFF2DD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ShiftChip" TargetType="Border">
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Background" Value="#FFF7E6"/>
            <Setter Property="BorderBrush" Value="#FFE0B3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ===== Icon buttons (Thao tác) ===== -->
        <!-- Nút xám: Sửa, Khóa -->
        <Style x:Key="IconButtonGray" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#EBEEF3"/>
            <Setter Property="BorderBrush" Value="#D1D5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F3F4F8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E1E4EC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút đỏ: Xóa -->
        <Style x:Key="IconButtonDanger" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#F4C3CC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFF5F7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFE4E9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Chip Vai trò -->
        <Style x:Key="RoleChipDynamic" TargetType="Border">
            <!-- Chip nhỏ – ôm sát text -->
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <Setter Property="Background" Value="#181A2F"/>
            <!-- default -->
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding VaiTroText}" Value="Quản lý">
                    <Setter Property="Background" Value="#181A2F"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding VaiTroText}" Value="Full-time">
                    <Setter Property="Background" Value="#2BB673"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding VaiTroText}" Value="Part-time">
                    <Setter Property="Background" Value="#FDA481"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Chip Trạng thái -->
        <Style x:Key="StatusChipDynamic" TargetType="Border">
            <!-- Chip nhỏ – ôm sát chữ -->
            <Setter Property="Padding" Value="6,1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <Setter Property="Background" Value="#2BB673"/>
            <!-- default -->
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <Style.Triggers>
                <DataTrigger Binding="{Binding TrangThaiText}" Value="Đang làm">
                    <Setter Property="Background" Value="#2BB673"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding TrangThaiText}" Value="Nghỉ phép">
                    <Setter Property="Background" Value="#FF9F45"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding TrangThaiText}" Value="Nghỉ việc">
                    <Setter Property="Background" Value="#B4182D"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding TrangThaiText}" Value="Tạm ngưng">
                    <Setter Property="Background" Value="#54162B"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- ===== Nút header ===== -->
        <Style x:Key="HeaderBtnGreen" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0FBF84"/>
            <Setter Property="BorderBrush" Value="#0D7049"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.30" Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderBtnGray" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Foreground" Value="#21382D"/>
            <Setter Property="Background" Value="#F2F4F7"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#D1D5DB"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#D1D5DB"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.22"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ===== Layout ===== -->
    <DockPanel Margin="24">
        <!-- Header -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Quản lý Nhân viên" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ColText}"/>
                    <TextBlock Text="Quản lý hồ sơ nhân viên" FontWeight="SemiBold" Foreground="{StaticResource ColSub}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <Button Style="{StaticResource HeaderBtnGreen}"
                            Click="BtnThemNhanVien_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Margin="0,0,0,0"/>
                            <TextBlock Text="Thêm nhân viên" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- KPI -->
        <UniformGrid DockPanel.Dock="Top" Rows="1" Columns="3" Margin="0,0,0,16">
            <!-- Tổng nhân viên -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Tổng nhân viên" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Name="txtTongNV" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#ECF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="👥" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Full-time -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Nhân viên Full-time" Style="{StaticResource KpiTitle}"/>
                        <TextBlock x:Name="txtTongNVFT" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#E8FBF2" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="💼" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Part-time -->
            <Border Style="{StaticResource KpiCardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Nhân viên Part-time" Style="{StaticResource KpiTitle}"/>
                        <TextBlock x:Name="txtTongNVPT" Style="{StaticResource KpiValue}"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#FFF3E6" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="⏱️" FontSize="20"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Danh sách nhân viên -->
        <Border Style="{StaticResource StatCard}">
            <StackPanel>
                <!-- Header DS -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="🗍 Danh sách nhân viên" FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <!-- Search box -->
                    <Border Grid.Column="1" Background="White" CornerRadius="10"
                            BorderBrush="{StaticResource ColLine}" BorderThickness="1"
                            Padding="10" Width="300">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Path Grid.Column="0" Margin="0,0,8,0"
                                  Data="M15.5,14 L20,18.5 18.5,20 14,15.5 z M10,16 A6,6 0 1 1 10,4 A6,6 0 0 1 10,16 z"
                                  Width="16" Height="16" Fill="{StaticResource ColSub}"/>

                            <Grid Grid.Column="1">
                                <TextBox x:Name="tbSearch" TextChanged="tbSearch_TextChanged"
                                         BorderThickness="0" Background="Transparent"
                                         Foreground="{StaticResource ColText}"
                                         Text="{Binding TuKhoa, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock IsHitTestVisible="False" Margin="2,0,0,0" 
                                           Foreground="{StaticResource ColSub}" Opacity="0.7"
                                           Text="Tìm nhân viên..."
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=tbSearch}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, ElementName=tbSearch}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Bảng -->
                <DataGrid x:Name="dgNhanVien"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          RowHeight="44"
                          ColumnHeaderHeight="40"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          BorderThickness="0"
                          Background="Transparent"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          RowBackground="White"
                          AlternatingRowBackground="#F6FFF9"
                          HorizontalGridLinesBrush="#E3F0E8"
                          VerticalGridLinesBrush="#E3F0E8"
                          SnapsToDevicePixels="True"
                          AlternationCount="2"
                         >

                    <DataGrid.Resources>
                        <!-- Header -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#E6F7ED"/>
                            <Setter Property="Foreground" Value="#256847"/>
                            <Setter Property="BorderBrush" Value="#D1E8DD"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,6"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>

                        <!-- Hàng: template có vạch xanh bên trái -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridRow">
                                        <Border x:Name="RowBorder"
                                                BorderBrush="#E3F0E8"
                                                BorderThickness="0,0,0,1"
                                                Background="{TemplateBinding Background}">
                                            <Grid>
                                                <!-- vạch bên trái -->
                                                <Border x:Name="Stripe"
                                                        Width="3"
                                                        HorizontalAlignment="Left"
                                                        Background="Transparent"/>

                                                <SelectiveScrollingGrid Margin="0">
                                                    <SelectiveScrollingGrid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </SelectiveScrollingGrid.ColumnDefinitions>
                                                    <SelectiveScrollingGrid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </SelectiveScrollingGrid.RowDefinitions>

                                                    <DataGridCellsPresenter Grid.Column="1"/>
                                                    <DataGridDetailsPresenter Grid.Column="1" Grid.Row="1"
                                                                              Visibility="{TemplateBinding DetailsVisibility}"/>
                                                </SelectiveScrollingGrid>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <!-- Dòng xen kẽ -->
                                            <Trigger Property="AlternationIndex" Value="1">
                                                <Setter TargetName="RowBorder" Property="Background" Value="#F6FFF9"/>
                                            </Trigger>

                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="RowBorder" Property="Background" Value="#F0FBF5"/>
                                                <Setter TargetName="Stripe" Property="Background" Value="#2BB673"/>
                                            </Trigger>

                                            <!-- Selected -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="RowBorder" Property="Background" Value="#E3F5EE"/>
                                                <Setter TargetName="Stripe" Property="Background" Value="#2BB673"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- Ô: giữ chữ khi selected -->
                        <!-- Cell: chữ lớn hơn & centered -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="1,0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource ColText}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Tên nhân viên -->
                        <DataGridTemplateColumn Header="Tên nhân viên" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding TenNV}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource ColText}"/>
                                        <TextBlock Text="{Binding GhiChu}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource ColSub}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- SĐT -->
                        <DataGridTextColumn Header="SĐT"
                                            Binding="{Binding SDT}"
                                            Width="1.2*"/>

                        <!-- Email -->
                        <DataGridTextColumn Header="Email"
                                            Binding="{Binding Email}"
                                            Width="1.6*"/>

                        <!-- Username -->
                        <DataGridTextColumn Header="Username"
                                            Binding="{Binding Username}"
                                            Width="1.2*"/>

                        <!-- Password -->
                        <DataGridTemplateColumn Header="Password" Width="1.1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <!-- Hiển thị mật khẩu bằng dấu * -->
                                        <TextBlock Text="*****" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Vai trò -->
                        <DataGridTemplateColumn Header="Vai trò" Width="1.1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource RoleChipDynamic}">
                                        <TextBlock Text="{Binding VaiTro}"
                                                   Foreground="White"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Ngày vào làm -->
                        <DataGridTextColumn Header="Ngày vào làm"
                                            Binding="{Binding NgayVaoLam, StringFormat={}{0:dd/MM/yyyy}}"
                                            Width="1.1*"/>

                        <!-- Trạng thái -->
                        <DataGridTemplateColumn Header="Trạng thái" Width="1.1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource StatusChipDynamic}">
                                        <TextBlock Text="{Binding TrangThai}"
                                                   Foreground="White"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Thao tác -->
                        <DataGridTemplateColumn Header="Thao tác" Width="130">
                            <!-- CellStyle riêng: bỏ padding để icon không tràn -->
                            <DataGridTemplateColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </DataGridTemplateColumn.CellStyle>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <!-- Sửa -->
                                        <Button Style="{StaticResource IconButtonGray}"
                                                ToolTip="Chỉnh sửa"
