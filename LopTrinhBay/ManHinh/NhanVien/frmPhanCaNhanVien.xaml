<Window x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.NhanVien.frmPhanCaNhanVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phân ca nhân viên"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Width="900" Height="560">

    <!-- ===== PALETTE ===== -->
    <Window.Resources>
        <SolidColorBrush x:Key="ColText"        Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"         Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColCard"        Color="White"/>
        <SolidColorBrush x:Key="ColLine"        Color="#E1F0E9"/>
        <SolidColorBrush x:Key="ColPrimary"     Color="#2BB673"/>
        <SolidColorBrush x:Key="ColPrimarySoft" Color="#E8F8F1"/>

        <!-- Card -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label & Box cho field -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,6,0,2"/>
        </Style>

        <Style x:Key="FieldBox" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>

        <!-- Primary button -->
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="14,4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0FBF84"/>
            <Setter Property="BorderBrush" Value="#0D7049"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#0DAA78"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ghost button -->
        <Style x:Key="BtnGhost" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="14,4"/>
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="Background" Value="#F3F5F4"/>
            <Setter Property="BorderBrush" Value="#E1E5EA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ===== OUTER CARD ===== -->
    <Border CornerRadius="16"
            BorderBrush="{StaticResource ColLine}"
            BorderThickness="1"
            Background="{StaticResource ColCard}"
            Padding="0" Margin="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.35"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== HEADER ===== -->
            <Border Grid.Row="0" Background="White" CornerRadius="16,16,0,0"
                    BorderBrush="{StaticResource ColLine}" BorderThickness="0,0,0,1">
                <Grid MouseDown="Header_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Margin="16,8,0,8">
                        <TextBlock Text="Phân ca nhân viên"
                                   FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource ColText}"/>
                        <TextBlock Text="Sắp xếp ca làm việc cho nhân viên Full-time và Part-time"
                                   FontSize="12" Foreground="{StaticResource ColSub}"/>
                    </StackPanel>

                    <!-- Nút thu nhỏ (nếu cần) -->
                    <Button Grid.Column="1" Width="32" Height="26" Margin="0,8,4,8"
                            Click="BtnMinimize_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="6" Background="Transparent">
                                    <TextBlock Text="—" HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Nút đóng -->
                    <Button Grid.Column="2" Width="32" Height="26" Margin="0,8,10,8"
                            Click="BtnClose_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="6" Background="Transparent">
                                    <TextBlock Text="✕" HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- ===== BODY ===== -->
            <Grid Grid.Row="1" Margin="14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.15*"/>
                    <ColumnDefinition Width="1.35*"/>
                </Grid.ColumnDefinitions>

                <!-- ==== LEFT: THÔNG TIN CA LÀM ==== -->
                <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,10,0">
                    <StackPanel>

                        <TextBlock Text="Thông tin ca làm" FontWeight="SemiBold"
                                   Foreground="{StaticResource ColText}" Margin="0,0,0,6"/>

                        <!-- Nhân viên -->
                        <TextBlock Text="Nhân viên" Style="{StaticResource FieldLabel}"/>
                        <Border Style="{StaticResource FieldBox}">
                            <ComboBox BorderThickness="0"
                                      ItemsSource="{Binding DanhSachNhanVien}"
                                      SelectedItem="{Binding NhanVienDangChon}"
                                      DisplayMemberPath="HoTen"/>
                        </Border>

                        <!-- Loại nhân viên -->
                        <TextBlock Text="Loại nhân viên" Style="{StaticResource FieldLabel}"/>
                        <Border Style="{StaticResource FieldBox}">
                            <TextBox BorderThickness="0" Background="Transparent"
                                     Text="{Binding LoaiNhanVienHienThi}"
                                     IsReadOnly="True" Foreground="{StaticResource ColSub}"/>
                        </Border>

                        <!-- Ngày làm -->
                        <TextBlock Text="Ngày làm" Style="{StaticResource FieldLabel}"/>
                        <Border Style="{StaticResource FieldBox}" Padding="4,2">
                            <DatePicker SelectedDate="{Binding NgayLam, Mode=TwoWay}"
                                        BorderThickness="0"/>
                        </Border>

                        <!-- Ca (sáng / chiều / tối) -->
                        <TextBlock Text="Ca làm việc" Style="{StaticResource FieldLabel}"/>
                        <Border Style="{StaticResource FieldBox}">
                            <ComboBox BorderThickness="0"
                                      SelectedItem="{Binding CaDangChon}">
                                <ComboBoxItem Content="Ca sáng (06:00 - 12:00)"/>
                                <ComboBoxItem Content="Ca chiều (12:00 - 18:00)"/>
                                <ComboBoxItem Content="Ca tối (18:00 - 23:00)"/>
                            </ComboBox>
                        </Border>

                        <!-- Giờ chi tiết (cho Part-time có thể chỉnh) -->
                        <Grid Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Giờ bắt đầu" Style="{StaticResource FieldLabel}" Margin="0,0,0,2"/>
                                <Border Style="{StaticResource FieldBox}">
                                    <TextBox BorderThickness="0" Background="Transparent"
                                             Text="{Binding GioBatDau}"
                                             ToolTip="Ví dụ: 09:00"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Giờ kết thúc" Style="{StaticResource FieldLabel}" Margin="0,0,0,2"/>
                                <Border Style="{StaticResource FieldBox}">
                                    <TextBox BorderThickness="0" Background="Transparent"
                                             Text="{Binding GioKetThuc}"
                                             ToolTip="Ví dụ: 11:30"/>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Ghi chú -->
                        <TextBlock Text="Ghi chú" Style="{StaticResource FieldLabel}"/>
                        <Border Style="{StaticResource FieldBox}">
                            <TextBox BorderThickness="0" Background="Transparent"
                                     Text="{Binding GhiChu}" AcceptsReturn="True" Height="60"
                                     TextWrapping="Wrap"/>
                        </Border>

                        <!-- Loại áp dụng -->
                        <TextBlock Text="Áp dụng" Style="{StaticResource FieldLabel}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <RadioButton Content="Chỉ ngày này"
                                         GroupName="ApplyType"
                                         Margin="0,0,12,0"
                                         IsChecked="{Binding ApDungMotNgay}"/>
                            <RadioButton Content="Lặp lại hàng tuần"
                                         GroupName="ApplyType"
                                         IsChecked="{Binding ApDungLapLai}"/>
                        </StackPanel>

                        <!-- Buttons left -->
                        <StackPanel Orientation="Horizontal" Margin="0,14,0,0" HorizontalAlignment="Right">
                            <Button Style="{StaticResource BtnGhost}" Margin="0,0,8,0"
                                    Click="BtnClear_Click">
                                Xóa thông tin
                            </Button>
                            <Button Style="{StaticResource BtnPrimary}"
                                    Click="BtnAddShift_Click">
                                Thêm ca vào danh sách
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- ==== RIGHT: DANH SÁCH CA LÀM ==== -->
                <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filter -->
                        <StackPanel Grid.Row="0">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Ca làm việc đã phân" FontWeight="SemiBold"
                                           Foreground="{StaticResource ColText}"
                                           VerticalAlignment="Center"/>

                                <!-- Filter theo ngày -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <TextBlock Text="Ngày:" VerticalAlignment="Center"
                                               Foreground="{StaticResource ColSub}" Margin="0,0,6,0"/>
                                    <DatePicker SelectedDate="{Binding NgayFilter}"
                                                Width="130"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <!-- Search -->
                                <Border Grid.Column="0" CornerRadius="8" Background="White"
                                        BorderBrush="{StaticResource ColLine}" BorderThickness="1"
                                        Padding="8,4" Margin="0,0,6,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="🔍" Margin="0,0,6,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" BorderThickness="0"
                                                 Background="Transparent"
                                                 Text="{Binding TuKhoaCa, UpdateSourceTrigger=PropertyChanged}"
                                                 />
                                    </Grid>
                                </Border>

                                <!-- Lọc loại NV -->
                                <Border Grid.Column="1" CornerRadius="8" Background="White"
                                        BorderBrush="{StaticResource ColLine}" BorderThickness="1"
                                        Padding="6,2" Margin="0,0,0,8">
                                    <ComboBox BorderThickness="0"
                                              SelectedItem="{Binding LoaiNhanVienFilter}">
                                        <ComboBoxItem>Tất cả</ComboBoxItem>
                                        <ComboBoxItem>Full-time</ComboBoxItem>
                                        <ComboBoxItem>Part-time</ComboBoxItem>
                                    </ComboBox>
                                </Border>
                            </Grid>
                        </StackPanel>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding DanhSachCa}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  Margin="0,4,0,0"
                                  RowHeight="40"
                                  BorderThickness="0"
                                  Background="Transparent">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F5F8F7"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nhân viên"
                                                    Binding="{Binding HoTenNhanVien}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Loại"
                                                    Binding="{Binding LoaiNhanVien}"
                                                    Width="90"/>
                                <DataGridTextColumn Header="Ngày"
                                                    Binding="{Binding Ngay, StringFormat={}{0:dd/MM/yyyy}}"
                                                    Width="110"/>
                                <DataGridTextColumn Header="Ca"
                                                    Binding="{Binding TenCa}"
                                                    Width="140"/>
                                <DataGridTextColumn Header="Giờ"
                                                    Binding="{Binding KhoangGio}"
                                                    Width="130"/>
                                <DataGridTextColumn Header="Ghi chú"
                                                    Binding="{Binding GhiChu}"
                                                    Width="*"/>
                                <DataGridTemplateColumn Header="Thao tác" Width="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Sửa" Style="{StaticResource BtnGhost}"
                                                        Padding="8,2" Margin="0,0,4,0"
                                                        Command="{Binding DataContext.CmdEditCa,
                                                                RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"/>
                                                <Button Content="Xóa" Style="{StaticResource BtnGhost}"
                                                        Padding="8,2"
                                                        Command="{Binding DataContext.CmdDeleteCa,
                                                                RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                    </Grid>
                </Border>
            </Grid>

            <!-- ===== FOOTER ===== -->
            <Grid Grid.Row="2" Margin="14,0,14,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Lưu ý: Nhân viên Full-time thường phân ca cố định theo tuần; Part-time có thể linh hoạt theo giờ."
                           Foreground="{StaticResource ColSub}"
                           FontSize="11"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource BtnGhost}" Margin="0,0,8,0"
                            Click="BtnCancel_Click">
                        Đóng
                    </Button>
                    <Button Style="{StaticResource BtnPrimary}"
                            Click="BtnSaveAll_Click">
                        Lưu phân ca
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
