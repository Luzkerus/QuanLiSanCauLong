<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.HeThong.ucCauHinhHeThong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="760" d:DesignWidth="1280"
             Background="#F6FDF9">

    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColText"   Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"    Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder" Color="#E6EFEA"/>
        <SolidColorBrush x:Key="ColCard"   Color="White"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#F6FDF9"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,6,0,12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        <!-- Section (nền pastel) -->
        <Style x:Key="Section" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Input TextBox mặc định -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#F6FDF9"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,6,0,12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- Label cho field -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- (Để dành, nếu sau này cần dùng ToggleButton dạng pill) -->
        <Style x:Key="Pill" TargetType="ToggleButton">
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border CornerRadius="18"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Margin="6,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#E6F9F2"/>
                    <Setter Property="BorderBrush" Value="#0FBF84"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListBoxItem cho danh sách vai trò -->
        <Style x:Key="RoleItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="bd"
                                Padding="10,6"
                                CornerRadius="10"
                                Background="White"
                                BorderBrush="#D8EDE6"
                                BorderThickness="1">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding TenVaiTro}"
                                           Foreground="{StaticResource ColText}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding MoTa}"
                                           Foreground="{StaticResource ColSub}"
                                           FontSize="11"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F0FBF7"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0FBF84"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#0FBF84"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Row phân quyền -->
        <Style x:Key="PermissionRowBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#F9FBFA"/>
            <Setter Property="BorderBrush" Value="#E2ECE7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="RuleCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="0"
                              ShadowDepth="0"
                              Opacity="0"
                              Color="#000000"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>

                <!-- Hover → nổi lên -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="14"
                                      ShadowDepth="0"
                                      Opacity="0.20"
                                      Color="#000000"/>
                        </Setter.Value>
                    </Setter>

                    <!-- nhấn nền sáng hơn nhẹ -->
                    <Setter Property="Opacity" Value="0.98"/>
                </Trigger>

            </Style.Triggers>
        </Style>


    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== TITLE ===== -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Cài đặt Hệ thống"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource ColText}"/>
            <TextBlock Text="Cấu hình tham số và phân quyền"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource ColSub}"
                       FontSize="12"/>
        </StackPanel>

        <!-- ===== TABCONTROL CHÍNH ===== -->
        <TabControl Grid.Row="1" SelectionChanged="TabControl_SelectionChanged"
                    Margin="0,10,0,0"
                    BorderThickness="0"
                    Background="Transparent">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="🔑 Đổi mật khẩu" FontSize="14"/>
                </TabItem.Header>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Đổi mk -->
                        <ColumnDefinition Width="*"/>
                        <!-- Ảnh động -->
                        <ColumnDefinition Width="1.2*"/>
                        <!-- Nội quy -->
                    </Grid.ColumnDefinitions>

                    <!-- ====================== CỘT 1: ĐỔI MẬT KHẨU ========================== -->
                    <Border Grid.Column="0"
                            Style="{StaticResource Card}"
                            Padding="20"
                            Margin="0,0,6,0">

                        <StackPanel>

                            <TextBlock Text="Đổi mật khẩu"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource ColText}"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Mật khẩu cũ" Style="{StaticResource FieldLabel}"/>
                            <PasswordBox x:Name="TxtOldPassword"
                                         Height="32"
                                         Padding="8"
                                         BorderBrush="{StaticResource ColBorder}"
                                         BorderThickness="1"
                                         Margin="0,0,0,10"/>

                            <TextBlock Text="Mật khẩu mới" Style="{StaticResource FieldLabel}"/>
                            <PasswordBox x:Name="TxtNewPassword"
                                         Height="32"
                                         Padding="8"
                                         BorderBrush="{StaticResource ColBorder}"
                                         BorderThickness="1"
                                         Margin="0,0,0,10"/>

                            <TextBlock Text="Nhập lại mật khẩu mới" Style="{StaticResource FieldLabel}"/>
                            <PasswordBox x:Name="TxtConfirmNewPassword"
                                         Height="32"
                                         Padding="8"
                                         BorderBrush="{StaticResource ColBorder}"
                                         BorderThickness="1"
                                         Margin="0,0,0,14"/>

                            <!-- Nút đổi mật khẩu: tròn + hiệu ứng -->
                            <Button Content="Đổi mật khẩu"
                                    Width="150" Height="38"
                                    HorizontalAlignment="Right"
                                    Cursor="Hand"
                                    Foreground="White"
                                    Background="#0FBF84"
                                    BorderThickness="0"
                                    Click="btnDoiMK_Click">

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bd"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="12"
                                                Padding="10,4">

                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>

                                        <ControlTemplate.Triggers>

                                            <!-- Hover nhẹ -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                                <Setter TargetName="bd" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="6"
                                                                          ShadowDepth="0"
                                                                          Opacity="0.18"
                                                                          Color="#0DAA78"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <!-- Disabled -->
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                                            </Trigger>

                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>


                        </StackPanel>
                    </Border>


                    <!-- ====================== CỘT 2: ẢNH ĐỘNG ========================== -->
                    <Border Grid.Column="1"
                            Style="{StaticResource Card}"
                            Padding="10"
                            Margin="6,0,6,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">

                        <Grid>
                            <Image Source="/LopTrinhBay/TaiNguyen/Logo/Sodosan.png"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Grid>
                    </Border>



                    <!-- ====================== CỘT 3: NỘI QUY ========================== -->
                    <Border Grid.Column="2"
                            Style="{StaticResource Card}"
                            Padding="22">

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>

                                <!-- TIÊU ĐỀ LỚN -->
                                <TextBlock Text="📌 Nội quy &amp; Quy định sân"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource ColText}"
                                           Margin="0,0,0,14"/>

                                <!-- ========== SECTION: KHÁCH THUÊ SÂN ========== -->
                                <Border Style="{StaticResource RuleCardStyle}"
                                        Background="#F6FDF9"
                                        BorderBrush="{StaticResource ColBorder}"
                                        BorderThickness="1">

                                    <StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="👥"
                                                       FontSize="18"
                                                       Margin="0,0,6,0"/>
                                            <TextBlock Text="1. Nội quy dành cho khách thuê sân"
                                                       FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource ColText}"/>
                                        </StackPanel>

                                        <TextBlock Text="• Đến đúng giờ đã đặt; đến trễ vẫn tính giờ đã đặt."
                                                   TextWrapping="Wrap"
                                                   Margin="0,6,0,0"/>

                                        <TextBlock Text="• Mang giày cầu lông đế mềm; tránh kéo lê giày gây trầy sàn."
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>

                                        <TextBlock Text="• Không hút thuốc hoặc ăn uống trong khu vực sân."
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>

                                        <TextBlock Text="• Không tự ý điều chỉnh đèn, quạt hoặc thiết bị kỹ thuật."
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>

                                    </StackPanel>
                                </Border>

                                <!-- ========== SECTION: NHÂN VIÊN ========== -->
                                <Border Style="{StaticResource RuleCardStyle}"
                                        Background="#FFF8DD"
                                        BorderBrush="#E6D8A8"
                                        BorderThickness="1">

                                    <StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🧑‍💼"
                                                       FontSize="18"
                                                       Margin="0,0,6,0"/>
                                            <TextBlock Text="2. Nội quy &amp; Quy định cho nhân viên"
                                                       FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource ColText}"/>
                                        </StackPanel>

                                        <TextBlock Text="• Có mặt trước ca trực 10–15 phút, mặc đồng phục đầy đủ."
                                                   TextWrapping="Wrap"
                                                   Margin="0,6,0,0"/>

                                        <TextBlock Text="• Không tự ý đổi ca, giảm giá, hoặc cho mượn sân khi chưa được duyệt."
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>

                                        <TextBlock Text="• Kiểm tra mặt sân, lưới, quạt và ánh sáng trước khi giao sân."
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>

                                    </StackPanel>
                                </Border>

                                <!-- ========== SECTION: VẬN HÀNH & AN TOÀN ========== -->
                                <Border Style="{StaticResource RuleCardStyle}"
                                        Background="#F3EAFE"
                                        BorderBrush="#D7C3F5"
                                        BorderThickness="1">

                                    <StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🛡️"
                                                       FontSize="18"
                                                       Margin="0,0,6,0"/>
                                            <TextBlock Text="3. Ghi chú vận hành &amp; An toàn"
                                                       FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource ColText}"/>
                                        </StackPanel>

                                        <TextBlock Text="• Lau khô ngay khi sân có nước hoặc mồ hôi để tránh trơn trượt."
                                                   TextWrapping="Wrap"
                                                   Margin="0,6,0,0"/>

                                        <TextBlock Text="• Khi có chấn thương, hỗ trợ sơ cứu và báo quản lý ngay."
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>

                                        <TextBlock Text="• Cuối ca: tổng hợp giờ sân, dịch vụ, tiền mặt/QR và bàn giao ca."
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>

                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                </Grid>
            </TabItem>


            <!-- =======================
                 TAB 1: CẤU HÌNH HỆ THỐNG
                 ======================= -->
            <TabItem Name="TabCauHinhHeThong">
                <TabItem.Header>
                    <TextBlock Text="⚙ Cấu hình hệ thống" FontSize="14"/>
                </TabItem.Header>

                <DockPanel Margin="0,8,0,0">
                    <!-- Nút lưu cấu hình -->
                    <Button Content="Lưu cấu hình"
                            DockPanel.Dock="Bottom"
                            Width="140" Height="36"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Right"
                            Background="#0FBF84"
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding CmdSave}"
                            Cursor="Hand"/>

                    <!-- Nội dung 2 cột -->
                    <ScrollViewer DockPanel.Dock="Top"
                                  VerticalScrollBarVisibility="Auto">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- Đặt sân & Cảnh báo -->
                            <Border Grid.Column="0"
                                    Style="{StaticResource Section}"
                                    Background="#FFF8DD"
                                    Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Đặt sân &amp; Cảnh báo"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"
                                               Foreground="{StaticResource ColText}"/>

                                    <TextBlock Text="Cảnh báo No-show (phút)"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding CanhBaoNoShow}"/>

                                    <TextBlock Text="Số sân tối đa / lần đặt"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding SoSanToiDa}"/>

                                    <TextBlock Text="Số slot tối đa / lần đặt"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding SoSlotToiDa}"/>
                                </StackPanel>
                            </Border>

                            <!-- Bảo mật & Kho -->
                            <Border Grid.Column="1"
                                    Style="{StaticResource Section}"
                                    Background="#F3EAFE"
                                    Margin="10,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Bảo mật &amp; Kho"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"
                                               Foreground="{StaticResource ColText}"/>

                                    <TextBlock Text="Timeout phiên đăng nhập (phút)"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding TimeoutPhien}"/>

                                    <TextBlock Text="Ngưỡng tồn kho thấp"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding NguongTonKhoThap}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>

         

        </TabControl>
    </Grid>
</UserControl>
