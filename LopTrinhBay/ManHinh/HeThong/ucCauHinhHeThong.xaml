<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.HeThong.ucCauHinhHeThong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="760" d:DesignWidth="1280"
             Background="#F6FDF9">

    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColText"   Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"    Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColBorder" Color="#E6EFEA"/>
        <SolidColorBrush x:Key="ColCard"   Color="White"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#F6FDF9"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,6,0,12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        <!-- Section (nền pastel) -->
        <Style x:Key="Section" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Input TextBox mặc định -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#F6FDF9"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,6,0,12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- Label cho field -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- (Để dành, nếu sau này cần dùng ToggleButton dạng pill) -->
        <Style x:Key="Pill" TargetType="ToggleButton">
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border CornerRadius="18"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Margin="6,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#E6F9F2"/>
                    <Setter Property="BorderBrush" Value="#0FBF84"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListBoxItem cho danh sách vai trò -->
        <Style x:Key="RoleItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="bd"
                                Padding="10,6"
                                CornerRadius="10"
                                Background="White"
                                BorderBrush="#D8EDE6"
                                BorderThickness="1">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding TenVaiTro}"
                                           Foreground="{StaticResource ColText}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding MoTa}"
                                           Foreground="{StaticResource ColSub}"
                                           FontSize="11"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F0FBF7"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0FBF84"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#0FBF84"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Row phân quyền -->
        <Style x:Key="PermissionRowBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#F9FBFA"/>
            <Setter Property="BorderBrush" Value="#E2ECE7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== TITLE ===== -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Cài đặt Hệ thống"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource ColText}"/>
            <TextBlock Text="Cấu hình tham số và phân quyền"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource ColSub}"
                       FontSize="12"/>
        </StackPanel>

        <!-- ===== TABCONTROL CHÍNH ===== -->
        <TabControl Grid.Row="1" SelectionChanged="TabControl_SelectionChanged"
                    Margin="0,10,0,0"
                    BorderThickness="0"
                    Background="Transparent">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="🔑 Đổi mật khẩu" FontSize="14"/>
                </TabItem.Header>

                <DockPanel Margin="0,8,0,0">

                    <Button Content="Đổi mật khẩu"
                            DockPanel.Dock="Bottom"
                            Width="140" Height="36"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Right"
                            Background="#0FBF84"
                            Foreground="White"
                            BorderThickness="0"
                            Click="btnDoiMK_Click"
                            Cursor="Hand"/>

                    <Border Style="{StaticResource Card}"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Width="400"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Mật khẩu cũ" Style="{StaticResource FieldLabel}"/>
                            <PasswordBox x:Name="TxtOldPassword" Tag="Mật khẩu cũ"/>

                            <TextBlock Text="Mật khẩu mới" Style="{StaticResource FieldLabel}"/>
                            <PasswordBox x:Name="TxtNewPassword" Tag="Mật khẩu mới"/>

                            <TextBlock Text="Nhập lại mật khẩu mới" Style="{StaticResource FieldLabel}"/>
                            <PasswordBox x:Name="TxtConfirmNewPassword" Tag="Nhập lại mật khẩu mới"/>
                        </StackPanel>
                    </Border>
                </DockPanel>
            </TabItem>
            <!-- =======================
                 TAB 1: CẤU HÌNH HỆ THỐNG
                 ======================= -->
            <TabItem Name="TabCauHinhHeThong">
                <TabItem.Header>
                    <TextBlock Text="⚙ Cấu hình hệ thống" FontSize="14"/>
                </TabItem.Header>

                <DockPanel Margin="0,8,0,0">
                    <!-- Nút lưu cấu hình -->
                    <Button Content="Lưu cấu hình"
                            DockPanel.Dock="Bottom"
                            Width="140" Height="36"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Right"
                            Background="#0FBF84"
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding CmdSave}"
                            Cursor="Hand"/>

                    <!-- Nội dung 2 cột -->
                    <ScrollViewer DockPanel.Dock="Top"
                                  VerticalScrollBarVisibility="Auto">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- Đặt sân & Cảnh báo -->
                            <Border Grid.Column="0"
                                    Style="{StaticResource Section}"
                                    Background="#FFF8DD"
                                    Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Đặt sân &amp; Cảnh báo"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"
                                               Foreground="{StaticResource ColText}"/>

                                    <TextBlock Text="Cảnh báo No-show (phút)"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding CanhBaoNoShow}"/>

                                    <TextBlock Text="Số sân tối đa / lần đặt"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding SoSanToiDa}"/>

                                    <TextBlock Text="Số slot tối đa / lần đặt"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding SoSlotToiDa}"/>
                                </StackPanel>
                            </Border>

                            <!-- Bảo mật & Kho -->
                            <Border Grid.Column="1"
                                    Style="{StaticResource Section}"
                                    Background="#F3EAFE"
                                    Margin="10,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Bảo mật &amp; Kho"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"
                                               Foreground="{StaticResource ColText}"/>

                                    <TextBlock Text="Timeout phiên đăng nhập (phút)"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding TimeoutPhien}"/>

                                    <TextBlock Text="Ngưỡng tồn kho thấp"
                                               Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding NguongTonKhoThap}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>

            <!-- =======================
                 TAB 2: PHÂN QUYỀN
                 ======================= -->
           

        </TabControl>
    </Grid>
</UserControl>
