<Window x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.KhoPOS.frmNhapHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhập hàng"
        MinWidth="1100" MinHeight="680"
        WindowStartupLocation="CenterScreen"
        Background="#F6FDF9"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <!-- ========== RESOURCES ========== -->
    <Window.Resources>
        <!-- Watermark cho TextBox -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#9AA5A0"
                                       IsHitTestVisible="False"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="watermark" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Canh phải số trong lưới -->
        <Style x:Key="CellRight" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="EditRight" TargetType="TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>

        <!-- Card tổng tiền -->
        <Style x:Key="SumCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#E8F0EC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      ShadowDepth="0"
                                      Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút primary bo góc -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2BB673"/>
            <Setter Property="BorderBrush" Value="#2BB673"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#27A567"/>
                                <Setter TargetName="bd" Property="BorderBrush"  Value="#27A567"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1E8F55"/>
                                <Setter TargetName="bd" Property="BorderBrush"  Value="#1E8F55"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#16A34A"/>
                                <Setter TargetName="bd" Property="BorderBrush"  Value="#5E8F55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút ghost trắng/viền -->
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Foreground" Value="#21382D"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D9D9D9"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F6F6F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ========== HOTKEYS ========== -->
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding LuuPhieuCommand}"/>
    </Window.InputBindings>

    <!-- ========== LAYOUT CHÍNH ========== -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header + actions -->
            <RowDefinition Height="Auto"/>
            <!-- thông tin phiếu -->
            <RowDefinition Height="*"/>
            <!-- lưới hàng -->
            <RowDefinition Height="Auto"/>
            <!-- tổng tiền -->
        </Grid.RowDefinitions>

        <!-- ===== Header + Actions ===== -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Nhập hàng" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="Tạo phiếu nhập kho" Foreground="#6B7E74"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <!-- Lưu phiếu -->
                <Button Style="{StaticResource PrimaryButton}" Click="btnLuuPhieu_Click"
                        >
                    <TextBlock Text="Lưu phiếu" FontSize="16" FontWeight="SemiBold"/>
                </Button>

                <!-- Xuất phiếu (ngay sau Lưu phiếu) -->

            </StackPanel>
        </Grid>

        <!-- ===== Thông tin phiếu ===== -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- 3 cột: NCC (2*), Ngày phiếu (*), Số phiếu (*) -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Hàng 1 -->
                <!-- Nhà cung cấp (TextBox + khung bo góc) -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Nhà cung cấp" Foreground="#6B7E74"/>

                    <Grid>
                        <Border Background="White"
    CornerRadius="0"
    BorderBrush="Gray"
    BorderThickness="0.8"
    Padding="0">
                        <TextBox 
            x:Name="txtNhaCungCap"
            Height="30"
            Style="{StaticResource WatermarkTextBox}"
            Tag="Nhập tên nhà cung cấp..."
            Text="{Binding NhaCungCapText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextChanged="txtNhaCungCap_TextChanged"
            PreviewKeyDown="txtNhaCungCap_PreviewKeyDown"
            VerticalContentAlignment="Center"
            />
                        </Border>

                        <Popup x:Name="popupGoiYNCC"
               PlacementTarget="{Binding ElementName=txtNhaCungCap}"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True"
               Width="{Binding ElementName=txtNhaCungCap, Path=ActualWidth}"
               MaxHeight="150"
               IsOpen="False">

                            <Border BorderBrush="#E1F0EC" BorderThickness="1" Background="White" CornerRadius="4">
                                <ListBox 
                    x:Name="lstNhaCungCapGoiY"
                    Background="Transparent"
                    BorderThickness="0"
                    SelectionChanged="lstNhaCungCapGoiY_SelectionChanged"
                    KeyboardNavigation.TabNavigation="None"
                    />
                            </Border>
                        </Popup>
                    </Grid>
                </StackPanel>


                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,12,8">
                    <TextBlock Text="Ngày nhập" Foreground="#6B7E74"/>
                    <DatePicker x:Name="dpngayNhap"  Height="32" IsHitTestVisible="False" />
                </StackPanel>

                <!-- Số phiếu -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,8">
                    <TextBlock Text="Số phiếu" Foreground="#6B7E74"/>
                    <TextBox x:Name="txtSoPhieu" Height="32" IsReadOnly="True"/>
                </StackPanel>

                <!-- Hàng 2 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,0">
                    <TextBlock Text="Ghi chú" Foreground="#6B7E74"/>
                    <TextBox x:Name="txtGhiChu" Text="{Binding GhiChu}" Height="32"/>
                </StackPanel>

             
            </Grid>
        </Border>

        <!-- ===== Lưới hàng hóa: NHẬP NHANH + TÌM KIẾM + DATAGRID ===== -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Nhập nhanh -->
                    <RowDefinition Height="12"/>
                    <!-- spacing -->
                    <RowDefinition Height="Auto"/>
                    <!-- Tìm kiếm -->
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                </Grid.RowDefinitions>

                <!-- ========== NHẬP NHANH ========== -->
                <Border Grid.Row="0" Padding="10"
                        Background="#F9FBFA" CornerRadius="10"
                        BorderBrush="#E8F0EC" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <!-- Mã hàng -->
                            <ColumnDefinition Width="2*"/>
                            <!-- Tên hàng -->
                            <ColumnDefinition Width="100"/>
                            <!-- ĐVT -->
                            <ColumnDefinition Width="80"/>
                            <!-- SL -->
                            <ColumnDefinition Width="120"/>
                            <!-- Giá nhập -->
                            <ColumnDefinition Width="80"/>
                            <!-- CK% -->
                            <ColumnDefinition Width="120"/>
                            <!-- Số lô -->
                            <ColumnDefinition Width="130"/>
                            <!-- HSD -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Nút -->
                        </Grid.ColumnDefinitions>

                        <!-- Mã hàng -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Mã hàng" Foreground="#6B7E74"/>
                            <TextBox Height="32" x:Name="txtMaHang" IsReadOnly="True"
                                     Text="{Binding NhapNhanh_MaHang, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Tên hàng -->
                        <StackPanel Grid.Column="1" Margin="0,0,8,0">
                            <TextBlock Text="Tên hàng" Foreground="#6B7E74"/>

                            <Grid>
                                <Border Background="White"
CornerRadius="0"
BorderBrush="Gray"
BorderThickness="0.8"
Padding="0">
                                    <TextBox Height="30" 
            x:Name="txtTenHang" 
            TextChanged="txtTenHang_TextChanged"
            PreviewKeyDown="txtTenHang_PreviewKeyDown" Style="{StaticResource WatermarkTextBox}"
            Tag="Nhập tên hàng..."
            Text="{Binding NhapNhanh_TenHang, UpdateSourceTrigger=PropertyChanged}"
            VerticalContentAlignment="Center"
            />
                                </Border>

                                <Popup x:Name="popupGoiYTenHang"
               PlacementTarget="{Binding ElementName=txtTenHang}"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True"
               Width="{Binding ElementName=txtTenHang, Path=ActualWidth}"
               MaxHeight="150"
               IsOpen="False">

                                    <Border BorderBrush="#E1F0EC" BorderThickness="1" Background="White" CornerRadius="4">
                                        <ListBox 
                    x:Name="lstTenHangGoiY"
                    Background="Transparent"
                    BorderThickness="0"
                    SelectionChanged="lstTenHangGoiY_SelectionChanged" KeyboardNavigation.TabNavigation="None"
                    />
                                    </Border>
                                </Popup>
                            </Grid>
                        </StackPanel>

                        <!-- Đơn vị -->
                        <StackPanel Grid.Column="2" Margin="0,0,8,0">
                            <TextBlock Text="Đơn vị" Foreground="#6B7E74"/>
                            <ComboBox 
    Height="32" 
    x:Name="cboDVT"  
    VerticalContentAlignment="Center" SelectedIndex="0" LostFocus="cboDVT_LostFocus"
>
                               
                                <ComboBoxItem Content="Hộp"/>
                                <ComboBoxItem Content="Lon"/>
                                <ComboBoxItem Content="Chai"/>

                            </ComboBox>
                        </StackPanel>

                        <!-- Số lượng -->
                        <StackPanel Grid.Column="3" Margin="0,0,8,0">
                            <TextBlock Text="Số lượng" Foreground="#6B7E74"/>
                            <TextBox Height="32" x:Name="txtSoLuong" PreviewTextInput="NumberTextBox"
                                     Text="{Binding NhapNhanh_SoLuong, UpdateSourceTrigger=PropertyChanged}"
                                     HorizontalContentAlignment="Right"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Giá nhập -->
                        <StackPanel Grid.Column="4" Margin="0,0,8,0">
                            <TextBlock Text="Giá nhập" Foreground="#6B7E74"/>
                            <TextBox Height="32" x:Name="txtGiaNhap"
                                     Text="{Binding NhapNhanh_GiaNhap, UpdateSourceTrigger=PropertyChanged}"
                                     HorizontalContentAlignment="Right" PreviewTextInput="NumberValidationTextBox"
                                     VerticalContentAlignment="Center"/>
                            
                        </StackPanel>

                        <!-- Chiết khấu % -->
                        <StackPanel Grid.Column="5" Margin="0,0,8,0">
                            <TextBlock Text="Chiết khấu %" Foreground="#6B7E74"/>
                            <TextBox Height="32" x:Name="txtChietKhau" PreviewTextInput="NumberValidationTextBox"
                                     Text="{Binding NhapNhanh_CKPercent, UpdateSourceTrigger=PropertyChanged}"
                                     HorizontalContentAlignment="Right"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Số lô -->
                        <StackPanel Grid.Column="6" Margin="0,0,8,0">
                            <TextBlock Text="Số lô" Foreground="#6B7E74"/>
                            <TextBox Height="32" x:Name="txtSoLo"
                                     Text="{Binding NhapNhanh_SoLo}"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- HSD -->
                        <StackPanel Grid.Column="7" Margin="0,0,8,0">
                            <TextBlock Text="HSD" Foreground="#6B7E74"/>
                            <DatePicker x:Name="dpHSD" Height="32"/>

                        </StackPanel>

                        <!-- Nút thêm hàng -->
                        <StackPanel Grid.Column="8" VerticalAlignment="Bottom">
                            <Button Style="{StaticResource PrimaryButton}"
                                    Padding="16,4"
                                    Click="btnThemHang_Click">
                                <TextBlock Text="Thêm hàng" FontWeight="SemiBold"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

        

                <!-- ========== DATAGRID ========== -->
                <DataGrid Grid.Row="3"
                          ItemsSource="{Binding DongHangs}"
                          x:Name="dgChiTiet"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="True"
                          IsReadOnly="False"
                          RowHeaderWidth="0"
                          ColumnHeaderHeight="34"
                          MinRowHeight="30">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã"
                                            Binding="{Binding MaHang}"
                                            Width="120"
                                            IsReadOnly="True"/>

                        <DataGridTextColumn Header="Tên hàng"
                                            Binding="{Binding TenHang}"
                                            Width="2*"
                                            IsReadOnly="True"/>

                        <DataGridTextColumn Header="ĐVT"
                                            Binding="{Binding DVT}"
                                            Width="*"
                                            IsReadOnly="True"/>

                        <DataGridTextColumn Header="SL"
                            Binding="{Binding SoLuong, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"
                            ElementStyle="{StaticResource CellRight}"
                            EditingElementStyle="{StaticResource EditRight}"
                            Width="*"/>

                        <DataGridTextColumn Header="Giá nhập"
                            Binding="{Binding GiaNhap, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                            ElementStyle="{StaticResource CellRight}"
                            EditingElementStyle="{StaticResource EditRight}"
                            Width="*"/>

                        <DataGridTextColumn Header="CK %"
                            Binding="{Binding ChietKhau, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"
                            ElementStyle="{StaticResource CellRight}"
                            EditingElementStyle="{StaticResource EditRight}"
                            Width="90"/>

                        <DataGridTextColumn Header="CK tiền"
                            Binding="{Binding ChietKhauTien, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                            ElementStyle="{StaticResource CellRight}"
                            EditingElementStyle="{StaticResource EditRight}"
                            Width="*"/>

                        <DataGridTextColumn Header="VAT %"
                            Binding="{Binding VAT, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"
                            ElementStyle="{StaticResource CellRight}"
                            EditingElementStyle="{StaticResource EditRight}"
                            Width="90"/>

                        <DataGridTextColumn Header="Số lô"
                                            Binding="{Binding SoLo}"
                                            Width="120"/>

                        <DataGridTextColumn Header="HSD"
                            Binding="{Binding HSD, StringFormat={}{0:dd/MM/yyyy}}"
                            Width="130"/>

                        <DataGridTextColumn Header="Thành tiền"
                            Binding="{Binding ThanhTien, StringFormat={}{0:N0}}"
                            IsReadOnly="True"
                            ElementStyle="{StaticResource CellRight}"
                            Width="*"/>
                        <DataGridTemplateColumn Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Xóa"
                            Tag="{Binding}"
                            Click="XoaDong_Click"
                            ToolTip="Xóa dòng hàng này"
                            />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    
                </DataGrid>
            </Grid>
        </Border>

        <!-- ===== Tổng cộng (UI mới) ===== -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Cụm tổng tiền bên phải -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">

                <!-- Tổng -->
        

                <!-- Tổng thanh toán (card nổi bật) -->
                <Border Style="{StaticResource SumCard}"
                        Background="#2BB673"
                        Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Tổng thanh toán"
                                   FontSize="13"
                                   Foreground="White"/>
                        <TextBlock Text="0 ₫" x:Name="txtTongThanhToan"
                                   FontSize="20"
                                   FontWeight="Black"
                                   HorizontalAlignment="Right"
                                   Margin="0,2,0,0"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
