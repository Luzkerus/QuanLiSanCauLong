<Window x:Class="QuanLySanCauLong.LopTrinhBay.ManHinh.KhoPOS.frmNhapHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhập hàng" 
        MinWidth="1100" MinHeight="680"
        WindowStartupLocation="CenterScreen"
        Background="#F6FDF9">

    <!-- ========== RESOURCES (Watermark cho TextBox tìm kiếm) ========== -->
    <Window.Resources>
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#9AA5A0"
                                       IsHitTestVisible="False"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="watermark" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- ========== HOTKEYS ========== -->
    <Window.InputBindings>
        <!-- Ctrl+S: Lưu phiếu -->
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding LuuPhieuCommand}"/>
    </Window.InputBindings>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== Header + Actions ===== -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Nhập hàng" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="Tạo phiếu nhập kho" Foreground="#6B7E74"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <!-- Nút Danh mục hàng (trắng/viền) -->
                <Button Command="{Binding OpenDanhMucCommand}"
                        Padding="14,8" Background="White" BorderBrush="#D9D9D9"
                        BorderThickness="1" Margin="0,0,8,0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#F6F6F6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Viewbox Width="16" Height="16">
                            <Canvas Width="24" Height="24">
                                <Path Data="M9,2H15A1,1 0 0,1 16,3V5H18A1,1 0 0,1 19,6V21A1,1 0 0,1 18,22H6A1,1 0 0,1 5,21V6A1,1 0 0,1 6,5H8V3A1,1 0 0,1 9,2M10,4V5H14V4H10Z"
                                      Fill="#21382D"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Danh mục hàng" FontWeight="SemiBold"
                                   Foreground="#21382D" Margin="6,0,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Nút Lưu phiếu (xanh) -->
                <Button Command="{Binding LuuPhieuCommand}"
                        Padding="14,8" Background="#2BB673" BorderBrush="#2BB673"
                        BorderThickness="1" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#27A567"/>
                                    <Setter TargetName="bd" Property="BorderBrush" Value="#27A567"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#1E8F55"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Viewbox Width="14" Height="14">
                            <Canvas Width="24" Height="24">
                                <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="White"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Lưu phiếu" FontWeight="SemiBold" Foreground="White" Margin="6,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- ===== Thông tin phiếu ===== -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Nhà cung cấp" Foreground="#6B7E74"/>
                    <ComboBox ItemsSource="{Binding NhaCungCaps}"
                              SelectedItem="{Binding NhaCungCapChon}"
                              DisplayMemberPath="Ten" SelectedValuePath="MaNCC"
                              Height="32"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                    <TextBlock Text="Ngày phiếu" Foreground="#6B7E74"/>
                    <DatePicker SelectedDate="{Binding NgayPhieu}" Height="32"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="12,0,0,0">
                    <TextBlock Text="Ghi chú" Foreground="#6B7E74"/>
                    <TextBox Text="{Binding GhiChu}" Height="32"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== Lưới hàng hóa ===== -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="12">
            <DockPanel>
                <!-- Tìm nhanh -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBox Width="320" Style="{StaticResource WatermarkTextBox}"
                             Tag="Tìm mã/tên hàng..." Text="{Binding TuKhoaTim}"/>
                    <Button Content="Thêm" Height="32" Margin="8,0,0,0"
                            Command="{Binding ThemHangCommand}"/>
                </StackPanel>

                <DataGrid ItemsSource="{Binding DongHangs}" AutoGenerateColumns="False"
                          HeadersVisibility="Column" CanUserAddRows="False"
                          CanUserDeleteRows="True" IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã" Binding="{Binding MaHH}" Width="auto" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Tên hàng" Binding="{Binding TenHH}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="ĐVT" Binding="{Binding DonVi}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="SL" Binding="{Binding SoLuong, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="Giá nhập" Binding="{Binding GiaNhap, StringFormat={}{0:N0}, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="Thành tiền" Binding="{Binding ThanhTien, StringFormat={}{0:N0}}" IsReadOnly="True" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!-- ===== Tổng cộng ===== -->
        <Border Grid.Row="3" Background="White" CornerRadius="12" Padding="12" Margin="0,12,0,0">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <StackPanel Margin="24,0,0,0">
                        <TextBlock Text="Tổng" Foreground="#6B7E74"/>
                        <TextBlock Text="{Binding TongTruocThue, StringFormat={}{0:N0}₫}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Margin="24,0,0,0">
                        <TextBlock Text="Thuế" Foreground="#6B7E74"/>
                        <TextBlock Text="{Binding Thue, StringFormat={}{0:N0}₫}" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Margin="24,0,0,0">
                        <TextBlock Text="Tổng thanh toán" Foreground="#6B7E74"/>
                        <TextBlock Text="{Binding TongThanhToan, StringFormat={}{0:N0}₫}" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
