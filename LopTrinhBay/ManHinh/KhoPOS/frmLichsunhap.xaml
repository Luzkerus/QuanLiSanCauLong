<Window x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.KhoPOS.frmLichsunhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lịch sử nhập hàng"
        MinWidth="1000" MinHeight="680"
        WindowStartupLocation="CenterScreen"
        Background="#F6FDF9"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <!-- ========== RESOURCES ========== -->
    <Window.Resources>
        <!-- Watermark cho TextBox -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#9AA5A0"
                                       IsHitTestVisible="False"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="watermark" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Canh phải số trong lưới -->
        <Style x:Key="CellRight" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="EditRight" TargetType="TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>

        <!-- Card tổng tiền / KPI -->
        <Style x:Key="SumCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#E8F0EC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      ShadowDepth="0"
                                      Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút primary bo góc -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2BB673"/>
            <Setter Property="BorderBrush" Value="#2BB673"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#27A567"/>
                                <Setter TargetName="bd" Property="BorderBrush"  Value="#27A567"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1E8F55"/>
                                <Setter TargetName="bd" Property="BorderBrush"  Value="#1E8F55"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#16A34A"/>
                                <Setter TargetName="bd" Property="BorderBrush"  Value="#5E8F55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút ghost trắng/viền -->
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Foreground" Value="#21382D"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D9D9D9"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F6F6F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ========== LAYOUT CHÍNH ========== -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header + KPI -->
            <RowDefinition Height="Auto"/>
            <!-- Bộ lọc -->
            <RowDefinition Height="*"/>
            <!-- Nội dung -->
        </Grid.RowDefinitions>

        <!-- ===== HEADER + KPI ===== -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,12">
            <!-- Tiêu đề -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Lịch sử nhập hàng"
                               FontSize="20"
                               FontWeight="Bold"/>
                    <TextBlock Text="Theo dõi các phiếu nhập kho đã thực hiện"
                               Foreground="#6B7E74"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <!-- Xuất Excel -->
                    <Button Style="{StaticResource GhostButton}"
                            Command="{Binding XuatExcelCommand}"
                            Background="#0EA5E9"
                            BorderBrush="#0EA5E9"
                            Foreground="White">
                        <TextBlock Text="Xuất Excel" FontSize="14" FontWeight="SemiBold"/>
                    </Button>

                    <!-- Đóng form -->
                    <Button Style="{StaticResource GhostButton}"
                            Command="{Binding DongWindowCommand}"
                            Margin="8,0,0,0">
                        <TextBlock Text="Đóng" FontSize="14" FontWeight="SemiBold"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- KPI tổng quan -->
            <StackPanel Orientation="Horizontal">
                <!-- Tổng số phiếu -->
                <Border Style="{StaticResource SumCard}">
                    <StackPanel>
                        <TextBlock Text="Tổng số phiếu"
                                   FontSize="13"
                                   Foreground="#6B7E74"/>
                        <TextBlock Text="{Binding TongSoPhieu}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Tổng tiền nhập -->
                <Border Style="{StaticResource SumCard}"
                        Background="#2BB673">
                    <StackPanel>
                        <TextBlock Text="Tổng tiền nhập"
                                   FontSize="13"
                                   Foreground="White"/>
                        <TextBlock Text="{Binding TongTienNhap, StringFormat={}{0:N0} ₫}"
                                   FontSize="20"
                                   FontWeight="Black"
                                   Foreground="White"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Hôm nay -->
                <Border Style="{StaticResource SumCard}">
                    <StackPanel>
                        <TextBlock Text="Nhập hôm nay"
                                   FontSize="13"
                                   Foreground="#6B7E74"/>
                        <TextBlock Text="{Binding TongTienHomNay, StringFormat={}{0:N0} ₫}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- ===== BỘ LỌC ===== -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="12"
                Padding="12"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Từ ngày -->
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Từ ngày" Foreground="#6B7E74"/>
                    <DatePicker SelectedDate="{Binding TuNgay}" Height="32" Width="160"/>
                </StackPanel>

                <!-- Đến ngày -->
                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="Đến ngày" Foreground="#6B7E74"/>
                    <DatePicker SelectedDate="{Binding DenNgay}" Height="32" Width="160"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,12,0">
                    <TextBlock Text="Từ khóa" Foreground="#6B7E74"/>

                    <Border Background="White"
                            CornerRadius="2"
                            BorderBrush="#6B7E74"
                            BorderThickness="1.2"
                            Padding="1">
                        <TextBox Style="{StaticResource WatermarkTextBox}"
                             Background="Transparent"
                             BorderThickness="0"
                             Tag="Nhập số phiếu / nhà cung cấp..."
                             Text="{Binding TuKhoaTim}"
                             TextChanged="TextBox_TextChanged"/>
                    </Border>
                </StackPanel>

                <!-- Nút actions -->
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            VerticalAlignment="Bottom">
                    <Button Style="{StaticResource PrimaryButton}"
                            Command="{Binding TimKiemCommand}">
                        <TextBlock Text="Lọc" FontWeight="SemiBold"/>
                    </Button>

                    <Button Style="{StaticResource GhostButton}"
                            Command="{Binding XoaLocCommand}"
                            Margin="8,0,0,0">
                        <TextBlock Text="Xóa lọc"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== NỘI DUNG CHÍNH: DANH SÁCH + CHI TIẾT ===== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.4*"/>
                <!-- Danh sách phiếu -->
                <ColumnDefinition Width="0.04*"/>
                <!-- space -->
                <ColumnDefinition Width="1.8*"/>
                <!-- Chi tiết phiếu -->
            </Grid.ColumnDefinitions>

            <!-- Danh sách phiếu nhập -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tiêu đề nhỏ -->
                    <TextBlock Grid.Row="0"
                               Text="Danh sách phiếu nhập"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <!-- DataGrid phiếu nhập -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding DanhSachPhieuNhap}"
                              SelectedItem="{Binding PhieuNhapDangChon}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              RowHeaderWidth="0"
                              ColumnHeaderHeight="34"
                              MinRowHeight="28">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Số phiếu"
                                                Binding="{Binding SoPN}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Ngày nhập"
                                                Binding="{Binding NgayNhap, StringFormat={}{0:dd/MM/yyyy}}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Nhà cung cấp"
                                                Binding="{Binding TenNCC}"
                                                Width="2*"/>
                            <DataGridTextColumn Header="Tổng tiền"
                                                Binding="{Binding TongTien, StringFormat={}{0:N0}}"
                                                Width="*"
                                                ElementStyle="{StaticResource CellRight}"/>
                            <DataGridTextColumn Header="Ghi chú"
                                                Binding="{Binding GhiChu}"
                                                Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Chi tiết phiếu nhập -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="12"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- header -->
                        <RowDefinition Height="Auto"/>
                        <!-- info -->
                        <RowDefinition Height="*"/>
                        <!-- grid -->
                        <RowDefinition Height="Auto"/>
                        <!-- tổng -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Chi tiết phiếu nhập"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PhieuNhapDangChon.SoPN, StringFormat=Số phiếu: {0}}"
                                       Foreground="#6B7E74"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding PhieuNhapDangChon.NgayNhap, StringFormat={}{0:dd/MM/yyyy}}"
                                       Foreground="#6B7E74"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding PhieuNhapDangChon.TenNCC}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>

                    <!-- Thông tin phiếu (dạng 2 cột nhỏ) -->
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nhà cung cấp -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Nhà cung cấp"
                                       Foreground="#6B7E74"
                                       FontSize="13"
                                       Margin="0,0,0,4"/>

                            <Border Background="White"
                                    BorderBrush="#D4E1DB"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="8">
                                <TextBlock Text="{Binding PhieuNhapDangChon.TenNCC}"
                                           FontWeight="SemiBold"
                                           FontSize="16"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Ghi chú -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Ghi chú"
                                       Foreground="#6B7E74"
                                       FontSize="13"
                                       Margin="0,0,0,4"/>

                            <Border Background="White"
                                    BorderBrush="#D4E1DB"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="8">
                                <TextBlock Text="{Binding PhieuNhapDangChon.GhiChu}"
                                           FontSize="15"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid chi tiết -->
                    <DataGrid Grid.Row="2" Margin="0,8,0,0"
                              ItemsSource="{Binding ChiTietPhieuNhap}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              RowHeaderWidth="0"
                              ColumnHeaderHeight="34"
                              MinRowHeight="26">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã hàng"
                                                Binding="{Binding MaHH}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Tên hàng"
                                                Binding="{Binding TenHH}"
                                                Width="2*"/>
                            <DataGridTextColumn Header="ĐVT"
                                                Binding="{Binding DonVi}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Số lượng"
                                                Binding="{Binding SoLuong, StringFormat={}{0:N0}}"
                                                Width="*"
                                                ElementStyle="{StaticResource CellRight}"/>
                            <DataGridTextColumn Header="Giá nhập"
                                                Binding="{Binding GiaNhap, StringFormat={}{0:N0}}"
                                                Width="*"
                                                ElementStyle="{StaticResource CellRight}"/>
                            <DataGridTextColumn Header="Thành tiền"
                                                Binding="{Binding ThanhTien, StringFormat={}{0:N0}}"
                                                Width="*"
                                                ElementStyle="{StaticResource CellRight}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Tổng tiền phiếu đang chọn -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,8,0,0">
                        <Border Style="{StaticResource SumCard}">
                            <StackPanel>
                                <TextBlock Text="Tổng tiền phiếu"
                                           FontSize="13"
                                           Foreground="#6B7E74"/>
                                <TextBlock Text="{Binding PhieuNhapDangChon.TongTien, StringFormat={}{0:N0} ₫}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
