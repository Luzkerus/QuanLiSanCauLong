<UserControl x:Class="QuanLiSanCauLong.LopTrinhBay.ManHinh.KhoPOS.UcKhoDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1080"
             Background="#F6FDF9">

    <!-- ============== RESOURCES ============== -->
    <UserControl.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="ColText"   Color="#21382D"/>
        <SolidColorBrush x:Key="ColSub"    Color="#6B7E74"/>
        <SolidColorBrush x:Key="ColCard"   Color="White"/>
        <SolidColorBrush x:Key="ColBorder" Color="#E8F0EC"/>
        <SolidColorBrush x:Key="ColAccent" Color="#15A06D"/>

        <!-- Bổ sung để dùng chung với CardStyle giống ucThanhToan -->
        <SolidColorBrush x:Key="ColLine" Color="#E8F0EC"/>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Card thường (để KpiCardStyle base on giống ucThanhToan) -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ColCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="12,0,12,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Card KPI nổi bật hơn (shadow + scale on hover) GIỐNG ucThanhToan -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Typography cho KPI (đồng bộ ucThanhToan) -->
        <Style x:Key="KpiTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColSub}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Watermark TextBox -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="wm"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#9AA5A0"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="wm" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="wm" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút dùng chung (Primary – xanh) -->
        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource ColAccent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColAccent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#0DAA78"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14"
                                                          ShadowDepth="0"
                                                          Opacity="0.30"
                                                          Color="#0DAA78"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút phụ (Secondary – trắng viền xám) -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F3F4F6"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#D1D5DB"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10"
                                                          ShadowDepth="0"
                                                          Opacity="0.18"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút đỏ Hủy (Danger) -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="BorderBrush" Value="#EF4444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#DC2626"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#DC2626"/>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14"
                                                          ShadowDepth="0"
                                                          Opacity="0.30"
                                                          Color="#DC2626"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========== STYLE CARD SẢN PHẨM POS (HOVER NỔI LÊN) ========== -->
        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="Width" Value="230"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColLine}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.20"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#C2E4D5"/>
                    <Setter Property="Background" Value="#F7FFFB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Product card (dùng cho tab POS) -->
        <DataTemplate x:Key="ProductCardTemplate">
            <Border Style="{StaticResource ProductCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Ảnh / placeholder -->
                    <Border Grid.Row="0"
                            Background="#F1F7F4"
                            CornerRadius="12"
                            Margin="0,0,0,10"/>

                    <!-- Tên sản phẩm -->
                    <TextBlock Grid.Row="1"
                               Text="{Binding TenHH}"
                               Margin="0,0,0,4"
                               TextWrapping="Wrap"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="{StaticResource ColText}"/>

                    <!-- Giá + tồn + nút -->
                    <StackPanel Grid.Row="2">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,6">
                            <TextBlock Text="{Binding GiaBan, StringFormat={}{0:N0}đ}"
                                       Foreground="{StaticResource ColText}"
                                       FontWeight="Bold"
                                       FontSize="14"/>
                            <Border Background="#EDF7F1"
                                    CornerRadius="999"
                                    Padding="8,2"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding SoLuongHienCo}"
                                           Foreground="{StaticResource ColSub}"
                                           FontSize="11"/>
                            </Border>
                        </StackPanel>

                        <Button Style="{StaticResource MainButton}"
                                Margin="0,0,0,0"
                                Content="Thêm vào giỏ"
                                HorizontalAlignment="Stretch"
                                Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Cart row -->
        <DataTemplate x:Key="CartRowTemplate">
            <Grid Margin="0,6,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{Binding TenHH}" FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                        <Button Background="#E8F0EC" BorderBrush="#E8F0EC" Padding="6,2" Content="–"
                                Command="{Binding DataContext.DecreaseQtyCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"/>
                        <TextBlock Text="{Binding SoLuong}" Width="28" TextAlignment="Center" VerticalAlignment="Center" Margin="6,0"/>
                        <Button Background="#E8F0EC" BorderBrush="#E8F0EC" Padding="6,2" Content="+"
                                Command="{Binding DataContext.IncreaseQtyCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"/>
                        <TextBlock Text="{Binding ThanhTien, StringFormat={}{0:N0}đ}" Margin="12,0,0,0"
                                   VerticalAlignment="Center" Foreground="{StaticResource ColText}"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" Content="✕" Background="Transparent" BorderBrush="{x:Null}" Foreground="#6B7E74"
                        Command="{Binding DataContext.RemoveCartItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <!-- ============== LAYOUT ============== -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- KPIs -->
            <RowDefinition Height="*"/>
            <!-- DS sản phẩm + Giỏ hàng -->
        </Grid.RowDefinitions>

        <!-- Header + Actions -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <!-- Tiêu đề bên trái -->
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Kho &amp; POS Nước uống" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Quản lý kho hàng và bán nước uống" FontWeight="SemiBold" Foreground="#6B7E74"/>
            </StackPanel>

            <!-- Nhóm nút bên phải -->
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">

                <!-- Nút Lịch sử nhập -->
                <Button Click="btnLichSuNhap"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,8,0"
                        Padding="32,14"
                        MinWidth="120"
                        Height="50"
                        FontSize="16"
                        Content="Lịch sử nhập"/>
                
                <!-- Nút Nhập hàng -->
                <Button Click="btnNhapHang"
                        Style="{StaticResource MainButton}"
                        Padding="56,14"
                        MinWidth="120"
                        Height="50"
                        FontSize="16"
                        Content="Nhập hàng"/>

            </StackPanel>
        </DockPanel>

        <!-- ===== KPI (effect + icon position như ucThanhToan) ===== -->
        <UniformGrid Grid.Row="1" Columns="3" Margin="12,10,12,0">

            <!-- Tổng giá trị tồn -->
            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Tổng giá trị tồn" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding Dashboard.TongGiaTriTon, StringFormat={}{0:N0}₫}"
                                   Style="{StaticResource KpiValue}"/>
                    </StackPanel>

                    <!-- Icon bên phải -->
                    <Border Grid.Column="1" Background="#E8F5EE" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="📦" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Doanh thu POS hôm nay -->
            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Doanh thu POS hôm nay" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding Dashboard.DoanhThuPOSHomNay, StringFormat={}{0:N0}₫}"
                                   Style="{StaticResource KpiValue}"/>
                    </StackPanel>

                    <Border Grid.Column="1" Background="#FFF4E5" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="💰" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Số mặt hàng -->
            <Border Style="{StaticResource KpiCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Số mặt hàng" Style="{StaticResource KpiTitle}"/>
                        <TextBlock Text="{Binding Dashboard.SoMatHang}"
                                   Style="{StaticResource KpiValue}"/>
                    </StackPanel>

                    <Border Grid.Column="1" Background="#EAF3FF" CornerRadius="12" Padding="10" Margin="8,0,0,28">
                        <TextBlock Text="🛒" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

        </UniformGrid>

        <!-- DS sản phẩm (2 tab) + Giỏ hàng -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <!-- Trái: Danh sách sản phẩm -->
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Border Style="{StaticResource Card}" Padding="12" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#E8F5EE" CornerRadius="999" Width="28" Height="28" Margin="0,0,8,0">
                            <TextBlock Text="🧃" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Danh sách sản phẩm" FontSize="16" FontWeight="Bold" Foreground="{StaticResource ColText}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <TabControl Background="Transparent" BorderThickness="0">
                        <!-- POS -->
                        <TabItem>
                            <TabItem.Header>
                                <TextBlock Text="Bán hàng (POS)"/>
                            </TabItem.Header>
                            <StackPanel Margin="0,8,0,0">
                                <Border Background="White"
                                        CornerRadius="8"
                                        BorderBrush="#C7D7D0"
                                        BorderThickness="1.5"
                                        Padding="6"
                                        Margin="0,0,0,12">

                                    <TextBox Style="{StaticResource WatermarkTextBox}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Height="26"
                                             FontSize="14"
                                             Tag="Tìm sản phẩm"
                                             Text="{Binding PosSearch, UpdateSourceTrigger=PropertyChanged}"/>
                                </Border>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding PosProducts}" ItemTemplate="{StaticResource ProductCardTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Margin="0,4,0,0"
                                                           HorizontalAlignment="Left"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </TabItem>

                        <!-- Tab QUẢN LÝ KHO -->
                        <TabItem>
                            <TabItem.Header>
                                <TextBlock Text="Quản lý kho"/>
                            </TabItem.Header>

                            <!-- Bọc toàn panel trong Grid để tránh ScrollViewer che mất -->
                            <Grid Margin="0,8,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Tìm kiếm -->
                                    <RowDefinition Height="*"/>
                                    <!-- DataGrid -->
                                </Grid.RowDefinitions>

                                <!-- Ô tìm kiếm -->
                                <Border Background="White"
                                    CornerRadius="8"
                                    BorderBrush="#C7D7D0"
                                    BorderThickness="1"
                                    Padding="6"
                                    Margin="0,0,0,12">

                                    <TextBox Tag="Tìm theo tên / mã hàng"
                                             Style="{StaticResource WatermarkTextBox}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             FontSize="14"
                                             Height="26"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding KhoSearch, UpdateSourceTrigger=PropertyChanged}"/>
                                </Border>

                                <!-- Bảng quản lý kho -->
                                <DataGrid Grid.Row="1"
                                          ItemsSource="{Binding KhoProducts}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="None"
                                          BorderBrush="{StaticResource ColBorder}"
                                          BorderThickness="1"
                                          RowHeight="32"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#F1F5F9"/>
                                            <Setter Property="Foreground" Value="{StaticResource ColText}"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource ColBorder}"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                            <Setter Property="Padding" Value="8,4"/>
                                        </Style>
                                    </DataGrid.Resources>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã hàng" Binding="{Binding MaHH}" Width="65"/>
                                        <DataGridTextColumn Header="Tên hàng" Binding="{Binding TenHH}" Width="1*"/>
                                        <DataGridTextColumn Header="ĐVT" Binding="{Binding DonViTinh}" Width="*"/>

                                        <DataGridTextColumn Header="Giá nhập"
                                                            Binding="{Binding GiaNhap, StringFormat={}{0:N0} đ}"
                                                            Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Giá bán"
                                                            Binding="{Binding GiaBan, StringFormat={}{0:N0} đ}"
                                                            Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Tồn" Binding="{Binding SoLuongHienCo}" Width="45">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Lần nhập cuối"
                                                            Binding="{Binding NgayNhapCuoi, StringFormat={}{0:dd/MM/yyyy}}"
                                                            Width="*"/>

                                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Border>
            </StackPanel>

            <!-- Phải: Giỏ hàng -->
            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                            <Border Background="#E8F5EE" CornerRadius="999" Width="26" Height="26" Margin="0,0,8,0">
                                <TextBlock Text="🛒" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Giỏ hàng" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource ColText}"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding CartItems}" ItemTemplate="{StaticResource CartRowTemplate}">
                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </ControlTemplate>
                            </ItemsControl.Template>
                        </ItemsControl>

                        <Separator Margin="0,12,0,12" Background="{StaticResource ColBorder}" Height="1"/>

                        <!-- Tổng cộng  -->
                        <StackPanel Margin="0,8,0,12">

                            <!-- Dòng label nhỏ phía trên -->
                            <TextBlock Text="Tổng cộng"
                               FontSize="13"
                               Foreground="{StaticResource ColSub}"
                               Margin="0,0,0,2"/>

                            <!-- Dòng số tiền + style đẹp -->
                            <DockPanel LastChildFill="False">
                                <TextBlock Text="Tổng tiền:"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource ColText}"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Left"/>

                                <TextBlock Text="{Binding CartTotal, StringFormat={}{0:N0} đ}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#0DAA78"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Right"/>
                            </DockPanel>

                            <!-- Divider -->
                            <Border Height="1"
                                Background="{StaticResource ColBorder}"
                                Margin="0,10,0,4"/>
                        </StackPanel>


                        <!-- Hai nút Thanh toán + Hủy đơn nằm ngang -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Style="{StaticResource MainButton}"
                                    Content="Thanh toán"
                                    Click="btnThanhToan"
                                    Margin="0,0,4,0"
                                    Height="42"/>

                            <Button Grid.Column="1"
                                    Style="{StaticResource DangerButton}"
                                    Content="Hủy đơn"
                                    
                                    Margin="4,0,0,0"
                                    Height="42"/>
                        </Grid>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
